---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import { buildSeo } from "../lib/seo";

import services from "../data/services.json";
import zones from "../data/zones.json";
import villes from "../data/villes.json";

const seo = buildSeo({
  pageType: "home",
  origin: Astro.url.origin,
  pathname: Astro.url.pathname
});

// (optionnel) zones + 6 villes “vitrine” pour liens rapides
const zoneLinks = zones.map((z) => ({ slug: z.slug, name: z.name }));
const featuredCities = villes.slice(0, 6);
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  canonical={seo.canonical}
  ogImage={seo.ogImage}
  schema={seo.schema}
>
	<!-- Slider
	============================================= -->
	<section id="slider" class="slider-element" style="background: url('/_assets_/images/hero.jpg') center center no-repeat; background-size: cover; height: 700px">
		<div class="vertical-middle">
			<div class="container">
				<div class="row py-5">
					<div class="col-xl-6 col-lg-5 col-md-2"></div>
					<div class="col-xl-6 col-lg-7 col-md-10">
						<div class="slider-title dark">
							<h1 class="">Plus de demandes pour votre entreprise de nettoyage (60/95)</h1>
							<p>
								SEO local (Google &amp; Maps), Google Ads/Meta Ads et optimisation de conversion pour transformer votre visibilité en
								<strong>appels</strong> et <strong>demandes de devis</strong>.
								Approche pilotée, sans promesses irréalistes.
							</p>
						</div>

						<!-- Form (audit) -->
						<div class="card border-0 p-3 shadow-lg" style="background-color: rgba(255,255,255,0.85)">
							<div class="form-widget card-body" data-alert-type="inline">
								<div class="form-result"></div>

								<form id="form-cleaning" name="form-cleaning" action="include/form.php" method="post" class="row form-cleaning mb-0">
									<div class="form-process">
										<div class="form-cleaning-loader css3-spinner" style="position: absolute;">
											<div class="css3-spinner-double-bounce1"></div>
											<div class="css3-spinner-double-bounce2"></div>
										</div>
									</div>

									<div class="col-sm-6">
										<div class="input-group form-group">
											<span class="input-group-text bg-color text-white">
												<img src="/_assets_/images/icons/cleaner2.svg" alt="" width="20">
											</span>
											<select class="required form-select" name="form-cleaning-service" id="form-cleaning-service">
												<option value="" disabled selected>-- Votre priorité --</option>
												{services.map((s) => (
													<option value={s.name}>{s.name}</option>
												))}
												<option value="Je ne sais pas (à définir ensemble)">Je ne sais pas (à définir ensemble)</option>
											</select>
										</div>
									</div>

									<div class="col-sm-6">
										<div class="input-group form-group">
											<span class="input-group-text bg-color text-white"><i class="bi-map"></i></span>
											<input
												type="text"
												name="form-cleaning-location"
												id="form-cleaning-location"
												class="form-control required"
												value=""
												placeholder="Ville / zone (ex: Chantilly, Sarcelles...)"
											>
										</div>
									</div>

									<div class="col-sm-6">
										<div class="input-group form-group">
											<span class="input-group-text bg-color text-white"><i class="bi-briefcase"></i></span>
											<input
												type="text"
												name="form-cleaning-company"
												id="form-cleaning-company"
												class="form-control"
												value=""
												placeholder="Entreprise (optionnel)"
											>
										</div>
									</div>

									<div class="col-sm-6">
										<div class="form-group input-group">
											<span class="input-group-text bg-color text-white"><i class="bi-chat-left-text"></i></span>
											<input
												type="text"
												name="form-cleaning-goal"
												id="form-cleaning-goal"
												class="form-control required"
												value=""
												placeholder="Objectif (appels, devis, récurrence...)"
											>
										</div>
									</div>

									<div class="col-sm-6">
										<div class="input-group form-group">
											<span class="input-group-text bg-color text-white"><i class="bi-envelope-paper"></i></span>
											<input type="email" name="form-cleaning-email" id="form-cleaning-email" class="form-control required" value="" placeholder="Votre email">
										</div>
									</div>

									<div class="col-sm-6">
										<div class="input-group form-group">
											<span class="input-group-text bg-color text-white"><i class="bi-telephone-outbound"></i></span>
											<input type="text" name="form-cleaning-phone" id="form-cleaning-phone" class="form-control required" value="" placeholder="Téléphone">
