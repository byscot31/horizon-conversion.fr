// src/layouts/LayoutPro.astro
/**
 * LayoutPro.astro ‚Äî SEO-ready (Pro)
 * Objectif : distinguer la partie "pro" (B2B) du site "artisans" (B2C),
 * tout en gardant la base technique (canonical, robots, OG, JSON-LD).
 *
 * Usage :
 * <LayoutPro title="..." description="..." canonical="/pro/..." jsonLd={[...]} noindex={false}>
 *   ...page...
 * </LayoutPro>
 */

import MainMenuPro from "@components/MainMenuPro.astro";

const {
  title = "Horizon Conversion ‚Äî Consultant webmarketing",
  description = "Consultant webmarketing : acquisition de leads (SEO local, Google Ads) et optimisation conversion (CRO) dans l‚ÄôOise (60) et le Val-d‚ÄôOise (95).",
  canonical,
  ogImage = "/images/og-default.jpg",
  noindex = false,
  jsonLd = null, // object ou array
} = Astro.props;

// ENV
const SITE_URL =
  import.meta.env.PUBLIC_SITE_URL ??
  (Astro.site ? Astro.site.toString().replace(/\/$/, "") : "");

const BRAND_NAME = import.meta.env.PUBLIC_BRAND_NAME ?? "Horizon Conversion";

// PRO ENV (optionnels)
const REGION_LABEL = import.meta.env.PUBLIC_REGION_LABEL ?? "Oise (60) & Val-d‚ÄôOise (95)";
const PRO_PHONE = import.meta.env.PUBLIC_PRO_PHONE ?? import.meta.env.PUBLIC_PHONE ?? "+33660921008";
const PRO_PHONE_DISPLAY = import.meta.env.PUBLIC_PRO_PHONE_DISPLAY ?? import.meta.env.PUBLIC_PHONE_DISPLAY ?? "06 60 92 10 08";

// Helpers
const stripUtm = (urlStr) => {
  try {
    const u = new URL(urlStr);
    ["utm_source","utm_medium","utm_campaign","utm_term","utm_content","gclid","fbclid"].forEach((k) => u.searchParams.delete(k));
    u.hash = "";
    return u.toString();
  } catch {
    return urlStr;
  }
};

const ensureTrailingSlash = (urlStr) => {
  try {
    const u = new URL(urlStr);
    if (!u.pathname.endsWith("/")) u.pathname += "/";
    return u.toString();
  } catch {
    return urlStr;
  }
};

const canonicalRaw =
  canonical ??
  (SITE_URL ? `${SITE_URL}${Astro.url.pathname}` : Astro.url.toString());

const canonicalUrl = ensureTrailingSlash(stripUtm(canonicalRaw));

const ogImageUrl = ogImage?.startsWith("http")
  ? ogImage
  : (SITE_URL ? `${SITE_URL}${ogImage}` : ogImage);

const telHref = `tel:${String(PRO_PHONE).replace(/\s+/g, "")}`;

// JSON-LD: accepte object/array, sinon null
const jsonLdPayload =
  Array.isArray(jsonLd) ? jsonLd :
  (jsonLd && typeof jsonLd === "object") ? jsonLd :
  null;

// Robots : noindex MAIS follow pour conserver le maillage interne crawlable
const robotsContent = noindex ? "noindex,follow" : "index,follow";

// UX helpers
const pathname = Astro.url?.pathname || "/";
const isPro = pathname.startsWith("/pro");
const proNav = [
  { href: "/pro/", label: "Accueil Pro" },
  { href: "/pro/seo-local/", label: "SEO local" },
  { href: "/pro/google-ads/", label: "Google Ads" },
  { href: "/pro/cro/", label: "CRO" },
];

const isActive = (href) => pathname === href || pathname.startsWith(href);
