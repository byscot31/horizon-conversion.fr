---
// src/pages/etudes-de-cas/index.astro

import PageLayout from "../../layouts/PageLayout.astro";
import cases from "../../data/cases.json";
import ctas from "../../data/ctas.json";
import site from "../../data/site.json";
---

<PageLayout
  title={`Résultats — ${site.brand}`}
  description="Exemples d’actions et résultats. Clair. Mesuré."
>
  <section class="section bg-transparent m-0" style="padding: 80px 0;">
    <div class="container">
      <div class="badge rounded-pill badge-default">Résultats</div>
      <h1 class="text-transform-none ls-0 mt-3">Du concret</h1>
      <p class="lead mb-4">Ce qu’on met en place. Et ce que ça change.</p>

      <div class="row g-4">
        {cases.map(c => (
          <div class="col-md-6">
            <a href={`/etudes-de-cas/${c.slug}/`} class="text-decoration-none">
              <div class="p-4 rounded-6 bg-white shadow-sm h-100">
                <div class="text-contrast-600 small mb-2">{c.result}</div>
                <h3 class="text-transform-none ls-0 mb-2">{c.title}</h3>
                <p class="mb-0 text-contrast-600">{c.summary}</p>
              </div>
            </a>
          </div>
        ))}
      </div>

      <div class="mt-5 text-center">
        <a href={ctas.primary.href} class="button button-rounded">{ctas.primary.label}</a>
      </div>
    </div>
  </section>
</PageLayout>