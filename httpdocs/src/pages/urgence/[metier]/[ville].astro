            <p class="text-2xl font-bold text-green-600">
              {personaLocal?.etude === 'electricien-beauvais' && "+400% de visibilit√©"}
              {personaLocal?.etude === 'menuisier-chambly' && "+500% de devis"}
              {personaLocal?.etude === 'plombier-meru' && "+650% d'appels"}
              {personaLocal?.etude === 'caviste-cergy' && "+30% de clients"}
              {personaLocal?.etude === 'coiffeuse-argenteuil' && "+35% de clients"}
              {personaLocal?.etude === 'transport-compiegne' && "+150% de devis"}
              {!personaLocal && (metier.id === 'artisans' ? "+650% d'appels" : "+30% de clients")}
            </p>
          </div>

          <!-- Lien vers l'√©tude correspondante -->
          <a
              href={`/etudes-de-cas/${personaLocal?.etude || premierCasDuMetier}`}
              class="text-primary-600 hover:underline mt-4 inline-block"
          >
            Voir son histoire compl√®te ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Villes alentours -->
  <section class="py-16">
    <div class="container-custom">
      <h2 class="text-2xl font-bold text-center mb-8">Nous intervenons aussi dans les environs</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 max-w-3xl mx-auto">
        {ville.alentours.map(alentour => {
          const nomAlentour = typeof alentour === 'string' ? alentour.split(' (')[0] : alentour;
          return (
              <span class="bg-white px-3 py-1 rounded-full text-sm border border-gray-200 hover:border-primary-300 transition-colors">
            {nomAlentour}
          </span>
          );
        })}
      </div>
    </div>
  </section>

  <!-- CTA flottant mobile -->
  <div class="fixed bottom-0 left-0 right-0 bg-white shadow-lg p-4 md:hidden z-50 border-t border-red-200">
    <div class="flex gap-4">
      <a href="tel:0660921008" class="flex-1 bg-red-600 text-white py-3 rounded-full font-bold text-center animate-pulse">
        üìû APPELER
      </a>
      <a href="/contact" class="flex-1 bg-primary-600 text-white py-3 rounded-full font-bold text-center">
        RAPPEL
      </a>
    </div>
  </div>
</Layout>