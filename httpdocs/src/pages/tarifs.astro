---
// src/pages/tarifs.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";

const seo = {
  title: "Tarifs Horizon Conversion : packs clairs (SEO local, Ads, pages, suivi) — 60/95",
  description:
    "Tarifs et périmètre : Pack Démarrage (à partir de 1 200€ HT) + Pack Croissance (à partir de 500€ HT/mois). Options : Ads, pages, SEO local, suivi appels & formulaires. Sud Oise (60) / Nord Val-d'Oise (95).",
  canonical: "https://horizon-conversion.fr/tarifs/",
};

const breadcrumbs = [{ name: "Tarifs", url: "/tarifs/" }];

// Tu peux ajuster facilement ici si besoin
const pricing = {
  demarrage: {
    title: "Pack Démarrage",
    subtitle: "Le plus demandé",
    price: "1 200 € HT",
    tenure: "À partir de",
    bullets: [
      "<strong>Audit</strong> + plan d’actions priorisé",
      "<strong>SEO local</strong> (bases + corrections rapides)",
      "<strong>Page</strong> optimisée pour appels & formulaires",
      "<strong>Suivi</strong> avancé des conversions",
      "Support email & téléphone",
    ],
    ctaText: "Demander un audit (gratuit)",
    ctaHref: "/audit-gratuit",
  },
  croissance: {
    title: "Pack Croissance",
    price: "500 € HT / mois",
    tenure: "À partir de",
    note1: "Hors budget publicitaire",
    note2: "Engagement conseillé : 3 mois",
    bullets: [
      "<strong>SEO local</strong> + contenus locaux",
      "<strong>Annonces</strong> Google/Meta (mise en place + optimisation)",
      "<strong>2–3 pages</strong> qui convertissent (selon besoin)",
      "<strong>Suivi</strong> appels / formulaires (pilotage simple)",
      "Support email & téléphone",
    ],
    ctaText: "Être rappelé",
    ctaHref: "/contact/?cta=rappel",
  },
};

const options = [
  {
    title: "Landing page supplémentaire",
    desc: "Si vous avez plusieurs services / zones à couvrir (et qu’on veut convertir mieux).",
    meta: "Sur devis (selon contenu & structure)",
    icon: "bi-window",
  },
  {
    title: "Google Ads : mise en place",
    desc: "Structure, ciblage, annonces, conversions, budget. (Idéal si vous voulez des demandes plus vite.)",
    meta: "Sur devis (selon compte / objectifs)",
    icon: "bi-bullseye",
  },
  {
    title: "Meta Ads (Facebook/Instagram)",
    desc: "Utile si l’offre est simple & visuelle, avec une page adaptée derrière.",
    meta: "Sur devis",
    icon: "bi-instagram",
  },
  {
    title: "SEO local : pages villes / services",
    desc: "Pour gagner en visibilité sur plusieurs communes (60/95) et capter plus de recherches.",
    meta: "Sur devis (selon volume)",
    icon: "bi-geo-alt",
  },
  {
    title: "Optimisation fiche Google (GBP)",
    desc: "Catégories, services, contenus, posts, cohérence locale. Objectif : plus d’appels.",
    meta: "Sur devis",
    icon: "bi-map",
  },
  {
    title: "Suivi conversions renforcé",
    desc: "Tableau de bord + suivi fin des sources (Google / Ads / pages).",
    meta: "Sur devis",
    icon: "bi-graph-up",
  },
];
---

<BaseLayout seo={seo} breadcrumbs={breadcrumbs}>
	<!-- Page Title
  ============================================= -->
	<section
		class="page-title page-title-parallax parallax scroll-detect page-title-center dark include-header include-topbar"
		style="padding-bottom: 140px;"
	>
		<img src="/assets/images/hero/page-title.jpg" class="parallax-bg" alt="Tarifs Horizon Conversion" />

		<div class="container position-relative">
			<div class="page-title-row">
				<div class="page-title-content">
					<div class="badge rounded-pill border border-light text-light">Tarifs</div>
					<h1>Des packs clairs. Sans surprise.</h1>
					<div class="mt-3 small text-white-50">
						Horizon Conversion • Sud Oise (60) & Nord Val-d’Oise (95)
					</div>
				</div>

				<Breadcrumbs items={breadcrumbs} />
			</div>
		</div>

		<div
			class="video-overlay z-1"
			style="background-image: linear-gradient(to top, rgba(254,150,3,0.35), #39384D);"
		></div>
	</section>
	<!-- .page-title end -->

	<!-- Content
  ============================================= -->
	<section id="content">
		<div class="content-wrap py-0 overflow-visible">

			<!-- Card “Hero”
      ============================================= -->
			<div class="card mx-auto mw-md border-0 shadow rounded-4 card-seo-about mb-5 mb-lg-0">
				<div class="card-body p-5">
					<div class="row align-items-center">
						<div class="col-md-7">
							<div class="heading-block border-bottom-0 mb-0">
								<div class="badge rounded-pill badge-default">Tarifs</div>
								<h2 class="text-transform-none ls-0 mb-3">Vous payez pour des demandes, pas pour du flou</h2>
								<p class="text-muted mb-4">
									Les tarifs dépendent surtout de l’existant (site, fiche Google, historique pubs) et du niveau d’accompagnement.
									L’audit gratuit fixe le bon périmètre : <strong>quoi faire en premier</strong>, et ce qui peut bouger vite.
								</p>

								<a href="/audit-gratuit" class="button button-rounded text-transform-none m-0 ls-0 me-2">
									Demander un audit (gratuit)
								</a>
								<a
									href="/contact/?cta=rappel"
									class="button button-rounded button-light text-dark bg-white border text-transform-none m-0 ls-0"
								>
									Être rappelé
								</a>

								<div class="mt-4 small text-muted">
									Sans engagement • Plan d’actions (1 page) • Suivi appels + formulaires
								</div>
							</div>
						</div>

						<div class="col-md-5 mt-4 mt-md-0">
							<div
								class="p-4 rounded-4"
								style="background: var(--cnvs-contrast-0); border: 1px solid rgba(0,0,0,0.06);"
							>
								<div class="small text-muted mb-1">Inclus dans l’audit gratuit</div>
								<ul class="iconlist text-muted mb-0">
									<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Les 2–3 blocages principaux</li>
									<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Un ordre de priorité clair</li>
									<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Des exemples de corrections</li>
									<li class="d-block"><i class="fa-solid fa-check text-smaller me-0 color"></i> La recommandation du pack</li>
								</ul>
							</div>
						</div>

					</div>
				</div>
			</div>

			<!-- Pricing
      ============================================= -->
			<div class="section bg-transparent m-0 pt-4">
				<div class="container">
					<div class="heading-block border-bottom-0 text-center mx-auto" style="max-width: 780px;">
						<div class="badge rounded-pill badge-default">Packs</div>
						<h2 class="text-transform-none ls-0 mb-3">Choisissez selon votre objectif</h2>
						<p class="text-muted mb-0">
							<strong>Démarrage</strong> pour poser des bases solides + convertir.
							<strong>Croissance</strong> pour accélérer en continu (SEO + Ads + pages + optimisations).
						</p>
					</div>

					<div class="row g-4 mt-4 align-items-stretch">
						<!-- Pack Démarrage -->
						<div class="col-lg-6 d-flex">
							<div class="pricing-box w-100">
								<div class="pricing-title">
									<img class="mb-2 bg-transparent rounded-0" src="/assets/images/icons/man.svg" alt="Pack Démarrage" width="50" />
									<h3>{pricing.demarrage.title}</h3>
									<span>{pricing.demarrage.subtitle}</span>
								</div>

								<div class="pricing-price">
									<span class="price-tenure">{pricing.demarrage.tenure}</span>
									<span class="price-unit">{pricing.demarrage.price}</span>
								</div>

								<div class="pricing-features border-0 bg-transparent">
									<ul>
                    {pricing.demarrage.bullets.map((b) => (
											<li set:html={`<i class="fa-solid fa-check-circle color me-2"></i>${b}`}></li>
                    ))}
									</ul>
								</div>

								<div class="pricing-action">
									<a
										href={pricing.demarrage.ctaHref}
										class="button button-large button-rounded w-100 text-transform-none m-0 ls-0"
									>
                    {pricing.demarrage.ctaText}
									</a>
								</div>

								<div class="mt-3 small text-muted text-center">
									Idéal si vous voulez débloquer vite : bases + 1 page + suivi.
								</div>
							</div>
						</div>

						<!-- Pack Croissance -->
						<div class="col-lg-6 d-flex">
							<div class="pricing-box w-100">
								<div class="pricing-title">
									<img class="mb-2 bg-transparent rounded-0" src="/assets/images/icons/group.svg" alt="Pack Croissance" width="60" />
									<h3>{pricing.croissance.title}</h3>
								</div>

								<div class="pricing-price">
									<span class="price-tenure">{pricing.croissance.tenure}</span>
									<span class="price-unit">{pricing.croissance.price}</span>
									<div class="pricing-title">
										<span>{pricing.croissance.note1}</span>
										<span>{pricing.croissance.note2}</span>
									</div>
								</div>

								<div class="pricing-features border-0 bg-transparent">
									<ul>
                    {pricing.croissance.bullets.map((b) => (
											<li set:html={`<i class="fa-solid fa-check-circle color me-2"></i>${b}`}></li>
                    ))}
									</ul>
								</div>

								<div class="pricing-action">
									<a
										href={pricing.croissance.ctaHref}
										class="button button-rounded button-large button-light text-dark bg-white border w-100 text-transform-none m-0 ls-0"
									>
                    {pricing.croissance.ctaText}
									</a>
								</div>

								<div class="mt-3 small text-muted text-center">
									Idéal si vous voulez accélérer et optimiser en continu.
								</div>
							</div>
						</div>
					</div>

					<div class="text-center mt-5">
						<a href="/methode/" class="button button-rounded text-transform-none ls-0 me-2">
							Voir la méthode
						</a>
						<a href="/audit-gratuit" class="button button-rounded button-light text-dark bg-white border text-transform-none ls-0">
							Demander un audit (gratuit)
						</a>
					</div>
				</div>
			</div>

			<!-- Comparatif (6 lignes)
      ============================================= -->
			<div class="section bg-transparent m-0 pt-0 pb-0">
				<div class="container">
					<div class="card rounded-4 shadow border-0">
						<div class="card-body p-4 p-lg-5">
							<div class="row align-items-center g-4">
								<div class="col-lg-4">
									<div class="badge rounded-pill badge-default mb-2">Comparatif</div>
									<h3 class="text-transform-none ls-0 mb-1">Démarrage vs Croissance</h3>
									<p class="text-muted mb-0">
                    Déjà des pubs ? On commence par le tracking + la page. Pas encore ? On pose les bases. Dans tous les cas : objectif = coût par demande sous contrôle.
                  </p>
								</div>

								<div class="col-lg-8">
									<div class="row g-3">
										<div class="col-md-6">
											<div class="p-3 rounded-4" style="background: var(--cnvs-contrast-0); border: 1px solid rgba(0,0,0,0.06);">
												<div class="small text-muted mb-1">Pack Démarrage</div>
												<ul class="iconlist text-muted mb-0">
													<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Débloquer vite (bases + corrections)</li>
													<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> 1 page optimisée pour convertir</li>
													<li class="d-block"><i class="fa-solid fa-check text-smaller me-0 color"></i> Suivi appels + formulaires (setup)</li>
												</ul>
											</div>
										</div>

										<div class="col-md-6">
											<div class="p-3 rounded-4" style="background: #fff; border: 1px solid rgba(0,0,0,0.06);">
												<div class="small text-muted mb-1">Pack Croissance</div>
												<ul class="iconlist text-muted mb-0">
													<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Accélérer (SEO + Ads + optimisations)</li>
													<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> 2–3 pages selon besoin</li>
													<li class="d-block"><i class="fa-solid fa-check text-smaller me-0 color"></i> Pilotage mensuel basé sur conversions</li>
												</ul>
											</div>
										</div>
									</div>

									<div class="mt-3 small text-muted">
										Si vous hésitez : <strong>audit gratuit</strong> → on vous recommande le pack le plus rentable (sans blabla).
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Scénarios (exemples concrets)
      ============================================= -->
			<div class="section m-0" style="background: var(--cnvs-contrast-0); padding: 80px 0;">
				<div class="container">
					<div class="heading-block border-bottom-0 text-center mx-auto" style="max-width: 820px;">
						<div class="badge rounded-pill badge-default">Exemples</div>
						<h2 class="text-transform-none ls-0 mb-3">3 scénarios fréquents (et quoi faire en premier)</h2>
						<p class="text-muted mb-0">
							On ne part pas “au hasard”. On choisit l’ordre d’actions le plus rentable selon votre situation.
						</p>
					</div>

					<div class="row g-4 mt-4">

						<!-- Scénario 1 -->
						<div class="col-lg-4">
							<div class="card rounded-4 shadow border-0 h-100">
								<div class="card-body p-4 position-relative overflow-hidden">
									<div class="small text-muted mb-1">Scénario 1</div>
									<h3 class="h5 mb-2">Artisan sans site (ou site “vitrine”)</h3>
									<p class="text-muted mb-3">
										Objectif : générer des appels rapidement, avec une base propre (message clair + conversion).
									</p>

									<div class="small fw-semibold mb-2">Priorité (souvent) :</div>
									<ul class="iconlist text-muted mb-0">
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> 1 page qui convertit (promesse + preuves + CTA)</li>
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Setup suivi appels + formulaires</li>
										<li class="d-block"><i class="fa-solid fa-check text-smaller me-0 color"></i> SEO local de base (et fiche Google si besoin)</li>
									</ul>

									<div class="mt-3 small text-muted">
										Pack conseillé : <strong>Démarrage</strong> (puis Croissance si besoin).
									</div>
									<div class="bg-icon bi-telephone-outbound op-02"></div>
								</div>
							</div>
						</div>

						<!-- Scénario 2 -->
						<div class="col-lg-4">
							<div class="card rounded-4 shadow border-0 h-100">
								<div class="card-body p-4 position-relative overflow-hidden">
									<div class="small text-muted mb-1">Scénario 2</div>
									<h3 class="h5 mb-2">Commerce avec fiche Google (GBP) mais peu d’appels</h3>
									<p class="text-muted mb-3">
										Vous avez de la visibilité… mais ça ne “sort” pas en demandes (confiance, offres, pages, suivi).
									</p>

									<div class="small fw-semibold mb-2">Priorité (souvent) :</div>
									<ul class="iconlist text-muted mb-0">
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Optimiser GBP (catégories, services, contenus)</li>
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Page locale claire + preuves + FAQ</li>
										<li class="d-block"><i class="fa-solid fa-check text-smaller me-0 color"></i> Suivi conversions pour piloter</li>
									</ul>

									<div class="mt-3 small text-muted">
										Pack conseillé : <strong>Démarrage</strong> ou <strong>Croissance</strong> si plusieurs zones/services.
									</div>
									<div class="bg-icon bi-geo-alt op-02"></div>
								</div>
							</div>
						</div>

						<!-- Scénario 3 -->
						<div class="col-lg-4">
							<div class="card rounded-4 shadow border-0 h-100">
								<div class="card-body p-4 position-relative overflow-hidden">
									<div class="small text-muted mb-1">Scénario 3</div>
									<h3 class="h5 mb-2">Campagnes Google Ads déjà actives (mais chères)</h3>
									<p class="text-muted mb-3">
										Budget qui part vite, demandes irrégulières : souvent un problème de ciblage, page, ou tracking.
									</p>

									<div class="small fw-semibold mb-2">Priorité (souvent) :</div>
									<ul class="iconlist text-muted mb-0">
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Tracking conversions (appels + formulaires)</li>
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Restructuration ciblage / mots-clés / annonces</li>
										<li class="d-block"><i class="fa-solid fa-check text-smaller me-0 color"></i> Améliorer la page (message + preuves + CTA)</li>
									</ul>

									<div class="mt-3 small text-muted">
										Pack conseillé : <strong>Croissance</strong> (pilotage & optimisations).
									</div>
									<div class="bg-icon bi-bullseye op-02"></div>
								</div>
							</div>
						</div>

					</div>

					<div class="text-center mt-5">
						<a href="/audit-gratuit" class="button button-rounded button-large text-transform-none ls-0 me-2">
							Demander un audit (gratuit)
						</a>
						<a href="/contact/?cta=rappel" class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0">
							Être rappelé
						</a>
						<div class="mt-3 small text-muted">
							On vous répond vite • On fixe le bon périmètre • Objectif : appels & formulaires
						</div>
					</div>
				</div>
			</div>

			<!-- Options / Sur-mesure
      ============================================= -->
			<div class="section m-0 bg-transparent" style="padding: 80px 0;">
				<div class="container">
					<div class="heading-block border-bottom-0 text-center mx-auto" style="max-width: 780px;">
						<div class="badge rounded-pill badge-default">Options</div>
						<h2 class="text-transform-none ls-0 mb-3">Options selon votre situation</h2>
						<p class="text-muted mb-0">
							On évite de vous vendre des “trucs en plus” inutiles. On ajoute uniquement ce qui augmente les demandes.
						</p>
					</div>

					<div class="row g-4 mt-4">
            {options.map((o) => (
							<div class="col-md-6 col-lg-4">
								<div class="card rounded-4 shadow border-0 h-100">
									<div class="card-body p-4 position-relative overflow-hidden">
										<div class="small text-muted mb-1">{o.meta}</div>
										<h3 class="h5 mb-2">{o.title}</h3>
										<p class="text-muted mb-0">{o.desc}</p>
										<div class={`bg-icon ${o.icon} op-02`}></div>
									</div>
								</div>
							</div>
            ))}
					</div>

					<div class="text-center mt-5">
						<a href="/audit-gratuit" class="button button-rounded button-large text-transform-none ls-0 me-2">
							Demander un audit (gratuit)
						</a>
						<a href="/contact/?cta=rappel" class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0">
							Être rappelé
						</a>
						<div class="mt-3 small text-muted">
							Sud Oise (60) & Nord Val-d’Oise (95) • Réponse rapide • Sans engagement
						</div>
					</div>
				</div>
			</div>

			<!-- FAQ Tarifs (6 questions)
      ============================================= -->
			<section class="container py-5" id="faq-tarifs">
				<div class="heading-block border-bottom-0 text-center mx-auto" style="max-width: 760px;">
					<div class="badge rounded-pill badge-default">FAQ</div>
					<h2 class="text-transform-none ls-0 mb-3">Questions fréquentes sur les tarifs</h2>
					<p class="text-muted mb-0">Objectif : zéro surprise. L’audit gratuit sert aussi à cadrer le bon périmètre.</p>
				</div>

				<div class="row justify-content-center mt-4">
					<div class="col-lg-10">
						<div class="faqs">

							<div class="toggle faq pb-3 mb-4">
								<div class="toggle-header">
									<div class="toggle-icon color"><i class="toggle-closed bi-cash"></i><i class="toggle-open bi-cash"></i></div>
									<div class="toggle-title fw-semibold ps-1">Pourquoi “à partir de” ?</div>
									<div class="toggle-icon color"><i class="toggle-closed fa-solid fa-chevron-down text-black-50"></i><i class="toggle-open fa-solid fa-chevron-up color"></i></div>
								</div>
								<div class="toggle-content text-black-50 ps-4">
									Parce que le prix dépend surtout de l’existant (site, fiche Google, historique pubs) et du niveau de suivi.
									L’audit gratuit fixe le bon périmètre, sans mauvaises surprises.
								</div>
							</div>

							<div class="toggle faq pb-3 mb-4">
								<div class="toggle-header">
									<div class="toggle-icon color"><i class="toggle-closed bi-file-earmark-text"></i><i class="toggle-open bi-file-earmark-text"></i></div>
									<div class="toggle-title fw-semibold ps-1">Qu’est-ce qui est inclus dans le Pack Démarrage ?</div>
									<div class="toggle-icon color"><i class="toggle-closed fa-solid fa-chevron-down text-black-50"></i><i class="toggle-open fa-solid fa-chevron-up color"></i></div>
								</div>
								<div class="toggle-content text-black-50 ps-4">
									Audit + plan d’actions priorisé, bases SEO local, une page optimisée pour convertir, et suivi des appels/formulaires.
									L’idée : débloquer des demandes rapidement et proprement.
								</div>
							</div>

							<div class="toggle faq pb-3 mb-4">
								<div class="toggle-header">
