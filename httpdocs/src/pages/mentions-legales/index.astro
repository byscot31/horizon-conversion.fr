---
// src/pages/mentions-legales/index.astro
import Head from "../../components/Head.astro";
import TopBar from "../../components/TopBar.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import JavaScripts from "../../components/JavaScripts.astro";

const SITE =
  (import.meta as any).env?.PUBLIC_SITE_URL ||
  (Astro.site ? String(Astro.site) : "");

const ASSET_BASE =
  (((import.meta as any).env?.PUBLIC_ASSET_BASE as string) || "/_assets_").replace(/\/$/, "");

const canonical = SITE
  ? new URL(Astro.url.pathname, SITE).toString()
  : Astro.url.toString();

// Contact (utilisé aussi par Footer si tu lui passes cette prop)
const contact = {
  phoneDisplay: (import.meta as any).env?.PUBLIC_CONTACT_PHONE_DISPLAY || "06 60 92 10 08",
  email: (import.meta as any).env?.PUBLIC_CONTACT_EMAIL || "contact@horizon-conversion.fr",
  linkedin: (import.meta as any).env?.PUBLIC_CONTACT_LINKEDIN || "https://www.linkedin.com/",
};

// Données légales (source: Pappers)
const legal = {
  brand: "Horizon Conversion",
  operatorLabel: "DA COSTA FRANCOIS",
  tradeName: "CONTROL ONLINE",
  legalForm: "Entrepreneur individuel",
  siren: "810 922 641",
  siret: "810 922 641 00024",
  vat: "FR78810922641",
  ape: "62.01Z (Programmation informatique)",
  rcs: "810 922 641 R.C.S. Pontoise",
  address: "21 Boulevard de l'Orangerie, 95160 Montmorency, France",
};

const hosting = {
  name: "Scaleway S.A.S.",
  address: "8 rue de la Ville l’Évêque, 75008 Paris, France",
  phone: "+33 (0)1 84 13 00 00",
  website: "https://www.scaleway.com",
};

const seo = {
  title: `Mentions légales | ${legal.brand}`,
  description:
    `Mentions légales du site ${legal.brand} : éditeur, hébergeur, propriété intellectuelle, données personnelles, contact.`,
};

const breadcrumb = [
  { label: "Accueil", href: "/" },
  { label: "Mentions légales", href: "/mentions-legales/" },
];

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: "Mentions légales",
  url: canonical,
  isPartOf: {
    "@type": "WebSite",
    name: legal.brand,
    url: SITE || canonical,
  },
};
---

<!doctype html>
<html dir="ltr" lang="fr-FR">
  <Head {seo} {canonical} jsonLd={jsonLd} />
  <body class="stretched">
    <div id="wrapper">
      <TopBar ASSET_BASE={ASSET_BASE} />
      <Header ASSET_BASE={ASSET_BASE} />

      <!-- Hero -->
      <section class="page-title page-title-parallax parallax scroll-detect page-title-center dark include-header include-topbar">
        <img src={`${ASSET_BASE}/images/services/analysis-title.jpg`} class="parallax-bg" alt="Mentions légales" />
        <div id="particles-line"></div>

        <div class="container">
          <div class="page-title-row">
            <div class="page-title-content">
              <div class="badge rounded-pill border border-light text-light">Informations légales</div>
              <h1>Mentions légales</h1>
              <p class="mt-3 mb-0 text-white-50" style="max-width: 900px; margin-inline: auto;">
                Informations relatives à l’éditeur du site, l’hébergeur, la propriété intellectuelle et la gestion des données personnelles.
              </p>
            </div>

            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                {breadcrumb.map((b, idx) => (
                  <li
                    class={`breadcrumb-item ${idx === breadcrumb.length - 1 ? "active" : ""}`}
                    aria-current={idx === breadcrumb.length - 1 ? "page" : undefined}
                  >
                    {idx === breadcrumb.length - 1 ? b.label : <a href={b.href}>{b.label}</a>}
                  </li>
                ))}
              </ol>
            </nav>
          </div>
        </div>

        <div class="video-overlay z-1" style="background-image: linear-gradient(to top, rgba(254,150,3,0.5), #39384D);"></div>
      </section>

      <!-- Content -->
      <section id="content">
        <div class="content-wrap pb-0">
          <div class="container">

            <div class="row justify-content-center">
              <div class="col-lg-10">

                <div class="badge rounded-pill badge-default">Éditeur</div>
                <h2 class="display-6 fw-bold mt-2">1) Éditeur du site</h2>

                <div class="card shadow-sm border-0 mt-3">
                  <div class="card-body p-5">
                    <p class="mb-2">
                      Le site <strong>{legal.brand}</strong> est une marque / dénomination commerciale exploitée par :
                    </p>

                    <ul class="iconlist ms-0 mb-0">
                      <li class="mb-2 text-muted"><i class="fa-solid fa-check text-smaller color"></i> Exploitant : <strong>{legal.operatorLabel}</strong> ({legal.legalForm})</li>
                      <li class="mb-2 text-muted"><i class="fa-solid fa-check text-smaller color"></i> Nom commercial : <strong>{legal.tradeName}</strong></li>
                      <li class="mb-2 text-muted"><i class="fa-solid fa-check text-smaller color"></i> SIREN : <strong>{legal.siren}</strong> — SIRET (siège) : <strong>{legal.siret}</strong></li>
                      <li class="mb-2 text-muted"><i class="fa-solid fa-check text-smaller color"></i> TVA intracommunautaire : <strong>{legal.vat}</strong></li>
                      <li class="mb-2 text-muted"><i class="fa-solid fa-check text-smaller color"></i> Code APE : <strong>{legal.ape}</strong></li>
                      <li class="mb-2 text-muted"><i class="fa-solid fa-check text-smaller color"></i> RCS : <strong>{legal.rcs}</strong></li>
                      <li class="text-muted"><i class="fa-solid fa-check text-smaller color"></i> Adresse : <strong>{legal.address}</strong></li>
                    </ul>

                    <div class="line line-sm my-4"></div>

                    <p class="mb-2">
                      Contact :
                      <a href={`mailto:${contact.email}`} class="text-dark"><u>{contact.email}</u></a>
                      {contact.phoneDisplay ? (
                        <>
                          {" "}—{" "}
                          <a href={`tel:${contact.phoneDisplay.replace(/\s+/g, "")}`} class="text-dark"><u>{contact.phoneDisplay}</u></a>
                        </>
                      ) : null}
                    </p>

                    <p class="mb-0 text-muted">
                      Directeur de la publication : <strong>{legal.operatorLabel}</strong>.
                    </p>
                  </div>
                </div>

                <div class="clear line my-5"></div>

                <div class="badge rounded-pill badge-default">Hébergement</div>
                <h2 class="display-6 fw-bold mt-2">2) Hébergeur</h2>

                <div class="card shadow-sm border-0 mt-3">
                  <div class="card-body p-5">
                    <p class="mb-3">
                      Le site est hébergé par :
                    </p>
                    <ul class="iconlist ms-0 mb-0">
                      <li class="mb-2 text-muted"><i class="fa-solid fa-check text-smaller color"></i> Hébergeur : <strong>{hosting.name}</strong></li>
                      <li class="mb-2 text-muted"><i class="fa-solid fa-check text-smaller color"></i> Adresse : <strong>{hosting.address}</strong></li>
                      <li class="mb-2 text-muted"><i class="fa-solid fa-check text-smaller color"></i> Téléphone : <strong>{hosting.phone}</strong></li>
                      <li class="text-muted"><i class="fa-solid fa-check text-smaller color"></i> Site : <strong>{hosting.website}</strong></li>
                    </ul>
                  </div>
                </div>

                <div class="clear line my-5"></div>

                <div class="badge rounded-pill badge-default">Propriété</div>
                <h2 class="display-6 fw-bold mt-2">3) Propriété intellectuelle</h2>
                <div class="card shadow-sm border-0 mt-3">
                  <div class="card-body p-5">
                    <p class="mb-0 text-muted">
                      L’ensemble des contenus présents sur le site (textes, visuels, logos, éléments graphiques, structure, code, etc.)
                      est protégé par le droit de la propriété intellectuelle. Toute reproduction, représentation, modification,
                      publication, adaptation, totale ou partielle, est interdite sans autorisation écrite préalable.
                    </p>
                  </div>
                </div>

                <div class="clear line my-5"></div>

                <div class="badge rounded-pill badge-default">Données</div>
                <h2 class="display-6 fw-bold mt-2">4) Données personnelles</h2>
                <div class="card shadow-sm border-0 mt-3">
                  <div class="card-body p-5">
                    <p class="mb-3 text-muted">
                      Les informations éventuellement collectées via les formulaires (ex : demande de contact / audit) sont utilisées
                      uniquement pour traiter votre demande et assurer le suivi commercial.
                    </p>
                    <p class="mb-3 text-muted">
                      Pour en savoir plus (finalités, base légale, durées de conservation, droits RGPD), consultez la page :
                      <a href="/politique-confidentialite/" class="text-dark"> <u>Politique de confidentialité</u></a>.
                    </p>
                    <p class="mb-0 text-muted">
                      Vous pouvez exercer vos droits (accès, rectification, opposition, effacement, portabilité, limitation)
                      en écrivant à <a href={`mailto:${contact.email}`} class="text-dark"><u>{contact.email}</u></a>.
                    </p>
                  </div>
                </div>

                <div class="clear line my-5"></div>

                <div class="badge rounded-pill badge-default">Responsabilité</div>
                <h2 class="display-6 fw-bold mt-2">5) Limitation de responsabilité</h2>
                <div class="card shadow-sm border-0 mt-3">
                  <div class="card-body p-5">
                    <p class="mb-0 text-muted">
                      L’éditeur s’efforce de fournir sur le site des informations aussi précises que possible. Toutefois,
                      il ne pourra être tenu responsable des omissions, des inexactitudes et des carences dans la mise à jour,
                      qu’elles soient de son fait ou du fait des tiers partenaires. Le site peut contenir des liens vers d’autres sites
                      sur lesquels l’éditeur n’exerce aucun contrôle.
                    </p>
                  </div>
                </div>

                <div class="clear line my-5"></div>

                <div class="badge rounded-pill badge-default">Contact</div>
                <h2 class="display-6 fw-bold mt-2">6) Contact</h2>
                <div class="card shadow-sm border-0 mt-3 mb-0">
                  <div class="card-body p-5">
                    <p class="mb-2">
                      Pour toute question :
                      <a href="/contact/" class="text-dark"><u>formulaire de contact</u></a>
                      ou <a href={`mailto:${contact.email}`} class="text-dark"><u>{contact.email}</u></a>.
                    </p>
                    {contact.phoneDisplay ? (
                      <p class="mb-0 text-muted">Téléphone : {contact.phoneDisplay}</p>
                    ) : (
                      <p class="mb-0 text-muted">Téléphone : (à renseigner)</p>
                    )}
                  </div>
                </div>

              </div>
            </div>

          </div>

          <div class="clear"></div>

          <!-- CTA -->
          <div
            class="section mt-6 mb-0"
            style={{
              background: `url(${ASSET_BASE}/images/sections/1.jpg) no-repeat center center`,
              backgroundSize: "cover",
              padding: "90px 0",
            }}
          >
            <div class="container">
              <div class="row justify-content-between align-items-center">
                <div class="col-md-8">
                  <div class="heading-block border-bottom-0 mb-4">
                    <div class="badge rounded-pill badge-default">Horizon Conversion</div>
                    <h3 class="text-transform-none ls-0">Besoin d’un mini-audit (SEO/Ads/CRO) ?</h3>
                  </div>
                  <p class="mb-0">
                    Donne-moi ton site + ta zone + ton objectif : je te réponds avec 3 actions prioritaires.
                  </p>
                </div>
                <div class="col-md-4 text-md-end mt-4 mt-md-0">
                  <a href="/contact/" class="button button-rounded button-large text-transform-none ls-0">
                    Demander un mini-audit
                  </a>
                </div>
              </div>
            </div>
          </div>

        </div>
      </section>

      <Footer ASSET_BASE={ASSET_BASE} contact={contact} />
    </div>

    <div id="gotoTop" class="uil uil-angle-up"></div>

    <JavaScripts ASSET_BASE={ASSET_BASE} />
    <script is:inline src={`${ASSET_BASE}/js/particles/particles.min.js`}></script>
    <script is:inline src={`${ASSET_BASE}/js/particles/particles-line.js`}></script>
  </body>
</html>