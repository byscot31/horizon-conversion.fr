---
// src/pages/services.astro

import BaseLayout from "../layouts/BaseLayout.astro";
import services from "../data/services.json";
import villes from "../data/villes.json";
import seoMapping from "../data/seo-mapping.json";

import LinksOut from "../components/LinksOut.astro";
import SectionFAQ from "../components/SectionFAQ.astro";

import { getStaticPageByUrl, normalizeLinksOut, resolveFaqItems, safeText } from "../lib/mapping";

const page = getStaticPageByUrl("/services");

const title = safeText(page?.metaTitle, "Offres | Horizon Conversion");
const description = safeText(
  page?.metaDescription,
  "SEO local, Ads et CRO : un système pour générer des demandes qualifiées."
);
const h1 = safeText(page?.h1, "Offres : générer des appels et demandes qualifiés");

const linksOut = normalizeLinksOut(page?.linksOut);
const faqItems = resolveFaqItems({ pageFaqRefs: page?.faqRefs, pageFaq: page?.faq });

const svcs = Array.isArray(services) ? services : [];
const vs = Array.isArray(villes) ? villes : [];

const CORE = ["seo-local", "ads-google-meta", "optimisation-site-cro"];
const coreSvcs = svcs.filter((s: any) => CORE.includes(String(s.slug)));

const allArticles = Array.isArray((seoMapping as any)?.computed?.articles)
  ? (seoMapping as any).computed.articles
  : [];

const allPages = Array.isArray((seoMapping as any)?.pages) ? (seoMapping as any).pages : [];

function serviceLabel(slug: string) {
  const map: Record<string, string> = {
    "seo-local": "SEO local",
    "ads-google-meta": "Google/Meta Ads",
    "optimisation-site-cro": "CRO / Conversion"
  };
  return map[slug] || slug;
}

function pickArticlesByTags(tags: string[], n = 2) {
  if (!tags?.length) return [];
  return allArticles
    .filter((a: any) => Array.isArray(a.tags) && a.tags.some((t: string) => tags.includes(t)))
    .slice(0, n);
}

function villeNameFromSlug(slug: string) {
  const v = vs.find((x: any) => String(x.slug) === String(slug));
  return v?.nom || slug;
}

/**
 * ✅ Pick ONLY existing service×ville pages from seoMapping.pages
 * Accepts:
 *  - type: "serviceVille" (recommended)
 *  - OR fallback: url startsWith `/${serviceSlug}/`
 * Returns array of { href, label } where label is city name.
 */
function pickServiceVilleLinks(serviceSlug: string, limit = 6) {
  const out: { href: string; label: string }[] = [];

  const candidates = allPages
    .filter((p: any) => p && typeof p.url === "string")
    .filter((p: any) => {
      const t = String(p.type || "");
      const isTypeOk = ["serviceVille", "service-vill e", "service_ville", "service-ville", "sv"].includes(t);
      const urlOk = p.url.startsWith(`/${serviceSlug}/`);
      return isTypeOk ? urlOk : urlOk; // in practice: urlOk is the real filter
    });

  for (const p of candidates) {
    const href = String(p.url);
    // try to extract ville slug from p.ville OR url segment
    const villeSlug = p.ville ? String(p.ville) : href.split("/").filter(Boolean)[1];
    const label = villeNameFromSlug(villeSlug);

    if (!out.some((x) => x.href === href)) out.push({ href, label });
    if (out.length >= limit) break;
  }

  // fallback if mapping doesn't contain pages
  if (!out.length) {
    return vs.slice(0, limit).map((v: any) => ({ href: `/${serviceSlug}/${v.slug}`, label: v.nom }));
  }

  return out;
}
---

<BaseLayout
  title={title}
  description={description}
  pageContext={{ type: "static", staticLabel: "Services", staticUrl: "/services" }}
  faqItems={faqItems}
>
  <section class="section m-0">
    <div class="container">
      <div class="heading-block">
        <h1>{h1}</h1>
        <span>Une méthode 3C : capter (SEO/Ads), convertir (CRO), contrôler (tracking + arbitrages mensuels).</span>
      </div>

      <div class="row g-4">
        {coreSvcs.map((s: any) => (
          <div class="col-md-4">
            <div class="card p-4 h-100">
              <h3 class="mb-2">{s.nom}</h3>
              <p class="text-muted mb-3">{s.promesse}</p>

              {Array.isArray(s.problemes) ? (
                <ul class="mb-3">
                  {s.problemes.slice(0, 3).map((p: string) => <li>{p}</li>)}
                </ul>
              ) : null}

              <a class="button button-rounded" href={`/${s.slug}`}>
                Voir l’offre {serviceLabel(s.slug)}
              </a>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-5">
        <h2 class="mb-3">Entrées locales (forte intention)</h2>

        {CORE.map((slug) => {
          const articles = pickArticlesByTags([slug], 2);
          const leafLinks = pickServiceVilleLinks(slug, 6);

          return (
            <div class="card p-4 mb-4">
              <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <h3 class="mb-0">{serviceLabel(slug)}</h3>
                <a class="button button-small button-light" href={`/${slug}`}>Voir le hub</a>
              </div>

              <div class="mt-3">
                <div class="text-muted mb-2">Pages locales (existantes) :</div>
                <div class="d-flex flex-wrap gap-2">
                  {leafLinks.map((l) => (
                    <a class="button button-small button-rounded" href={l.href}>
                      {l.label}
                    </a>
                  ))}
                </div>
              </div>

              {articles.length ? (
                <div class="mt-4">
                  <div class="text-muted mb-2">Ressources utiles :</div>
                  <div class="d-flex flex-wrap gap-2">
                    {articles.map((a: any) => (
                      <a class="button button-small button-light" href={`/ressources/${a.slug}`}>
                        {a.titre}
                      </a>
                    ))}
                  </div>
                </div>
              ) : null}
            </div>
          );
        })}
      </div>

      <div class="mt-5 d-flex flex-wrap gap-2 align-items-center">
        <a class="button button-rounded button-dark" href="/contact">Demander un audit gratuit</a>
        <a class="button button-rounded button-light" href="/methode">Voir la méthode</a>
        <a class="button button-rounded button-light" href="/tarifs">Voir les tarifs</a>
      </div>

      <SectionFAQ items={faqItems} />
      <LinksOut links={linksOut} />
    </div>
  </section>
</BaseLayout>