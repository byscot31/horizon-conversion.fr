---
// src/pages/services/seo-local/index.astro

import Head from "../../../components/Head.astro";
import TopBar from "../../../components/TopBar.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import JavaScripts from "../../../components/JavaScripts.astro";

// Base URL + assets
const SITE =
  (import.meta as any).env?.PUBLIC_SITE_URL ||
  (Astro.site ? String(Astro.site) : "");

const ASSET_BASE =
  (((import.meta as any).env?.PUBLIC_ASSET_BASE as string) || "/_assets_").replace(/\/$/, "");

const canonical = SITE
  ? new URL(Astro.url.pathname, SITE).toString()
  : Astro.url.toString();

const seo = {
  title: "SEO local Oise (60) & Nord Val-d’Oise (95) | Google Maps & Google Business Profile",
  description:
    "Consultant SEO local dans le Sud de l’Oise (60) et le Nord 95 : optimisation Google Business Profile, SEO Google Maps, pages villes, avis clients et contenus locaux pour générer plus d’appels et de demandes.",
};

const contact = {
  phoneDisplay: "06 60 92 10 08",
  phoneHref: "+33660921008",
  email: "contact@horizon-conversion.fr",
  linkedin: "#",
  instagram: "#",
};

const pageTitle = {
  badge: "SEO Local",
  h1: "SEO local : Google Maps + pages locales",
  breadcrumb: [
    { label: "Accueil", href: "/" },
    { label: "Services", href: "/services/" },
    { label: "SEO local", href: "/services/seo-local/" },
  ],
};

const hero = {
  badge: "Google Business Profile • Google Maps",
  title: "Gagner des appels & demandes depuis Google (près de chez vous).",
  p1:
    "J’aide les artisans, cabinets, commerces et PME à se positionner sur les recherches locales : “plombier Senlis”, “cabinet médical Chantilly”, “agence web Luzarches”, “devis + ville”.",
  p2:
    "Objectif : apparaître dans le Pack Local (Google Maps), rassurer avec des preuves (avis, photos, posts), et convertir via vos pages locales.",
  ctaPrimary: { label: "Demander un audit SEO local", href: "/contact/" },
  ctaSecondary: { label: "Voir tous les services", href: "/services/" },
  img: `${ASSET_BASE}/images/services/seo.svg`,
  imgAlt: "SEO local Google Maps Oise Val-d’Oise",
};

const provideIntro = {
  badge: "Ce que je mets en place",
  title: "SEO local orienté résultats : visibilité → confiance → contact",
};

const provides = [
  {
    iconClass: "bi-geo-alt-fill text-white bg-google",
    title: "Google Business Profile (optimisation)",
    text:
      "Catégories, services, description, produits, zones desservies, photos, posts, Q/R : une fiche complète qui déclenche appels et itinéraires.",
  },
  {
    iconClass: "bi-phone text-white bg-instagram",
    title: "SEO local mobile-first",
    text:
      "Vos prospects cherchent sur mobile. On optimise vitesse, lisibilité, CTA “Appeler”, formulaires simples et preuves au bon endroit.",
  },
  {
    iconClass: "uil uil-search",
    title: "Requêtes locales “devis” & “près de moi”",
    text:
      "Ciblage des intentions qui comptent : “service + ville”, “urgence + ville”, “meilleur + métier + ville” (sans sur-optimisation).",
  },
  {
    iconClass: "bi-window text-white bg-appstore",
    title: "Suivi & reporting clair",
    text:
      "Suivi positions locales, appels (clic-to-call), formulaires, itinéraires, sources : on pilote sur des métriques utiles.",
  },
  {
    iconClass: "fa-solid fa-spinner bg-info",
    title: "Performance & technique",
    text:
      "Core Web Vitals, indexation, maillage interne, structure pages locales : un site rapide et propre = plus de conversions.",
  },
  {
    iconClass: "bi-code bg-danger",
    title: "Pages locales scalables (ville + service)",
    text:
      "Structure réutilisable : contenu unique, FAQ, preuves, maillage, données structurées. Idéal pour Senlis, Chantilly, Creil, Compiègne, Luzarches, L’Isle-Adam…",
  },
];

const otherIntro = {
  badge: "Compléments utiles",
  title: "Pour accélérer le SEO local",
};

const otherCauses = [
  {
    icon: `${ASSET_BASE}/images/icons/seo.svg`,
    title: "Contenus locaux (pages & FAQ)",
    desc:
      "Pages services, pages villes, FAQ et contenus qui répondent aux recherches locales (prix, délais, zones, urgences).",
    bullets: [
      "Pages “service + ville” (sans duplicate)",
      "FAQ + schémas (rich results)",
      "Maillage interne & navigation",
      "Optimisation Title/Meta",
      "Suivi indexation",
    ],
    href: "/services/contenu-seo/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/analysis.svg`,
    title: "Tracking (GA4 / GTM) & appels",
    desc:
      "Sans mesure fiable : impossible d’optimiser. On suit les appels, formulaires, WhatsApp, UTM et sources locales.",
    bullets: [
      "GA4 + Google Tag Manager",
      "Clic-to-call, formulaires, WhatsApp",
      "UTM & pages d’entrée",
      "Tableau de bord simple",
      "Qualité des leads",
    ],
    href: "/services/analytics/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/adword.svg`,
    title: "Google Ads local (si besoin)",
    desc:
      "Pour des leads immédiats pendant que le SEO monte : campagnes Search locales, zones, mots-clés intention, exclusions.",
    bullets: [
      "Ciblage local & horaires",
      "Mots-clés intention + exclusions",
      "Annonces orientées devis/appel",
      "Landing pages locales",
      "Optimisation coût/lead",
    ],
    href: "/services/google-ads/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/experience.svg`,
    title: "CRO : convertir le trafic local",
    desc:
      "Le SEO local n’est rentable que si la page convertit. On réduit la friction, on renforce la confiance, on simplifie l’action.",
    bullets: [
      "CTA visibles (appel / devis)",
      "Preuves (avis, photos, cas)",
      "Formulaire court & efficace",
      "Optimisation mobile",
      "A/B tests “light”",
    ],
    href: "/services/cro/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/social.svg`,
    title: "Social & retargeting (local)",
    desc:
      "On relance les visiteurs et on renforce la preuve sociale : utile pour transformer les hésitants en demandes.",
    bullets: [
      "Contenus utiles (preuves, FAQ)",
      "Retargeting visiteurs",
      "Créa simple orientée conversion",
      "Tracking UTM",
      "Offres locales",
    ],
    href: "/services/social/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/content_marketing.svg`,
    title: "E-réputation & avis",
    desc:
      "Les avis sont un accélérateur local : volume, fréquence, réponses, preuves visuelles et intégration sur le site.",
    bullets: [
      "Stratégie collecte d’avis",
      "Réponses & modération",
      "Mise en avant sur pages",
      "Photos & réalisations",
      "Process simple au quotidien",
    ],
    href: "/services/seo-local/",
  },
];

const formSection = {
  bg: `${ASSET_BASE}/images/sections/1.jpg`,
  badge: "Audit SEO local",
  title: "Recevez un diagnostic rapide (gratuit)",
  text:
    "Je vous dis en 10 minutes quoi corriger en priorité sur votre Google Business Profile + vos pages locales pour générer plus d’appels et de demandes.",
  cardTitle: "Demander l’audit",
  fields: {
    nameLabel: "Nom *",
    emailLabel: "Email *",
    websiteLabel: "Site Web *",
  },
  submitLabel: "Envoyer",
  // vidéo optionnelle : tu peux remplacer par une URL (ou supprimer le bloc si tu veux)
  videoUrl: "https://www.youtube.com/watch?v=P3Huse9K6Xs",
};

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "SEO local (Google Maps) - Sud Oise & Nord Val-d’Oise",
  serviceType: "SEO local / Google Business Profile",
  areaServed: [
    "Oise (60)",
    "Val-d’Oise (95)",
    "Senlis",
    "Chantilly",
    "Creil",
    "Compiègne",
    "Luzarches",
    "L'Isle-Adam",
  ],
  provider: {
    "@type": "Organization",
    name: "Horizon Conversion",
    url: canonical,
  },
};
---

<!doctype html>
<html dir="ltr" lang="fr-FR">
  <Head {seo} {canonical} {jsonLd} />
  <body class="stretched">
    <div id="wrapper">
      <TopBar {contact} ASSET_BASE={ASSET_BASE} />
      <Header {contact} ASSET_BASE={ASSET_BASE} />

      <!-- Page Title -->
      <section class="page-title page-title-parallax parallax scroll-detect page-title-center dark include-header include-topbar">
        <img src={`${ASSET_BASE}/images/services/seo-title.jpg`} class="parallax-bg" alt="SEO local Oise et Val-d’Oise" />
        <div id="particles-line"></div>

        <div class="container">
          <div class="page-title-row">
            <div class="page-title-content">
              <div class="badge rounded-pill border border-light text-light">{pageTitle.badge}</div>
              <h1>{pageTitle.h1}</h1>
              <p class="mb-0 mt-3">
                Zone : <strong>Sud Oise (60)</strong> &amp; <strong>Nord Val-d’Oise (95)</strong> — Senlis, Chantilly, Creil, Compiègne, Luzarches, L’Isle-Adam…
              </p>
            </div>

            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                {pageTitle.breadcrumb.map((b, idx) => (
                  <li class={`breadcrumb-item ${idx === pageTitle.breadcrumb.length - 1 ? "active" : ""}`}
                      aria-current={idx === pageTitle.breadcrumb.length - 1 ? "page" : undefined}>
                    {idx === pageTitle.breadcrumb.length - 1 ? b.label : <a href={b.href}>{b.label}</a>}
                  </li>
                ))}
              </ol>
            </nav>
          </div>
        </div>

        <div class="video-overlay z-1" style="background-image: linear-gradient(to top, rgba(254,150,3,0.5), #39384D);"></div>
      </section>

      <!-- Content -->
      <section id="content">
        <div class="content-wrap pb-0">

          <div class="container">
            <div class="row align-items-end">
              <div class="col-lg-6">
                <div class="badge rounded-pill badge-default">{hero.badge}</div>
                <h2 class="display-4 fw-bold">{hero.title}</h2>
                <p>{hero.p1}</p>
                <p>{hero.p2}</p>

                <div class="d-flex flex-wrap gap-2">
                  <a href={hero.ctaPrimary.href} class="button button-rounded button-large text-transform-none ls-0">{hero.ctaPrimary.label}</a>
                  <a href={hero.ctaSecondary.href} class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0">{hero.ctaSecondary.label}</a>
                </div>

                <div class="mt-4 small text-muted">
                  Requêtes visées : <strong>SEO local Oise</strong>, <strong>consultant SEO Senlis</strong>, <strong>référencement Google Maps</strong>, <strong>optimisation Google Business Profile</strong>, <strong>agence SEO Val-d’Oise</strong>.
                </div>
              </div>

              <div class="col-lg-6 mt-4 mt-lg-0 text-center">
                <img src={hero.img} alt={hero.imgAlt} />
              </div>
            </div>

            <div class="clear line my-6"></div>

            <div class="heading-block border-bottom-0 text-center">
              <div class="badge rounded-pill badge-default">{provideIntro.badge}</div>
              <h3 class="text-transform-none ls-0">{provideIntro.title}</h3>
            </div>

            <div class="clear"></div>

            <div class="row mt-4 col-mb-50 mb-0">
              {provides.map((f) => (
                <div class="col-sm-6 col-lg-4">
                  <div class="feature-box">
                    <div class="fbox-icon mb-4">
                      <a href="#"><i class={f.iconClass}></i></a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none">{f.title}</h3>
                      <p>{f.text}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="clear"></div>

          <!-- Features / Other Causes -->
          <div class="section mb-0">
            <div class="container">
              <div class="heading-block border-bottom-0 text-center">
                <div class="badge rounded-pill badge-default">{otherIntro.badge}</div>
                <h3 class="text-transform-none ls-0">{otherIntro.title}</h3>
              </div>

              <div class="row col-mb-30 align-content-stretch">
                {otherCauses.map((c) => (
                  <div class="col-lg-4 col-md-6 d-flex">
                    <div class="card">
                      <div class="card-body p-5">
                        <div class="feature-box flex-column">
                          <div class="fbox-icon mb-3">
                            <img src={c.icon} alt={c.title} class="bg-transparent rounded-0" />
                          </div>
                          <div class="fbox-content">
                            <h3 class="text-transform-none ls-0 text-larger">{c.title}</h3>
                            <p class="text-smaller">{c.desc}</p>
                          </div>
                          <ul class="iconlist ms-3 mt-4 mb-0">
                            {c.bullets.map((b, idx) => (
                              <li class={`mb-2 text-muted ${idx === c.bullets.length - 1 ? "mb-0" : ""}`}>
                                <i class="fa-solid fa-check text-smaller color"></i> {b}
                              </li>
                            ))}
                          </ul>

                          <div class="mt-4">
                            <a href={c.href} class="button button-rounded button-light text-dark bg-white border text-transform-none ls-0 w-100 text-center">
                              En savoir plus
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>

            </div>
          </div>

          <!-- Form Section -->
          <div
            class="section mt-0"
            style={{
              background: `url(${formSection.bg}) no-repeat center center`,
              backgroundSize: "cover",
              padding: "100px 0",
            }}
          >
            <div class="container">
              <div class="row justify-content-between align-items-center">

                <div class="col-md-6">
                  <div class="heading-block border-bottom-0 mb-4">
                    <div class="badge rounded-pill badge-default">{formSection.badge}</div>
                    <h3 class="text-transform-none ls-0">{formSection.title}</h3>
                  </div>
                  <p>{formSection.text}</p>

                  <div class="mt-4 small text-white-50">
                    Exemples : “plombier <strong>Senlis</strong>”, “kiné <strong>Chantilly</strong>”, “devis clim <strong>Creil</strong>”, “dentiste <strong>L’Isle-Adam</strong>”.
                  </div>
                </div>

                <div class="col-lg-5 col-md-6">
                  <div class="card shadow-sm">
                    <div class="card-body">
                      <h4 class="mb-3">{formSection.cardTitle}</h4>

                      <div class="form-widget">
                        <div class="form-result"></div>
                        <form class="row mb-0" id="template-contactform" name="template-contactform" action="/include/form.php" method="post">
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-name">{formSection.fields.nameLabel}</label>
                            <input type="text" id="template-contactform-name" name="template-contactform-name" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-email">{formSection.fields.emailLabel}</label>
                            <input type="email" id="template-contactform-email" name="template-contactform-email" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-4">
                            <label for="template-contactform-website">{formSection.fields.websiteLabel}</label>
                            <input type="text" id="template-contactform-website" name="template-contactform-website" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-0">
                            <button class="button button-rounded w-100 text-transform-none ls-0 m-0" type="submit" id="template-contactform-submit" name="template-contactform-submit" value="submit">
                              {formSection.submitLabel}
                            </button>
                          </div>

                          <input type="hidden" name="prefix" value="template-contactform-" />
                        </form>
                      </div>

                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>

        </div>
      </section>

      <Footer {contact} ASSET_BASE={ASSET_BASE} />
    </div>

    <div id="gotoTop" class="uil uil-angle-up"></div>

    <JavaScripts ASSET_BASE={ASSET_BASE} />

    <!-- Particles -->
    <script is:inline src={`${ASSET_BASE}/js/particles/particles.min.js`}></script>
    <script is:inline src={`${ASSET_BASE}/js/particles/particles-line.js`}></script>
  </body>
</html>