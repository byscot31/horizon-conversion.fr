---
// src/pages/services/contenu-seo/index.astro

import Head from "../../../components/Head.astro";
import TopBar from "../../../components/TopBar.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import JavaScripts from "../../../components/JavaScripts.astro";

// Base URL + assets
const SITE =
  (import.meta as any).env?.PUBLIC_SITE_URL ||
  (Astro.site ? String(Astro.site) : "");

const ASSET_BASE =
  (((import.meta as any).env?.PUBLIC_ASSET_BASE as string) || "/_assets_").replace(/\/$/, "");

const canonical = SITE
  ? new URL(Astro.url.pathname, SITE).toString()
  : Astro.url.toString();

const seo = {
  title: "Contenu SEO qui génère des leads | Pages services & FAQ | Sud Oise (60) / Nord 95",
  description:
    "Stratégie de contenu SEO orientée conversion : pages services, pages villes, cocon sémantique, FAQ (objections), copywriting, maillage interne. Objectif : plus de demandes qualifiées.",
};

const contact = {
  phoneDisplay: "06 60 92 10 08",
  phoneHref: "+33660921008",
  email: "contact@horizon-conversion.fr",
  linkedin: "#",
  instagram: "#",
};

const pageTitle = {
  badge: "Contenu",
  h1: "Content marketing orienté SEO & conversion",
  breadcrumb: [
    { label: "Accueil", href: "/" },
    { label: "Services", href: "/services/" },
    { label: "Contenu SEO", href: "/services/contenu-seo/" },
  ],
};

const hero = {
  badge: "Attirer + convaincre + convertir",
  title: "Du contenu qui rank… et qui fait demander un devis.",
  p1:
    "Publier des articles ne suffit pas. Pour générer des leads, il faut des pages “service” solides, des contenus qui répondent aux objections (prix, délais, zones), et un maillage interne pensé pour pousser vers le contact.",
  p2:
    "Je crée des contenus SEO pragmatiques (PME, artisans, cabinets) : structures claires, preuves, CTA, FAQ, et suivi des conversions (clic téléphone, formulaire, WhatsApp).",
  ctaPrimary: { label: "Recevoir un plan de contenu", href: "/contact/" },
  ctaSecondary: { label: "Voir tous les services", href: "/services/" },
  img: `${ASSET_BASE}/images/services/content_marketing.svg`,
  imgAlt: "Content marketing SEO - Horizon Conversion",
};

const provideIntro = {
  badge: "Ce que vous obtenez",
  title: "Une stratégie éditoriale + des pages prêtes à convertir",
};

const provides = [
  {
    iconClass: "bi-currency-dollar text-white bg-google",
    title: "Pages services qui génèrent des demandes",
    text:
      "Titres, promesse, preuves, sections (process, tarifs, zones), CTA, FAQ. Le but : transformer l’intention en contact.",
  },
  {
    iconClass: "bi-chat bg-dark",
    title: "Cocon sémantique & maillage interne",
    text:
      "Architecture hub → clusters : pages piliers + pages secondaires (villes, travaux, cas). Google comprend mieux, l’utilisateur aussi.",
  },
  {
    iconClass: "bi-quote bg-info",
    title: "FAQ “anti-objections” & copywriting",
    text:
      "On répond aux questions qui bloquent : prix, délais, disponibilité, garanties, différences. C’est là que se joue la conversion.",
  },
];

const otherIntro = {
  badge: "À associer selon l’objectif",
  title: "Les briques complémentaires (accélérateur de résultats)",
};

const otherCauses = [
  {
    icon: `${ASSET_BASE}/images/icons/seo.svg`,
    title: "SEO local (Google Business Profile)",
    desc:
      "Pour capter les recherches locales : pages villes + optimisation Maps + avis. Idéal artisans / services de proximité.",
    bullets: [
      "Optimisation GBP",
      "Pages “ville + service”",
      "Schémas & FAQ",
      "Avis & e-réputation",
      "Core Web Vitals",
    ],
    href: "/services/seo-local/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/analysis.svg`,
    title: "Tracking (GA4 / GTM) & reporting",
    desc:
      "Sans mesure, impossible d’optimiser : on suit les conversions réelles (tel, formulaires, WhatsApp, devis).",
    bullets: [
      "GA4 + GTM",
      "Événements conversions",
      "UTM & attribution",
      "Tableau de bord",
      "Qualité des leads",
    ],
    href: "/services/analytics/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/adword.svg`,
    title: "Google Ads : booster les pages clés",
    desc:
      "Quand une page service convertit bien, Ads devient rentable : trafic chaud + landing + suivi conversions.",
    bullets: [
      "Campagnes Search",
      "Extensions & appels",
      "Landing dédiées",
      "Suivi CPL",
      "Optimisation continue",
    ],
    href: "/services/google-ads/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/experience.svg`,
    title: "CRO / UX : améliorer la conversion",
    desc:
      "Si vous avez déjà du trafic, la CRO est le levier le plus rapide : message, preuves, friction, formulaire.",
    bullets: [
      "Audit UX mobile",
      "Optimisation CTA",
      "Réassurance",
      "Formulaires",
      "Tests A/B simples",
    ],
    href: "/services/cro/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/social.svg`,
    title: "Retargeting & preuve sociale",
    desc:
      "Utile quand la décision prend du temps : on relance les visiteurs et on renforce la confiance.",
    bullets: [
      "Retargeting visiteurs",
      "Créa simple",
      "Offres & preuves",
      "UTM tracking",
      "Optimisation CPL",
    ],
    href: "/services/social/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/content_marketing.svg`,
    title: "Production éditoriale mensuelle",
    desc:
      "Rythme réaliste + cohérence : on publie, on met à jour, et on renforce les pages qui performent.",
    bullets: [
      "Calendrier éditorial",
      "Briefs SEO",
      "Optimisation on-page",
      "Mise à jour contenus",
      "Maillage interne",
    ],
    href: "/services/contenu-seo/",
  },
];

const formSection = {
  bg: `${ASSET_BASE}/images/sections/1.jpg`,
  badge: "Plan de contenu",
  title: "Recevez 15 idées de contenus qui génèrent des leads",
  text:
    "Je vous propose un plan simple : pages à créer en priorité, sujets FAQ, structure, et maillage pour pousser vers vos formulaires/appels.",
  cardTitle: "Demander le plan",
  fields: {
    nameLabel: "Nom *",
    emailLabel: "Email *",
    websiteLabel: "Site Web *",
  },
  submitLabel: "Envoyer",
  videoUrl: "https://www.youtube.com/watch?v=P3Huse9K6Xs",
};

// JSON-LD (Service)
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Content marketing SEO orienté conversion",
  serviceType: "Content marketing / SEO",
  areaServed: [
    "Oise (60)",
    "Val-d’Oise (95)",
    "Senlis",
    "Chantilly",
    "Creil",
    "Compiègne",
    "Luzarches",
    "L'Isle-Adam",
  ],
  provider: {
    "@type": "Organization",
    name: "Horizon Conversion",
    url: canonical,
  },
};
---

<!doctype html>
<html dir="ltr" lang="fr-FR">
  <Head {seo} {canonical} {jsonLd} />
  <body class="stretched">
    <div id="wrapper">
      <TopBar {contact} ASSET_BASE={ASSET_BASE} />
      <Header {contact} ASSET_BASE={ASSET_BASE} />

      <!-- Page Title -->
      <section class="page-title page-title-parallax parallax scroll-detect page-title-center dark include-header include-topbar">
        <img
          src={`${ASSET_BASE}/images/services/content_marketing-title.jpg`}
          class="parallax-bg"
          alt="Content marketing SEO"
        />
        <div id="particles-line"></div>

        <div class="container">
          <div class="page-title-row">
            <div class="page-title-content">
              <div class="badge rounded-pill border border-light text-light">{pageTitle.badge}</div>
              <h1>{pageTitle.h1}</h1>
              <p class="mb-0 mt-3">
                Zone : <strong>Sud Oise (60)</strong> &amp; <strong>Nord Val-d’Oise (95)</strong> — Senlis, Chantilly, Creil,
                Compiègne, Luzarches, L’Isle-Adam…
              </p>
            </div>

            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                {pageTitle.breadcrumb.map((b, idx) => (
                  <li
                    class={`breadcrumb-item ${idx === pageTitle.breadcrumb.length - 1 ? "active" : ""}`}
                    aria-current={idx === pageTitle.breadcrumb.length - 1 ? "page" : undefined}
                  >
                    {idx === pageTitle.breadcrumb.length - 1 ? b.label : <a href={b.href}>{b.label}</a>}
                  </li>
                ))}
              </ol>
            </nav>
          </div>
        </div>

        <div class="video-overlay z-1" style="background-image: linear-gradient(to top, rgba(254,150,3,0.5), #39384D);"></div>
      </section>

      <!-- Content -->
      <section id="content">
        <div class="content-wrap pb-0">
          <div class="container">
            <div class="row align-items-center">
              <div class="col-lg-6">
                <div class="badge rounded-pill badge-default">{hero.badge}</div>
                <h2 class="display-4 fw-bold">{hero.title}</h2>
                <p>{hero.p1}</p>
                <p>{hero.p2}</p>

                <div class="d-flex flex-wrap gap-2">
                  <a href={hero.ctaPrimary.href} class="button button-rounded button-large text-transform-none ls-0">
                    {hero.ctaPrimary.label}
                  </a>
                  <a
                    href={hero.ctaSecondary.href}
                    class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0"
                  >
                    {hero.ctaSecondary.label}
                  </a>
                </div>

                <div class="mt-4 small text-muted">
                  Requêtes visées : <strong>contenu SEO</strong>, <strong>rédaction pages services</strong>,{" "}
                  <strong>cocon sémantique</strong>, <strong>SEO local</strong>, <strong>FAQ</strong>.
                </div>
              </div>

              <div class="col-lg-6 mt-4 mt-lg-0 text-center">
                <img src={hero.img} alt={hero.imgAlt} />
              </div>
            </div>

            <div class="clear line my-6"></div>

            <div class="heading-block border-bottom-0 text-center">
              <div class="badge rounded-pill badge-default">{provideIntro.badge}</div>
              <h3 class="text-transform-none ls-0">{provideIntro.title}</h3>
            </div>

            <div class="clear"></div>

            <div class="row mt-4 col-mb-50 mb-0">
              {provides.map((f) => (
                <div class="col-sm-6 col-lg-4">
                  <div class="feature-box">
                    <div class="fbox-icon mb-4">
                      <a href="#"><i class={f.iconClass}></i></a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none">{f.title}</h3>
                      <p>{f.text}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="clear"></div>

          <!-- Other Causes -->
          <div class="section mb-0">
            <div class="container">
              <div class="heading-block border-bottom-0 text-center">
                <div class="badge rounded-pill badge-default">{otherIntro.badge}</div>
                <h3 class="text-transform-none ls-0">{otherIntro.title}</h3>
              </div>

              <div class="row col-mb-30 align-content-stretch">
                {otherCauses.map((c) => (
                  <div class="col-lg-4 col-md-6 d-flex">
                    <div class="card">
                      <div class="card-body p-5">
                        <div class="feature-box flex-column">
                          <div class="fbox-icon mb-3">
                            <img src={c.icon} alt={c.title} class="bg-transparent rounded-0" />
                          </div>
                          <div class="fbox-content">
                            <h3 class="text-transform-none ls-0 text-larger">{c.title}</h3>
                            <p class="text-smaller">{c.desc}</p>
                          </div>
                          <ul class="iconlist ms-3 mt-4 mb-0">
                            {c.bullets.map((b, idx) => (
                              <li class={`mb-2 text-muted ${idx === c.bullets.length - 1 ? "mb-0" : ""}`}>
                                <i class="fa-solid fa-check text-smaller color"></i> {b}
                              </li>
                            ))}
                          </ul>

                          <div class="mt-4">
                            <a
                              href={c.href}
                              class="button button-rounded button-light text-dark bg-white border text-transform-none ls-0 w-100 text-center"
                            >
                              En savoir plus
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Form Section -->
          <div
            class="section mt-0"
            style={{
              background: `url(${formSection.bg}) no-repeat center center`,
              backgroundSize: "cover",
              padding: "100px 0",
            }}
          >
            <div class="container">
              <div class="row justify-content-between align-items-center">
                <div class="col-md-6">
                  <div class="heading-block border-bottom-0 mb-4">
                    <div class="badge rounded-pill badge-default">{formSection.badge}</div>
                    <h3 class="text-transform-none ls-0">{formSection.title}</h3>
                  </div>
                  <p>{formSection.text}</p>

                  <div class="mt-4 small text-white-50">
                    Bonus : je peux aussi vous proposer un <strong>brief SEO</strong> + une structure de page “service” prête
                    à publier.
                  </div>
                </div>

                <div class="col-lg-5 col-md-6">
                  <div class="card shadow-sm">
                    <div class="card-body">
                      <h4 class="mb-3">{formSection.cardTitle}</h4>

                      <div class="form-widget">
                        <div class="form-result"></div>
                        <form class="row mb-0" id="template-contactform" name="template-contactform" action="/include/form.php" method="post">
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-name">{formSection.fields.nameLabel}</label>
                            <input type="text" id="template-contactform-name" name="template-contactform-name" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-email">{formSection.fields.emailLabel}</label>
                            <input type="email" id="template-contactform-email" name="template-contactform-email" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-4">
                            <label for="template-contactform-website">{formSection.fields.websiteLabel}</label>
                            <input type="text" id="template-contactform-website" name="template-contactform-website" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-0">
                            <button class="button button-rounded w-100 text-transform-none ls-0 m-0" type="submit" id="template-contactform-submit" name="template-contactform-submit" value="submit">
                              {formSection.submitLabel}
                            </button>
                          </div>

                          <input type="hidden" name="prefix" value="template-contactform-" />
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <Footer {contact} ASSET_BASE={ASSET_BASE} />
    </div>

    <div id="gotoTop" class="uil uil-angle-up"></div>

    <JavaScripts ASSET_BASE={ASSET_BASE} />

    <!-- Particles -->
    <script is:inline src={`${ASSET_BASE}/js/particles/particles.min.js`}></script>
    <script is:inline src={`${ASSET_BASE}/js/particles/particles-line.js`}></script>
  </body>
</html>