---
// src/pages/services/analytics/index.astro

import Head from "../../../components/Head.astro";
import TopBar from "../../../components/TopBar.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import JavaScripts from "../../../components/JavaScripts.astro";

const SITE =
  (import.meta as any).env?.PUBLIC_SITE_URL ||
  (Astro.site ? String(Astro.site) : "");

const ASSET_BASE =
  (((import.meta as any).env?.PUBLIC_ASSET_BASE as string) || "/_assets_").replace(/\/$/, "");

const canonical = SITE
  ? new URL(Astro.url.pathname, SITE).toString()
  : Astro.url.toString();

const seo = {
  title: "Analyse & suivi des performances | GA4, GTM, conversions & reporting | Sud Oise (60) / Nord 95",
  description:
    "Mesurez ce qui rapporte : GA4, Google Tag Manager, tracking formulaires/appels/WhatsApp, pixels & conversions, dashboards, attribution et recommandations actionnables (CRO/SEO/Ads).",
};

const contact = {
  phoneDisplay: "06 60 92 10 08",
  phoneHref: "+33660921008",
  email: "contact@horizon-conversion.fr",
  linkedin: "#",
  instagram: "#",
};

const pageTitle = {
  badge: "Analyse",
  h1: "Analyse & suivi des performances",
  breadcrumb: [
    { label: "Accueil", href: "/" },
    { label: "Services", href: "/services/" },
    { label: "Analyse", href: "/services/analytics/" },
  ],
};

const hero = {
  badge: "Tracking & reporting",
  title: "Comprendre vos chiffres. Décider vite. Dépenser mieux.",
  p1:
    "Sans tracking propre, vous optimisez “au feeling”. Je mets en place une mesure fiable (GA4/GTM) et un reporting lisible pour piloter SEO, Ads et CRO.",
  p2:
    "Objectif : suivre les vrais leads (formulaires, appels, prises de RDV, WhatsApp), identifier les pages qui performent, et prioriser les actions qui augmentent le CA.",
  ctaPrimary: { label: "Demander un audit tracking", href: "/contact/" },
  ctaSecondary: { label: "Contact", href: "/contact/" },
  img: `${ASSET_BASE}/images/services/analysis.svg`,
  imgAlt: "Digital Analysis - Horizon Conversion",
};

const provideIntro = {
  badge: "Ce que je mesure",
  title: "Ce que je mets en place (concret et actionnable)",
};

const provides = [
  {
    iconClass: "fa-brands fa-google text-white bg-google",
    title: "Google Analytics 4 (GA4)",
    text:
      "Paramétrage GA4, événements, conversions, audiences, filtrage du trafic interne, et lecture orientée business (pas “des pages vues”).",
  },
  {
    iconClass: "bi-file-earmark-richtext bg-dark border-0",
    title: "Page / Funnel analytics",
    text:
      "Analyse pages clés : sources, parcours, micro-conversions, points de friction, priorisation des améliorations (CRO).",
  },
  {
    iconClass: "bi-box-arrow-in-right bg-info border-0",
    title: "Performance & vitesse",
    text:
      "Core Web Vitals, chargement, mobile, scripts : recommandations pragmatiques (ce qui impacte vraiment SEO & conversion).",
  },
];

const otherIntro = {
  badge: "À associer",
  title: "Services complémentaires (pour transformer la data en CA)",
};

const otherCauses = [
  {
    icon: `${ASSET_BASE}/images/icons/seo.svg`,
    title: "SEO local",
    desc:
      "Créer un flux régulier de demandes en local : pages “ville + service”, Google Business Profile, avis, maillage.",
    bullets: ["Pages locales", "GBP optimisé", "FAQ & schémas", "Suivi positions", "Vitesse"],
    href: "/services/seo-local/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/adword.svg`,
    title: "Google Ads",
    desc:
      "Leads rapides sur requêtes à forte intention. Le tracking permet de mesurer CPL/CPA et d’optimiser la rentabilité.",
    bullets: ["Search", "Conversions", "Landing", "Reporting", "Optimisation"],
    href: "/services/google-ads/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/experience.svg`,
    title: "CRO / UX",
    desc:
      "Améliorer le taux de conversion : message, preuves, CTA, formulaire, vitesse. On utilise vos données pour prioriser.",
    bullets: ["Audit UX", "Hypothèses", "Optimisations", "A/B tests", "Suivi résultats"],
    href: "/services/cro/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/social.svg`,
    title: "Social Ads",
    desc:
      "Pour accélérer l’acquisition : Meta Ads + retargeting + tracking (pixel/CAPI).",
    bullets: ["Meta Ads", "Retargeting", "Créa", "Landing", "CPL optimisé"],
    href: "/services/social-media/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/content_marketing.svg`,
    title: "Contenu SEO",
    desc:
      "Transformer la donnée en plan éditorial : sujets qui convertissent, pages services, FAQ anti-objections.",
    bullets: ["Plan éditorial", "Pages services", "FAQ", "Maillage", "Mises à jour"],
    href: "/services/contenu-seo/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/analysis.svg`,
    title: "Dashboards & reporting",
    desc:
      "Tableau de bord simple : leads, sources, coûts, pages clés, tendances. Partage en 10 minutes en réunion.",
    bullets: ["KPIs utiles", "Sources", "Leads", "Coûts", "Synthèse"],
    href: "/services/analytics/",
  },
];

const formSection = {
  bg: `${ASSET_BASE}/images/sections/1.jpg`,
  badge: "Audit",
  title: "Recevez un mini-audit Analytics (tracking + opportunités rapides)",
  text:
    "Je vous indique : ce qui est correctement mesuré, ce qui manque (leads, appels, RDV…), et 3 actions prioritaires pour améliorer l’acquisition et la conversion.",
  cardTitle: "Demander le mini-audit",
  fields: { nameLabel: "Nom *", emailLabel: "Email *", websiteLabel: "Site Web *" },
  submitLabel: "Envoyer",
  videoUrl: "https://www.youtube.com/watch?v=P3Huse9K6Xs",
};

// JSON-LD (Service)
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Digital Analysis & Tracking (GA4/GTM/Reporting)",
  serviceType: "Web Analytics / Tracking / Reporting",
  areaServed: [
    "Oise (60)",
    "Val-d’Oise (95)",
    "Senlis",
    "Chantilly",
    "Creil",
    "Compiègne",
    "Luzarches",
    "L'Isle-Adam",
  ],
  provider: { "@type": "Organization", name: "Horizon Conversion", url: canonical },
};
---

<!doctype html>
<html dir="ltr" lang="fr-FR">
  <Head {seo} {canonical} {jsonLd} />
  <body class="stretched">
    <div id="wrapper">
      <TopBar {contact} ASSET_BASE={ASSET_BASE} />
      <Header {contact} ASSET_BASE={ASSET_BASE} />

      <!-- Page Title -->
      <section class="page-title page-title-parallax parallax scroll-detect page-title-center dark include-header include-topbar">
        <img
          src={`${ASSET_BASE}/images/services/analysis-title.jpg`}
          class="parallax-bg"
          alt="Digital Analysis"
        />
        <div id="particles-line"></div>

        <div class="container">
          <div class="page-title-row">
            <div class="page-title-content">
              <div class="badge rounded-pill border border-light text-light">{pageTitle.badge}</div>
              <h1>{pageTitle.h1}</h1>
              <p class="mb-0 mt-3">
                Zone : <strong>Sud Oise (60)</strong> &amp; <strong>Nord Val-d’Oise (95)</strong> — Senlis, Chantilly, Creil,
                Compiègne, Luzarches, L’Isle-Adam…
              </p>
            </div>

            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                {pageTitle.breadcrumb.map((b, idx) => (
                  <li
                    class={`breadcrumb-item ${idx === pageTitle.breadcrumb.length - 1 ? "active" : ""}`}
                    aria-current={idx === pageTitle.breadcrumb.length - 1 ? "page" : undefined}
                  >
                    {idx === pageTitle.breadcrumb.length - 1 ? b.label : <a href={b.href}>{b.label}</a>}
                  </li>
                ))}
              </ol>
            </nav>
          </div>
        </div>

        <div class="video-overlay z-1" style="background-image: linear-gradient(to top, rgba(254,150,3,0.5), #39384D);"></div>
      </section>

      <!-- Content -->
      <section id="content">
        <div class="content-wrap pb-0">
          <div class="container">
            <div class="row align-items-center">
              <div class="col-lg-6">
                <div class="badge rounded-pill badge-default">{hero.badge}</div>
                <h2 class="display-4 fw-bold">{hero.title}</h2>
                <p>{hero.p1}</p>
                <p>{hero.p2}</p>

                <div class="d-flex flex-wrap gap-2">
                  <a href={hero.ctaPrimary.href} class="button button-rounded button-large text-transform-none ls-0">
                    {hero.ctaPrimary.label}
                  </a>
                  <a
                    href={hero.ctaSecondary.href}
                    class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0"
                  >
                    {hero.ctaSecondary.label}
                  </a>
                </div>

                <div class="mt-4 small text-muted">
                  Résultat attendu : un tableau de bord clair + des recommandations qui impactent <strong>leads</strong> et <strong>CA</strong>.
                </div>
              </div>

              <div class="col-lg-6 mt-4 mt-lg-0 text-center">
                <img src={hero.img} alt={hero.imgAlt} />
              </div>
            </div>

            <div class="clear line my-6"></div>

            <div class="heading-block border-bottom-0 text-center">
              <div class="badge rounded-pill badge-default">{provideIntro.badge}</div>
              <h3 class="text-transform-none ls-0">{provideIntro.title}</h3>
            </div>

            <div class="clear"></div>

            <div class="row mt-4 col-mb-50 mb-0">
              {provides.map((f) => (
                <div class="col-sm-6 col-lg-4">
                  <div class="feature-box">
                    <div class="fbox-icon mb-4">
                      <a href="#"><i class={f.iconClass}></i></a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none">{f.title}</h3>
                      <p>{f.text}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="clear"></div>

          <!-- Other Causes -->
          <div class="section mb-0">
            <div class="container">
              <div class="heading-block border-bottom-0 text-center">
                <div class="badge rounded-pill badge-default">{otherIntro.badge}</div>
                <h3 class="text-transform-none ls-0">{otherIntro.title}</h3>
              </div>

              <div class="row col-mb-30 align-content-stretch">
                {otherCauses.map((c) => (
                  <div class="col-lg-4 col-md-6 d-flex">
                    <div class="card">
                      <div class="card-body p-5">
                        <div class="feature-box flex-column">
                          <div class="fbox-icon mb-3">
                            <img src={c.icon} alt={c.title} class="bg-transparent rounded-0" />
                          </div>
                          <div class="fbox-content">
                            <h3 class="text-transform-none ls-0 text-larger">{c.title}</h3>
                            <p class="text-smaller">{c.desc}</p>
                          </div>
                          <ul class="iconlist ms-3 mt-4 mb-0">
                            {c.bullets.map((b, idx) => (
                              <li class={`mb-2 text-muted ${idx === c.bullets.length - 1 ? "mb-0" : ""}`}>
                                <i class="fa-solid fa-check text-smaller color"></i> {b}
                              </li>
                            ))}
                          </ul>

                          <div class="mt-4">
                            <a
                              href={c.href}
                              class="button button-rounded button-light text-dark bg-white border text-transform-none ls-0 w-100 text-center"
                            >
                              En savoir plus
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Form Section -->
          <div
            class="section mt-0"
            style={{
              background: `url(${formSection.bg}) no-repeat center center`,
              backgroundSize: "cover",
              padding: "100px 0",
            }}
          >
            <div class="container">
              <div class="row justify-content-between align-items-center">
                <div class="col-md-6">
                  <div class="heading-block border-bottom-0 mb-4">
                    <div class="badge rounded-pill badge-default">{formSection.badge}</div>
                    <h3 class="text-transform-none ls-0">{formSection.title}</h3>
                  </div>
                  <p>{formSection.text}</p>
                </div>

                <div class="col-lg-5 col-md-6">
                  <div class="card shadow-sm">
                    <div class="card-body">
                      <h4 class="mb-3">{formSection.cardTitle}</h4>

                      <div class="form-widget">
                        <div class="form-result"></div>
                        <form class="row mb-0" id="template-contactform" name="template-contactform" action="/include/form.php" method="post">
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-name">{formSection.fields.nameLabel}</label>
                            <input type="text" id="template-contactform-name" name="template-contactform-name" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-email">{formSection.fields.emailLabel}</label>
                            <input type="email" id="template-contactform-email" name="template-contactform-email" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-4">
                            <label for="template-contactform-website">{formSection.fields.websiteLabel}</label>
                            <input type="text" id="template-contactform-website" name="template-contactform-website" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-0">
                            <button class="button button-rounded w-100 text-transform-none ls-0 m-0" type="submit" id="template-contactform-submit" name="template-contactform-submit" value="submit">
                              {formSection.submitLabel}
                            </button>
                          </div>

                          <input type="hidden" name="prefix" value="template-contactform-" />
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <Footer {contact} ASSET_BASE={ASSET_BASE} />
    </div>

    <div id="gotoTop" class="uil uil-angle-up"></div>

    <JavaScripts ASSET_BASE={ASSET_BASE} />

    <!-- Particles -->
    <script is:inline src={`${ASSET_BASE}/js/particles/particles.min.js`}></script>
    <script is:inline src={`${ASSET_BASE}/js/particles/particles-line.js`}></script>
  </body>
</html>