---
// src/pages/services/social-media/index.astro

import Head from "../../../components/Head.astro";
import TopBar from "../../../components/TopBar.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import JavaScripts from "../../../components/JavaScripts.astro";

const SITE =
  (import.meta as any).env?.PUBLIC_SITE_URL ||
  (Astro.site ? String(Astro.site) : "");

const ASSET_BASE =
  (((import.meta as any).env?.PUBLIC_ASSET_BASE as string) || "/_assets_").replace(/\/$/, "");

const canonical = SITE
  ? new URL(Astro.url.pathname, SITE).toString()
  : Astro.url.toString();

const seo = {
  title: "Social Media Marketing orienté leads | Meta Ads & contenu | Sud Oise (60) / Nord 95",
  description:
    "Générez des demandes qualifiées grâce aux réseaux sociaux : Meta Ads (Facebook/Instagram), retargeting, créas, landing pages, tracking (GA4/GTM), reporting et optimisation CPL.",
};

const contact = {
  phoneDisplay: "06 60 92 10 08",
  phoneHref: "+33660921008",
  email: "contact@horizon-conversion.fr",
  linkedin: "#",
  instagram: "#",
};

const pageTitle = {
  badge: "Services",
  h1: "Social Media Marketing",
  breadcrumb: [
    { label: "Accueil", href: "/" },
    { label: "Services", href: "/services/" },
    { label: "Social Media", href: "/services/social-media/" },
  ],
};

const hero = {
  badge: "Social Ads + Contenu",
  title: "Réseaux sociaux : visibilité + leads (pas juste des likes).",
  p1:
    "La clé : une offre claire, des créas simples, une landing qui convertit et un tracking propre. Sans ça, la pub sociale devient une dépense.",
  p2:
    "Je mets en place un système complet (Meta Ads + retargeting + reporting) pour capter des demandes qualifiées, surtout quand le SEO prend du temps ou quand vous voulez accélérer.",
  ctaPrimary: { label: "Demander un plan de campagne", href: "/contact/" },
  ctaSecondary: { label: "Contact", href: "/contact/" },
  img: `${ASSET_BASE}/images/services/social.svg`,
  imgAlt: "Social Media Marketing - Horizon Conversion",
};

const provideIntro = {
  badge: "Ce que je mets en place",
  title: "Un système Social complet (trafic → confiance → conversion)",
};

const provides = [
  {
    iconClass: "fa-brands fa-facebook-f bg-facebook border-0",
    title: "Facebook / Instagram Ads (Meta)",
    text:
      "Campagnes Leads / Traffic / Conversion : ciblages locaux, audiences, exclusions, retargeting, et optimisations CPL.",
  },
  {
    iconClass: "fa-brands fa-instagram bg-instagram border-0",
    title: "Créations & contenus qui déclenchent l’action",
    text:
      "Hooks, angles, preuves, UGC simplifié, carrousels, vidéos courtes. Objectif : clic utile et message clair.",
  },
  {
    iconClass: "fa-brands fa-twitter bg-x-twitter border-0",
    title: "Stratégie de diffusion (selon votre cible)",
    text:
      "Choix des réseaux pertinents (B2B/B2C), calendrier éditorial, formats, et cadence réaliste (pas “3 posts/jour”).",
  },
  {
    iconClass: "bi-envelope bg-google border-0",
    title: "Lead nurturing (email / séquences)",
    text:
      "Quand la décision est longue : relances, séquences simples, preuves, études de cas, prise de RDV.",
  },
  {
    iconClass: "fa-brands fa-pinterest-p bg-pinterest border-0",
    title: "Contenu “evergreen” (Pinterest / inspiration)",
    text:
      "Utile pour certains métiers : déco, artisans, esthétique, bien-être. On exploite le visuel + SEO interne.",
  },
  {
    iconClass: "bi-file-earmark-richtext border-0",
    title: "Offres & landing pages",
    text:
      "Une bonne campagne dépend d’une landing solide : promesse, preuves, FAQ, CTA, friction minimale.",
  },
];

const otherIntro = {
  badge: "À associer",
  title: "Autres leviers (pour maximiser la rentabilité)",
};

const otherCauses = [
  {
    icon: `${ASSET_BASE}/images/icons/seo.svg`,
    title: "SEO local",
    desc:
      "Pour réduire votre dépendance à la pub sur le long terme : pages locales, Google Business Profile, avis.",
    bullets: ["Pages “ville + service”", "Optimisation GBP", "FAQ & schémas", "Avis clients", "Vitesse & technique"],
    href: "/services/seo-local/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/analysis.svg`,
    title: "Tracking (GA4 / GTM) & reporting",
    desc:
      "Indispensable pour savoir ce qui rapporte : conversions, appels, formulaires, WhatsApp, qualité des leads.",
    bullets: ["GA4 + GTM", "Pixels / CAPI", "UTM & attribution", "Tableau de bord", "Suivi CPL"],
    href: "/services/analytics/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/adword.svg`,
    title: "Google Ads (trafic très chaud)",
    desc:
      "Quand l’intention est forte (ex : “plombier urgence”) : Ads capte du lead très qualifié, complémentaire au Social.",
    bullets: ["Search", "Extensions", "Landing dédiées", "Suivi conversions", "Optimisation"],
    href: "/services/google-ads/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/experience.svg`,
    title: "CRO / UX",
    desc:
      "Avant d’augmenter le budget pub, on sécurise la conversion : message, preuves, formulaire, vitesse, mobile.",
    bullets: ["Audit UX", "Optimisation CTA", "Réassurance", "Formulaire", "A/B tests"],
    href: "/services/cro/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/content_marketing.svg`,
    title: "Contenus SEO (pour amortir la pub)",
    desc:
      "Le duo gagnant : Social pour accélérer + contenus SEO pour créer un actif durable qui capte du lead sans payer à chaque clic.",
    bullets: ["Pages services", "Cocon sémantique", "FAQ anti-objections", "Maillage interne", "Mises à jour"],
    href: "/services/contenu-seo/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/social.svg`,
    title: "Retargeting (visiteurs / engagés)",
    desc:
      "Souvent le plus rentable : on relance les visiteurs et les engagés avec une preuve + une offre claire.",
    bullets: ["Audiences", "Créa simple", "Offre", "CPL optimisé", "Tracking"],
    href: "/services/social-media/",
  },
];

const formSection = {
  bg: `${ASSET_BASE}/images/sections/1.jpg`,
  badge: "Campagne",
  title: "Recevez un plan de campagne Social (offre + ciblage + budget)",
  text:
    "Je vous propose un plan simple : angle, créas à produire, audiences, budget de départ et page d’atterrissage recommandée.",
  cardTitle: "Demander le plan",
  fields: { nameLabel: "Nom *", emailLabel: "Email *", websiteLabel: "Site Web *" },
  submitLabel: "Envoyer",
  videoUrl: "https://www.youtube.com/watch?v=P3Huse9K6Xs",
};

// JSON-LD (Service)
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Social Media Marketing orienté leads",
  serviceType: "Social Ads / Social Media Marketing",
  areaServed: [
    "Oise (60)",
    "Val-d’Oise (95)",
    "Senlis",
    "Chantilly",
    "Creil",
    "Compiègne",
    "Luzarches",
    "L'Isle-Adam",
  ],
  provider: { "@type": "Organization", name: "Horizon Conversion", url: canonical },
};
---

<!doctype html>
<html dir="ltr" lang="fr-FR">
  <Head {seo} {canonical} {jsonLd} />
  <body class="stretched">
    <div id="wrapper">
      <TopBar {contact} ASSET_BASE={ASSET_BASE} />
      <Header {contact} ASSET_BASE={ASSET_BASE} />

      <!-- Page Title -->
      <section class="page-title page-title-parallax parallax scroll-detect page-title-center dark include-header include-topbar">
        <img
          src={`${ASSET_BASE}/images/services/social-title.jpg`}
          class="parallax-bg"
          alt="Social Media Marketing"
        />
        <div id="particles-line"></div>

        <div class="container">
          <div class="page-title-row">
            <div class="page-title-content">
              <div class="badge rounded-pill border border-light text-light">{pageTitle.badge}</div>
              <h1>{pageTitle.h1}</h1>
              <p class="mb-0 mt-3">
                Zone : <strong>Sud Oise (60)</strong> &amp; <strong>Nord Val-d’Oise (95)</strong> — Senlis, Chantilly, Creil,
                Compiègne, Luzarches, L’Isle-Adam…
              </p>
            </div>

            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                {pageTitle.breadcrumb.map((b, idx) => (
                  <li
                    class={`breadcrumb-item ${idx === pageTitle.breadcrumb.length - 1 ? "active" : ""}`}
                    aria-current={idx === pageTitle.breadcrumb.length - 1 ? "page" : undefined}
                  >
                    {idx === pageTitle.breadcrumb.length - 1 ? b.label : <a href={b.href}>{b.label}</a>}
                  </li>
                ))}
              </ol>
            </nav>
          </div>
        </div>

        <div class="video-overlay z-1" style="background-image: linear-gradient(to top, rgba(254,150,3,0.5), #39384D);"></div>
      </section>

      <!-- Content -->
      <section id="content">
        <div class="content-wrap pb-0">
          <div class="container">
            <div class="row align-items-end">
              <div class="col-lg-6">
                <div class="badge rounded-pill badge-default">{hero.badge}</div>
                <h2 class="display-4 fw-bold">{hero.title}</h2>
                <p>{hero.p1}</p>
                <p>{hero.p2}</p>

                <div class="d-flex flex-wrap gap-2">
                  <a href={hero.ctaPrimary.href} class="button button-rounded button-large text-transform-none ls-0">
                    {hero.ctaPrimary.label}
                  </a>
                  <a
                    href={hero.ctaSecondary.href}
                    class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0"
                  >
                    {hero.ctaSecondary.label}
                  </a>
                </div>

                <div class="mt-4 small text-muted">
                  Recommandé si : vous voulez <strong>accélérer</strong>, lancer une offre, remplir un calendrier, ou
                  relancer des prospects (retargeting).
                </div>
              </div>

              <div class="col-lg-6 mt-4 mt-lg-0 text-center">
                <img src={hero.img} alt={hero.imgAlt} />
              </div>
            </div>

            <div class="clear line my-6"></div>

            <div class="heading-block border-bottom-0 text-center">
              <div class="badge rounded-pill badge-default">{provideIntro.badge}</div>
              <h3 class="text-transform-none ls-0">{provideIntro.title}</h3>
            </div>

            <div class="clear"></div>

            <div class="row mt-4 col-mb-50 mb-0">
              {provides.map((f) => (
                <div class="col-sm-6 col-lg-4">
                  <div class="feature-box">
                    <div class="fbox-icon mb-4">
                      <a href="#"><i class={f.iconClass}></i></a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none">{f.title}</h3>
                      <p>{f.text}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="clear"></div>

          <!-- Other Causes -->
          <div class="section mb-0">
            <div class="container">
              <div class="heading-block border-bottom-0 text-center">
                <div class="badge rounded-pill badge-default">{otherIntro.badge}</div>
                <h3 class="text-transform-none ls-0">{otherIntro.title}</h3>
              </div>

              <div class="row col-mb-30 align-content-stretch">
                {otherCauses.map((c) => (
                  <div class="col-lg-4 col-md-6 d-flex">
                    <div class="card">
                      <div class="card-body p-5">
                        <div class="feature-box flex-column">
                          <div class="fbox-icon mb-3">
                            <img src={c.icon} alt={c.title} class="bg-transparent rounded-0" />
                          </div>
                          <div class="fbox-content">
                            <h3 class="text-transform-none ls-0 text-larger">{c.title}</h3>
                            <p class="text-smaller">{c.desc}</p>
                          </div>
                          <ul class="iconlist ms-3 mt-4 mb-0">
                            {c.bullets.map((b, idx) => (
                              <li class={`mb-2 text-muted ${idx === c.bullets.length - 1 ? "mb-0" : ""}`}>
                                <i class="fa-solid fa-check text-smaller color"></i> {b}
                              </li>
                            ))}
                          </ul>

                          <div class="mt-4">
                            <a
                              href={c.href}
                              class="button button-rounded button-light text-dark bg-white border text-transform-none ls-0 w-100 text-center"
                            >
                              En savoir plus
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Form Section -->
          <div
            class="section mt-0"
            style={{
              background: `url(${formSection.bg}) no-repeat center center`,
              backgroundSize: "cover",
              padding: "100px 0",
            }}
          >
            <div class="container">
              <div class="row justify-content-between align-items-center">
                <div class="col-md-6">
                  <div class="heading-block border-bottom-0 mb-4">
                    <div class="badge rounded-pill badge-default">{formSection.badge}</div>
                    <h3 class="text-transform-none ls-0">{formSection.title}</h3>
                  </div>
                  <p>{formSection.text}</p>

                  <div class="mt-4 small text-white-50">
                    Bonus : je peux auditer vos campagnes actuelles (si existantes) et vous dire où part le budget.
                  </div>
                </div>

                <div class="col-lg-5 col-md-6">
                  <div class="card shadow-sm">
                    <div class="card-body">
                      <h4 class="mb-3">{formSection.cardTitle}</h4>

                      <div class="form-widget">
                        <div class="form-result"></div>
                        <form class="row mb-0" id="template-contactform" name="template-contactform" action="/include/form.php" method="post">
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-name">{formSection.fields.nameLabel}</label>
                            <input type="text" id="template-contactform-name" name="template-contactform-name" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-email">{formSection.fields.emailLabel}</label>
                            <input type="email" id="template-contactform-email" name="template-contactform-email" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-4">
                            <label for="template-contactform-website">{formSection.fields.websiteLabel}</label>
                            <input type="text" id="template-contactform-website" name="template-contactform-website" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-0">
                            <button class="button button-rounded w-100 text-transform-none ls-0 m-0" type="submit" id="template-contactform-submit" name="template-contactform-submit" value="submit">
                              {formSection.submitLabel}
                            </button>
                          </div>

                          <input type="hidden" name="prefix" value="template-contactform-" />
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <Footer {contact} ASSET_BASE={ASSET_BASE} />
    </div>

    <div id="gotoTop" class="uil uil-angle-up"></div>

    <JavaScripts ASSET_BASE={ASSET_BASE} />

    <!-- Particles -->
    <script is:inline src={`${ASSET_BASE}/js/particles/particles.min.js`}></script>
    <script is:inline src={`${ASSET_BASE}/js/particles/particles-line.js`}></script>
  </body>
</html>