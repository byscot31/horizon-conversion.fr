---
// src/pages/services/index.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";

const seo = {
  title: "Services Horizon Conversion : SEO local, Ads & pages qui convertissent (60/95)",
  description:
    "Services pour générer plus d’appels et de demandes en local : SEO local, Google Ads, Meta Ads, pages qui convertissent, Google Business Profile et suivi des conversions. Sud Oise (60) / Nord Val-d'Oise (95).",
  canonical: "https://horizon-conversion.fr/services/",
};

const breadcrumbs = [{ name: "Services", url: "/services/" }];
---

<BaseLayout seo={seo} breadcrumbs={breadcrumbs}>
	<!-- Page Title
  ============================================= -->
	<section
		class="page-title page-title-parallax parallax scroll-detect page-title-center dark include-header include-topbar"
		style="padding-bottom: 140px;"
	>
		<img src="/assets/images/hero/page-title.jpg" class="parallax-bg" alt="Services Horizon Conversion" />

		<div class="container position-relative">
			<div class="page-title-row">
				<div class="page-title-content">
					<div class="badge rounded-pill border border-light text-light">Services</div>
					<h1>Les leviers qui génèrent des appels et des demandes en local</h1>
					<div class="mt-3 small text-white-50">
						Horizon Conversion • Sud Oise (60) & Nord Val-d’Oise (95)
					</div>
				</div>

				<Breadcrumbs items={breadcrumbs} />
			</div>
		</div>

		<div
			class="video-overlay z-1"
			style="background-image: linear-gradient(to top, rgba(254,150,3,0.35), #39384D);"
		></div>
	</section>
	<!-- .page-title end -->

	<!-- Content
  ============================================= -->
	<section id="content">
		<div class="content-wrap py-0 overflow-visible">

			<!-- Card “Hero”
      ============================================= -->
			<div
				class="card mx-auto mw-md border-0 shadow rounded-4 card-seo-about mb-5 mb-lg-0">
				<div class="card-body p-5">
					<div class="row align-items-center">
						<div class="col-md-7">
							<div class="heading-block border-bottom-0 mb-0">
								<div class="badge rounded-pill badge-default">Clair & orienté demandes</div>
								<h2 class="text-transform-none ls-0 mb-3">
									On active les bons leviers, dans le bon ordre
								</h2>
								<p class="text-muted mb-4">
									Selon votre situation, on combine <strong>SEO local</strong>, <strong>annonces</strong> et
									<strong>pages qui convertissent</strong>. L’objectif n’est pas “plus de trafic” : c’est
									<strong>plus d’appels</strong> et <strong>plus de formulaires</strong>, avec un suivi simple.
								</p>

								<a href="/audit-gratuit" class="button button-rounded text-transform-none m-0 ls-0 me-2">
									Demander un audit (gratuit)
								</a>
								<a
									href="/contact/?cta=rappel"
									class="button button-rounded button-light text-dark bg-white border text-transform-none m-0 ls-0"
								>
									Être rappelé
								</a>

								<div class="mt-4 small text-muted">
									Sud Oise (60) & Nord Val-d’Oise (95) • Réponse rapide • Sans engagement
								</div>
							</div>
						</div>

						<div class="col-md-5 mt-4 mt-md-0">
							<div
								class="p-4 rounded-4"
								style="background: var(--cnvs-contrast-0); border: 1px solid rgba(0,0,0,0.06);"
							>
								<div class="small text-muted mb-1">Ce qu’on mesure</div>
								<ul class="iconlist text-muted mb-0">
									<li class="d-block mb-2">
										<i class="fa-solid fa-check text-smaller me-0 color"></i> Clic téléphone
									</li>
									<li class="d-block mb-2">
										<i class="fa-solid fa-check text-smaller me-0 color"></i> Formulaires envoyés
									</li>
									<li class="d-block mb-2">
										<i class="fa-solid fa-check text-smaller me-0 color"></i> Source (Google / Ads / Pages)
									</li>
									<li class="d-block">
										<i class="fa-solid fa-check text-smaller me-0 color"></i> Ce qui rapporte / ce qui ne rapporte pas
									</li>
								</ul>
							</div>
						</div>

					</div>
				</div>
			</div>

			<!-- Services
      ============================================= -->
			<div class="section bg-transparent m-0 pt-4">
				<div class="container">
					<div class="heading-block border-bottom-0 text-center mx-auto" style="max-width: 780px">
						<div class="badge rounded-pill badge-default">Offre</div>
						<h2 class="text-transform-none ls-0 mb-3">6 services, 1 objectif : des demandes</h2>
						<p class="text-muted mb-0">
							Des cartes claires : vous cliquez et vous voyez le périmètre. Si vous hésitez, on commence par l’audit gratuit.
						</p>
					</div>

					<div class="row col-mb-30 align-content-stretch mt-4">

						<!-- SEO Local -->
						<div class="col-lg-4 col-md-6 d-flex">
							<a href="/services/seo-local" class="card h-shadow h-translate-y-sm all-ts w-100">
								<div class="card-body p-5">
									<div class="feature-box flex-column">
										<div class="fbox-image mb-5 text-center">
											<img height="140" src="/assets/images/services/seo.svg" alt="SEO local">
										</div>
										<div class="fbox-content">
											<h3 class="text-transform-none ls-0 text-larger">SEO local (Google)</h3>
											<p class="text-smaller">
												Être visible quand on cherche <strong>votre métier</strong> autour de vous (60/95). Durable.
											</p>
										</div>
										<ul class="iconlist ms-2 mt-4 mb-0">
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Pages locales (villes / services)</li>
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Preuves + CTA visibles</li>
											<li class="d-block text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Cohérence site / zone / Google</li>
										</ul>
									</div>
								</div>
							</a>
						</div>

						<!-- Google Ads -->
						<div class="col-lg-4 col-md-6 d-flex">
							<a href="/services/google-ads" class="card h-shadow h-translate-y-sm all-ts w-100">
								<div class="card-body p-5">
									<div class="feature-box flex-column">
										<div class="fbox-image mb-5 text-center">
											<img height="140" src="/assets/images/services/adwords.svg" alt="Google Ads local">
										</div>
										<div class="fbox-content">
											<h3 class="text-transform-none ls-0 text-larger">Google Ads (local)</h3>
											<p class="text-smaller">
												Des demandes plus vite, budget cadré. On optimise ce qui rapporte, on coupe le reste.
											</p>
										</div>
										<ul class="iconlist ms-2 mt-4 mb-0">
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Ciblage + messages</li>
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Landing page adaptée</li>
											<li class="d-block text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Suivi appels / formulaires</li>
										</ul>
									</div>
								</div>
							</a>
						</div>

						<!-- Pages qui convertissent -->
						<div class="col-lg-4 col-md-6 d-flex">
							<a href="/services/pages-qui-convertissent" class="card h-shadow h-translate-y-sm all-ts w-100">
								<div class="card-body p-5">
									<div class="feature-box flex-column">
										<div class="fbox-image mb-5 text-center">
											<img height="140" src="/assets/images/services/experience.svg" alt="Pages qui convertissent">
										</div>
										<div class="fbox-content">
											<h3 class="text-transform-none ls-0 text-larger">Pages qui convertissent</h3>
											<p class="text-smaller">
												Message clair + preuves + prochain pas évident. Objectif : <strong>appeler</strong> ou <strong>demander un devis</strong>.
											</p>
										</div>
										<ul class="iconlist ms-2 mt-4 mb-0">
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Promesse + preuves</li>
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> CTA visibles</li>
											<li class="d-block text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> FAQ anti-objections</li>
										</ul>
									</div>
								</div>
							</a>
						</div>

						<!-- Fiche Google -->
						<div class="col-lg-4 col-md-6 d-flex">
							<a href="/services/google-business-profile" class="card h-shadow h-translate-y-sm all-ts w-100">
								<div class="card-body p-5">
									<div class="feature-box flex-column">
										<div class="fbox-image mb-5 text-center">
											<img height="140" src="/assets/images/services/content_marketing.svg" alt="Fiche Google (GBP)">
										</div>
										<div class="fbox-content">
											<h3 class="text-transform-none ls-0 text-larger">Fiche Google (GBP)</h3>
											<p class="text-smaller">
												Optimisation de la fiche : infos, catégories, services, contenus… pour générer plus d’appels.
											</p>
										</div>
										<ul class="iconlist ms-2 mt-4 mb-0">
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Catégories + services</li>
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Posts / photos / FAQ</li>
											<li class="d-block text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Cohérence NAP</li>
										</ul>
									</div>
								</div>
							</a>
						</div>

						<!-- Tracking -->
						<div class="col-lg-4 col-md-6 d-flex">
							<a href="/services/suivi-conversions" class="card h-shadow h-translate-y-sm all-ts w-100">
								<div class="card-body p-5">
									<div class="feature-box flex-column">
										<div class="fbox-image mb-5 text-center">
											<img height="140" src="/assets/images/services/analysis.svg" alt="Suivi conversions">
										</div>
										<div class="fbox-content">
											<h3 class="text-transform-none ls-0 text-larger">Suivi appels & formulaires</h3>
											<p class="text-smaller">
												Vous savez <strong>d’où viennent</strong> les demandes. Pilotage simple : on garde ce qui marche.
											</p>
										</div>
										<ul class="iconlist ms-2 mt-4 mb-0">
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Clic téléphone + formulaires</li>
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Sources (Google/Ads/pages)</li>
											<li class="d-block text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Tableau de bord simple</li>
										</ul>
									</div>
								</div>
							</a>
						</div>

						<!-- Meta Ads -->
						<div class="col-lg-4 col-md-6 d-flex">
							<a href="/services/meta-ads" class="card h-shadow h-translate-y-sm all-ts w-100">
								<div class="card-body p-5">
									<div class="feature-box flex-column">
										<div class="fbox-image mb-5 text-center">
											<img height="140" src="/assets/images/services/social.svg" alt="Meta Ads">
										</div>
										<div class="fbox-content">
											<h3 class="text-transform-none ls-0 text-larger">Meta Ads (Facebook/Instagram)</h3>
											<p class="text-smaller">
												Utile en local si l’offre est simple et visuelle — avec une page adaptée derrière.
											</p>
										</div>
										<ul class="iconlist ms-2 mt-4 mb-0">
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Créa + message</li>
											<li class="d-block mb-2 text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Ciblage local</li>
											<li class="d-block text-muted"><i class="fa-solid fa-check text-smaller me-1 color"></i> Conversion tracking</li>
										</ul>
									</div>
								</div>
							</a>
						</div>

					</div>

					<div class="text-center mt-5">
						<a href="/audit-gratuit" class="button button-rounded button-large text-transform-none ls-0 me-2">
							Demander un audit (gratuit)
						</a>
						<a href="/tarifs/" class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0">
							Voir les tarifs
						</a>
						<div class="mt-3 small text-muted">
							Objectif : appels & formulaires • Sud Oise (60) & Nord Val-d’Oise (95)
						</div>
					</div>
				</div>
			</div>

			<!-- Preuves (sans carousel)
      ============================================= -->
			<div class="section m-0" style="background: var(--cnvs-contrast-0); padding: 80px 0;">
				<div class="container">
					<div class="heading-block border-bottom-0 text-center mx-auto" style="max-width: 780px;">
						<div class="badge rounded-pill badge-default">Preuves</div>
						<h2 class="text-transform-none ls-0 mb-3">On pilote avec des signaux mesurables</h2>
						<p class="text-muted mb-0">
							Pas de “boîte noire”. On suit ce qui compte pour un business local : demandes, sources, et pages qui transforment.
						</p>
					</div>

					<div class="row g-4 mt-4">

						<div class="col-lg-4">
							<div class="card rounded-4 shadow border-0 h-100">
								<div class="card-body p-4 position-relative overflow-hidden">
									<h3 class="h5 mb-2">Demandes suivies</h3>
									<p class="text-muted mb-0">
										On suit les <strong>clics téléphone</strong> et <strong>formulaires</strong> pour savoir ce qui génère réellement des demandes.
									</p>
									<div class="bg-icon bi-telephone-outbound op-02"></div>
								</div>
							</div>
						</div>

						<div class="col-lg-4">
							<div class="card rounded-4 shadow border-0 h-100">
								<div class="card-body p-4 position-relative overflow-hidden">
									<h3 class="h5 mb-2">Sources claires</h3>
									<p class="text-muted mb-0">
										Vous voyez d’où viennent les demandes : <strong>Google</strong>, <strong>Ads</strong>, <strong>pages</strong>. On renforce ce qui rapporte.
									</p>
									<div class="bg-icon bi-graph-up op-02"></div>
								</div>
							</div>
						</div>

						<div class="col-lg-4">
							<div class="card rounded-4 shadow border-0 h-100">
								<div class="card-body p-4 position-relative overflow-hidden">
									<h3 class="h5 mb-2">Plan d’actions priorisé</h3>
									<p class="text-muted mb-0">
										Un ordre de priorité clair : <strong>gain rapide</strong> d’abord, puis <strong>durable</strong>. Pas 30 tâches inutiles.
									</p>
									<div class="bg-icon bi-list-check op-02"></div>
								</div>
							</div>
						</div>

					</div>

					<div class="row g-4 mt-1">

						<div class="col-lg-6">
							<div class="card rounded-4 shadow border-0 h-100">
								<div class="card-body p-4">
									<h3 class="h5 mb-2">Ce que vous recevez (concret)</h3>
									<ul class="iconlist text-muted mb-0">
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Les 2–3 blocages principaux (Google / Ads / pages)</li>
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Un plan d’actions (1 page) avec priorités</li>
										<li class="d-block"><i class="fa-solid fa-check text-smaller me-0 color"></i> Des exemples de corrections applicables</li>
									</ul>
								</div>
							</div>
						</div>

						<div class="col-lg-6">
							<div class="card rounded-4 shadow border-0 h-100">
								<div class="card-body p-4">
									<h3 class="h5 mb-2">Transparence & maîtrise du budget</h3>
									<ul class="iconlist text-muted mb-0">
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> Vous gardez la main sur vos comptes (Ads / Analytics)</li>
										<li class="d-block mb-2"><i class="fa-solid fa-check text-smaller me-0 color"></i> On coupe ce qui ne rapporte pas</li>
										<li class="d-block"><i class="fa-solid fa-check text-smaller me-0 color"></i> Pilotage simple orienté demandes</li>
									</ul>
								</div>
							</div>
						</div>

					</div>

					<div class="text-center mt-5">
						<a href="/preuves/" class="button button-rounded text-transform-none ls-0 me-2">
							Voir les preuves
						</a>
						<a href="/audit-gratuit" class="button button-rounded button-light text-dark bg-white border text-transform-none ls-0">
							Demander un audit (gratuit)
						</a>
					</div>
				</div>
			</div>

			<!-- CTA (final)
      ============================================= -->
			<div
				class="section mt-0"
				style="padding: 100px 0; overflow: visible; background: url('/assets/images/sections/3.jpg') no-repeat top center; background-size: cover;"
			>
				<div class="container">
					<div class="heading-block border-bottom-0 text-center">

						<div class="h6 text-uppercase ls-1 mb-1">Audit gratuit • Réponse rapide • Sans engagement</div>

						<h2 class="text-transform-none ls-0">
							On regarde votre visibilité et on vous dit <span>quoi faire en premier</span>.
						</h2>

						<p class="text-muted mb-0" style="max-width: 720px; margin: 0 auto;">
							SEO local + annonces Google/Meta + pages qui convertissent, avec un suivi des demandes (appels &amp; formulaires).
							Zone : Sud Oise (60) &amp; Nord Val-d’Oise (95).
						</p>

						<div class="mt-4">
							<a href="/audit-gratuit" class="button button-large button-rounded text-transform-none ms-0 ls-0 me-2">
								Demander un audit (gratuit)
							</a>
							<a
								href="/contact/?cta=rappel"
								class="button button-large button-rounded button-light text-dark bg-white border text-transform-none ms-0 ls-0"
							>
								Être rappelé
							</a>
						</div>

						<div class="mt-4 small text-muted">
							Ou appelez directement :
							<a href="tel:+33660921008" class="text-decoration-underline">06 60 92 10 08</a>
							• <a href="mailto:contact@horizon-conversion.fr" class="text-decoration-underline">contact@horizon-conversion.fr</a>
						</div>

					</div>
				</div>
			</div>

		</div>
	</section>
</BaseLayout>