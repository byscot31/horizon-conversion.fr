---
// src/pages/services/google-ads/index.astro

import Head from "../../../components/Head.astro";
import TopBar from "../../../components/TopBar.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import JavaScripts from "../../../components/JavaScripts.astro";

// Base URL + assets
const SITE =
  (import.meta as any).env?.PUBLIC_SITE_URL ||
  (Astro.site ? String(Astro.site) : "");

const ASSET_BASE =
  (((import.meta as any).env?.PUBLIC_ASSET_BASE as string) || "/_assets_").replace(/\/$/, "");

const canonical = SITE
  ? new URL(Astro.url.pathname, SITE).toString()
  : Astro.url.toString();

const seo = {
  title: "Consultant Google Ads Oise (60) & Nord Val-d’Oise (95) | Leads rapides (Search)",
  description:
    "Campagnes Google Ads (Search) locales dans le Sud de l’Oise et le Nord 95 : structure, mots-clés intention, exclusions, landing pages, suivi appels & formulaires, optimisation coût par lead.",
};

const contact = {
  phoneDisplay: "06 60 92 10 08",
  phoneHref: "+33660921008",
  email: "contact@horizon-conversion.fr",
  linkedin: "#",
  instagram: "#",
};

const pageTitle = {
  badge: "Google Ads",
  h1: "Google Ads (Search) : leads rapides",
  breadcrumb: [
    { label: "Accueil", href: "/" },
    { label: "Services", href: "/services/" },
    { label: "Google Ads", href: "/services/google-ads/" },
  ],
};

const hero = {
  badge: "Search • Local • Piloté au coût par lead",
  title: "Des demandes dès cette semaine (sans gaspiller le budget).",
  p1:
    "Google Ads est idéal si vous voulez des leads rapidement : on cible l’intention (“devis”, “urgence”, “près de moi”) sur vos zones (Sud Oise / Nord 95) et on suit chaque action (appel, formulaire, WhatsApp).",
  p2:
    "Ma promesse : une structure propre, des mots-clés utiles, des exclusions solides, et des pages d’atterrissage qui convertissent.",
  ctaPrimary: { label: "Demander un audit Google Ads", href: "/contact/" },
  ctaSecondary: { label: "Voir tous les services", href: "/services/" },
  img: `${ASSET_BASE}/images/services/adwords.svg`,
  imgAlt: "Google Ads Oise Val-d’Oise - campagnes Search",
};

const provideIntro = {
  badge: "Ce que je mets en place",
  title: "Une méthode simple : intention → page → conversion → optimisation",
};

const provides = [
  {
    iconClass: "fa-brands fa-google text-white bg-google",
    title: "Google Search (intention forte)",
    text:
      "Campagnes Search orientées “devis / appel / urgence”. On évite les clics “curiosité” et on cible les requêtes qui déclenchent une demande.",
  },
  {
    iconClass: "uil uil-shopping-cart text-white bg-google",
    title: "Landing pages (pas la home)",
    text:
      "Pages dédiées par service/zone avec preuves, CTA, FAQ et formulaire court : c’est là que le coût par lead baisse vraiment.",
  },
  {
    iconClass: "fa-brands fa-app-store text-white bg-appstore",
    title: "Suivi conversions (GA4/GTM/UTM)",
    text:
      "Tracking propre : appels, formulaires, WhatsApp, clic e-mail. Sans mesure fiable, Ads devient une loterie.",
  },
  {
    iconClass: "bi-camera-video text-white bg-youtube",
    title: "Remarketing (si pertinent)",
    text:
      "Relancer les visiteurs qui n’ont pas converti : utile pour les paniers (e-commerce) et les cycles de décision plus longs.",
  },
  {
    iconClass: "bi-phone text-white bg-instagram",
    title: "Mobile & extensions",
    text:
      "Optimisation mobile + extensions (appel, lieu, accroches) : plus de visibilité, plus de taux de clic, plus d’appels.",
  },
  {
    iconClass: "bi-bullseye text-white bg-android",
    title: "Exclusions & anti-gaspillage",
    text:
      "Mots-clés négatifs, filtres, zones, horaires, requêtes : on coupe ce qui ne convertit pas. Le budget sert à générer des leads.",
  },
];

const otherIntro = {
  badge: "Pour amplifier les résultats",
  title: "Les briques complémentaires (souvent décisives)",
};

const otherCauses = [
  {
    icon: `${ASSET_BASE}/images/icons/experience.svg`,
    title: "CRO : augmenter le taux de conversion",
    desc:
      "Si la page convertit mieux, le coût par lead baisse mécaniquement. On travaille CTA, preuves, friction, formulaire.",
    bullets: [
      "Audit UX mobile-first",
      "CTA + preuves (avis, réalisations)",
      "Formulaire court & efficace",
      "Optimisation vitesse",
      "Tests A/B “light”",
    ],
    href: "/services/cro/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/analysis.svg`,
    title: "Tracking & Analytics",
    desc:
      "On attribue les leads (source/campagne/mot-clé) et on mesure la qualité. Pilotage au réel, pas au feeling.",
    bullets: [
      "GA4 + Google Tag Manager",
      "Événements (tel, WhatsApp, formulaire)",
      "UTM propres & auto",
      "Tableau de bord simple",
      "Qualité des leads",
    ],
    href: "/services/analytics/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/seo.svg`,
    title: "SEO local (pour réduire la dépendance à Ads)",
    desc:
      "Ads donne des leads vite, le SEO local construit une visibilité durable sur Google Maps et en organique.",
    bullets: [
      "Google Business Profile",
      "Pages “ville + service”",
      "Avis & e-réputation",
      "FAQ + schémas",
      "Maillage interne",
    ],
    href: "/services/seo-local/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/content_marketing.svg`,
    title: "Contenu orienté conversions",
    desc:
      "Des pages et contenus qui répondent aux questions locales (prix, délais, zones) : plus de qualité, plus de conversions.",
    bullets: [
      "Pages services structurées",
      "FAQ (objections) intégrées",
      "Preuves & cas clients",
      "Optimisation titles/meta",
      "Maillage interne",
    ],
    href: "/services/contenu-seo/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/social.svg`,
    title: "Retargeting Meta / Social",
    desc:
      "Relancer les visiteurs et renforcer la preuve sociale : utile quand la décision n’est pas immédiate.",
    bullets: [
      "Audiences visiteurs",
      "Créa simple & locale",
      "Offres + preuves",
      "Tracking UTM",
      "Optimisation CPL",
    ],
    href: "/services/social/",
  },
  {
    icon: `${ASSET_BASE}/images/icons/adword.svg`,
    title: "Structuration multi-zones",
    desc:
      "Campagnes par zones/villes si besoin (Senlis, Chantilly, Creil, Compiègne, Luzarches, L’Isle-Adam) : pertinence & contrôle.",
    bullets: [
      "Ciblage zones & exclusions",
      "Annonces par intention",
      "Extensions locales",
      "Horaires & saisonnalité",
      "Pilotage au CPL",
    ],
    href: "/services/google-ads/",
  },
];

const formSection = {
  bg: `${ASSET_BASE}/images/sections/1.jpg`,
  badge: "Audit Google Ads",
  title: "Recevez un diagnostic rapide (gratuit)",
  text:
    "Je vous dis quoi corriger pour générer plus de leads avec le même budget : structure, mots-clés, exclusions, annonces, landing page et tracking.",
  cardTitle: "Demander l’audit",
  fields: {
    nameLabel: "Nom *",
    emailLabel: "Email *",
    websiteLabel: "Site Web *",
  },
  submitLabel: "Envoyer",
  videoUrl: "https://www.youtube.com/watch?v=P3Huse9K6Xs",
};

// JSON-LD (Service)
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Google Ads (Search) - Sud Oise & Nord Val-d’Oise",
  serviceType: "Google Ads / SEA (Search)",
  areaServed: [
    "Oise (60)",
    "Val-d’Oise (95)",
    "Senlis",
    "Chantilly",
    "Creil",
    "Compiègne",
    "Luzarches",
    "L'Isle-Adam",
  ],
  provider: {
    "@type": "Organization",
    name: "Horizon Conversion",
    url: canonical,
  },
};
---

<!doctype html>
<html dir="ltr" lang="fr-FR">
  <Head {seo} {canonical} {jsonLd} />
  <body class="stretched">
    <div id="wrapper">
      <TopBar {contact} ASSET_BASE={ASSET_BASE} />
      <Header {contact} ASSET_BASE={ASSET_BASE} />

      <!-- Page Title -->
      <section class="page-title page-title-parallax parallax scroll-detect page-title-center dark include-header include-topbar">
        <img src={`${ASSET_BASE}/images/services/adwords-title.jpg`} class="parallax-bg" alt="Google Ads Oise et Val-d’Oise" />
        <div id="particles-line"></div>

        <div class="container">
          <div class="page-title-row">
            <div class="page-title-content">
              <div class="badge rounded-pill border border-light text-light">{pageTitle.badge}</div>
              <h1>{pageTitle.h1}</h1>
              <p class="mb-0 mt-3">
                Zone : <strong>Sud Oise (60)</strong> &amp; <strong>Nord Val-d’Oise (95)</strong> — Senlis, Chantilly, Creil,
                Compiègne, Luzarches, L’Isle-Adam…
              </p>
            </div>

            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                {pageTitle.breadcrumb.map((b, idx) => (
                  <li
                    class={`breadcrumb-item ${idx === pageTitle.breadcrumb.length - 1 ? "active" : ""}`}
                    aria-current={idx === pageTitle.breadcrumb.length - 1 ? "page" : undefined}
                  >
                    {idx === pageTitle.breadcrumb.length - 1 ? b.label : <a href={b.href}>{b.label}</a>}
                  </li>
                ))}
              </ol>
            </nav>
          </div>
        </div>

        <div class="video-overlay z-1" style="background-image: linear-gradient(to top, rgba(254,150,3,0.5), #39384D);"></div>
      </section>

      <!-- Content -->
      <section id="content">
        <div class="content-wrap pb-0">
          <div class="container">
            <div class="row align-items-center">
              <div class="col-lg-6">
                <div class="badge rounded-pill badge-default">{hero.badge}</div>
                <h2 class="display-4 fw-bold">{hero.title}</h2>
                <p>{hero.p1}</p>
                <p>{hero.p2}</p>

                <div class="d-flex flex-wrap gap-2">
                  <a href={hero.ctaPrimary.href} class="button button-rounded button-large text-transform-none ls-0">{hero.ctaPrimary.label}</a>
                  <a href={hero.ctaSecondary.href} class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0">{hero.ctaSecondary.label}</a>
                </div>

                <div class="mt-4 small text-muted">
                  Requêtes visées : <strong>consultant Google Ads Oise</strong>, <strong>agence Google Ads Val-d’Oise</strong>,{" "}
                  <strong>campagne Google Ads artisan</strong>, <strong>leads Google Ads</strong>, <strong>coût par lead</strong>.
                </div>
              </div>

              <div class="col-lg-6 mt-4 mt-lg-0 text-center">
                <img src={hero.img} alt={hero.imgAlt} />
              </div>
            </div>

            <div class="clear line my-6"></div>

            <div class="heading-block border-bottom-0 text-center">
              <div class="badge rounded-pill badge-default">{provideIntro.badge}</div>
              <h3 class="text-transform-none ls-0">{provideIntro.title}</h3>
            </div>

            <div class="clear"></div>

            <div class="row mt-4 col-mb-50 mb-0">
              {provides.map((f) => (
                <div class="col-sm-6 col-lg-4">
                  <div class="feature-box">
                    <div class="fbox-icon mb-4">
                      <a href="#"><i class={f.iconClass}></i></a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none">{f.title}</h3>
                      <p>{f.text}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="clear"></div>

          <!-- Other Causes -->
          <div class="section mb-0">
            <div class="container">
              <div class="heading-block border-bottom-0 text-center">
                <div class="badge rounded-pill badge-default">{otherIntro.badge}</div>
                <h3 class="text-transform-none ls-0">{otherIntro.title}</h3>
              </div>

              <div class="row col-mb-30 align-content-stretch">
                {otherCauses.map((c) => (
                  <div class="col-lg-4 col-md-6 d-flex">
                    <div class="card">
                      <div class="card-body p-5">
                        <div class="feature-box flex-column">
                          <div class="fbox-icon mb-3">
                            <img src={c.icon} alt={c.title} class="bg-transparent rounded-0" />
                          </div>
                          <div class="fbox-content">
                            <h3 class="text-transform-none ls-0 text-larger">{c.title}</h3>
                            <p class="text-smaller">{c.desc}</p>
                          </div>
                          <ul class="iconlist ms-3 mt-4 mb-0">
                            {c.bullets.map((b, idx) => (
                              <li class={`mb-2 text-muted ${idx === c.bullets.length - 1 ? "mb-0" : ""}`}>
                                <i class="fa-solid fa-check text-smaller color"></i> {b}
                              </li>
                            ))}
                          </ul>

                          <div class="mt-4">
                            <a href={c.href} class="button button-rounded button-light text-dark bg-white border text-transform-none ls-0 w-100 text-center">
                              En savoir plus
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Form Section -->
          <div
            class="section mt-0"
            style={{
              background: `url(${formSection.bg}) no-repeat center center`,
              backgroundSize: "cover",
              padding: "100px 0",
            }}
          >
            <div class="container">
              <div class="row justify-content-between align-items-center">
                <div class="col-md-6">
                  <div class="heading-block border-bottom-0 mb-4">
                    <div class="badge rounded-pill badge-default">{formSection.badge}</div>
                    <h3 class="text-transform-none ls-0">{formSection.title}</h3>
                  </div>
                  <p>{formSection.text}</p>

                  <div class="mt-4 small text-white-50">
                    Exemples : “devis plombier <strong>Senlis</strong>”, “chauffagiste <strong>Chantilly</strong>”, “urgence serrurier <strong>Creil</strong>”, “nettoyage toiture <strong>Compiègne</strong>”.
                  </div>
                </div>

                <div class="col-lg-5 col-md-6">
                  <div class="card shadow-sm">
                    <div class="card-body">
                      <h4 class="mb-3">{formSection.cardTitle}</h4>

                      <div class="form-widget">
                        <div class="form-result"></div>
                        <form class="row mb-0" id="template-contactform" name="template-contactform" action="/include/form.php" method="post">
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-name">{formSection.fields.nameLabel}</label>
                            <input type="text" id="template-contactform-name" name="template-contactform-name" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-3">
                            <label for="template-contactform-email">{formSection.fields.emailLabel}</label>
                            <input type="email" id="template-contactform-email" name="template-contactform-email" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-4">
                            <label for="template-contactform-website">{formSection.fields.websiteLabel}</label>
                            <input type="text" id="template-contactform-website" name="template-contactform-website" class="form-control input-sm required" value="" />
                          </div>
                          <div class="col-12 form-group mb-0">
                            <button class="button button-rounded w-100 text-transform-none ls-0 m-0" type="submit" id="template-contactform-submit" name="template-contactform-submit" value="submit">
                              {formSection.submitLabel}
                            </button>
                          </div>

                          <input type="hidden" name="prefix" value="template-contactform-" />
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </section>

      <Footer {contact} ASSET_BASE={ASSET_BASE} />
    </div>

    <div id="gotoTop" class="uil uil-angle-up"></div>

    <JavaScripts ASSET_BASE={ASSET_BASE} />

    <!-- Particles -->
    <script is:inline src={`${ASSET_BASE}/js/particles/particles.min.js`}></script>
    <script is:inline src={`${ASSET_BASE}/js/particles/particles-line.js`}></script>
  </body>
</html>