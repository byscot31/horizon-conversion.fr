---
// src/pages/zones/[zone].astro

import PageLayout from "../../layouts/PageLayout.astro";
import zones from "../../data/zones.json";
import cities from "../../data/cities.json";
import services from "../../data/services.json";
import ctas from "../../data/ctas.json";
import site from "../../data/site.json";

const { zone } = Astro.params;
const z = zones.find(x => x.slug === zone);
if (!z) throw new Error("Zone not found");

const premiumCities = cities.premium.filter(c => z.citiesPremium.includes(c.slug));
const volumeCities  = cities.volume.filter(c => z.citiesVolume.includes(c.slug));

export async function getStaticPaths() {
  return zones.map(z => ({ params: { zone: z.slug } }));
}
---

<PageLayout
  title={`${z.name} — ${site.brand}`}
  description={`Consultant local. ${z.name}. SEO local, Ads, contenu, site et suivi.`}
>
  <section class="section bg-transparent m-0" style="padding: 80px 0;">
    <div class="container">
      <div class="badge rounded-pill badge-default">{z.name}</div>
      <h1 class="text-transform-none ls-0 mt-3">Générer des demandes en {z.name}</h1>
      <p class="lead mb-4">{z.summary}</p>

      <div class="d-flex flex-wrap gap-2 mb-4">
        <a href={ctas.primary.href} class="button button-rounded">{ctas.primary.label}</a>
        <a href={ctas.secondary.href} class="button button-rounded button-light text-dark bg-white border">{ctas.secondary.label}</a>
      </div>

      <div class="row g-4">
        <div class="col-lg-6">
          <div class="p-4 rounded-6 bg-white shadow-sm">
            <h3 class="text-transform-none ls-0">Villes premium</h3>
            <p class="text-contrast-600">Approche plus sur-mesure.</p>
            <ul class="mb-0">
              {premiumCities.map(c => <li><a href={`/villes/${c.slug}/services/seo-local/`}>{c.name}</a></li>)}
            </ul>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="p-4 rounded-6 bg-white shadow-sm">
            <h3 class="text-transform-none ls-0">Villes pack</h3>
            <p class="text-contrast-600">Simple. Rapide. Budget maîtrisé.</p>
            <ul class="mb-0">
              {volumeCities.map(c => <li><a href={`/local/${c.slug}/seo-local/`}>{c.name}</a></li>)}
            </ul>
          </div>
        </div>
      </div>

      <div class="mt-5">
        <h3 class="text-transform-none ls-0">Services</h3>
        <div class="row g-3">
          {services.map(s => (
            <div class="col-md-6 col-lg-4">
              <a class="text-decoration-none" href={`/services/${s.slug}/`}>
                <div class="p-3 rounded-6 bg-white shadow-sm h-100">
                  <div class="fw-semibold">{s.title}</div>
                  <div class="small text-contrast-600">{s.benefit}</div>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</PageLayout>