---
// src/pages/index.astro
import Head from "../components/Head.astro";
import TopBar from "../components/TopBar.astro";
import Header from "../components/Header.astro";
import Testimonials from "../components/Testimonials.astro";
import FormSection from "../components/FormSection.astro";
import Footer from "../components/Footer.astro";
import JavaScripts from "../components/JavaScripts.astro";

const ASSET_BASE = "/_assets_";

const SITE =
  (import.meta as any).env?.PUBLIC_SITE_URL ||
  (Astro.site ? String(Astro.site) : "");

const canonical = SITE ? new URL(Astro.url.pathname, SITE).toString() : Astro.url.toString();

const seo = {
  title: "Consultant Webmarketing Sud Oise & Nord 95 | SEO local, Google Ads, CRO",
  description:
    "Consultant webmarketing (SEO local, Google Ads, CRO) dans le Sud de l’Oise (60) et le Nord Val-d’Oise (95). Générez plus de leads qualifiés avec une stratégie data-driven.",
  ogTitle: "Consultant Webmarketing Sud Oise & Nord 95 | SEO local, Google Ads, CRO",
  ogDescription:
    "J’aide artisans, cabinets et PME à générer des leads via SEO local, Google Ads et optimisation de conversion. Sud Oise (60) & Nord Val-d’Oise (95).",
  ogUrl: canonical,
};

const contact = {
  phoneDisplay: "06 60 92 10 08",
  phoneHref: "+33660921008",
  email: "contact@horizon-conversion.fr",
  linkedin: "#",
  instagram: "#",
};

const pricing = {
  intro:
    "Vous choisissez un pack adapté (Artisan / Cabinet / PME). Mise en place, suivi et optimisation. Transparence : priorités, actions, reporting.",
  plans: [
    {
      name: "Pack Local",
      subtitle: "Idéal artisans & cabinets",
      icon: `${ASSET_BASE}/images/icons/man.svg`,
      iconWidth: 50,
      monthly: "490",
      quarterly: "1290",
      featuresMonthly: [
        { ok: true, text: "Google Business Profile : optimisation" },
        { ok: false, text: "Pages locales (x2)", del: true },
        { ok: true, text: "Tracking conversions (formulaire/CTA)" },
        { ok: true, text: "Reporting mensuel + plan d’actions" },
        { ok: true, text: "Support email" },
      ],
      featuresQuarterly: [
        { ok: true, text: "Google Business Profile : optimisation" },
        { ok: true, text: "Pages locales (x6)" },
        { ok: true, text: "Tracking conversions (formulaire/CTA)" },
        { ok: true, text: "Reporting mensuel + plan d’actions" },
        { ok: true, text: "Support email" },
      ],
      cta: { label: "Demander un audit", href: "/contact/" },
      primary: true,
    },
    {
      name: "Pack Acquisition",
      subtitle: "SEO + Ads + CRO",
      icon: `${ASSET_BASE}/images/icons/group.svg`,
      iconWidth: 60,
      monthly: "990",
      quarterly: "2690",
      featuresMonthly: [
        { ok: true, text: "Google Ads (structure + optimisation)" },
        { ok: true, text: "Landing pages conversion (CRO)" },
        { ok: true, text: "SEO local + contenus prioritaires" },
        { ok: true, text: "Tracking avancé (UTM + événements)" },
        { ok: true, text: "Point hebdo (30 min) + reporting" },
      ],
      featuresQuarterly: [
        { ok: true, text: "Google Ads (structure + optimisation)" },
        { ok: true, text: "Landing pages conversion (CRO)" },
        { ok: true, text: "SEO local + contenus prioritaires" },
        { ok: true, text: "Tracking avancé (UTM + événements)" },
        { ok: true, text: "Point hebdo (30 min) + reporting" },
      ],
      cta: { label: "Parler de votre projet", href: "/contact/" },
      primary: false,
    },
  ],
  note: "* Budget publicitaire non inclus. Packs modulables selon votre activité.",
};

const works = [
  { img: `${ASSET_BASE}/images/works/1.jpg`, alt: "Artisan - SEO local", title: "Artisan : visibilité Google", tag: "SEO Local • Google Business Profile", href: "/services/seo-local/" },
  { img: `${ASSET_BASE}/images/works/2.jpg`, alt: "PME - Google Ads", title: "PME : leads via Ads", tag: "Google Ads • Landing pages", href: "/services/google-ads/" },
  { img: `${ASSET_BASE}/images/works/3.jpg`, alt: "CRO - conversion", title: "Site : + demandes sans + trafic", tag: "CRO • UX • Formulaires", href: "/services/cro/" },
  { img: `${ASSET_BASE}/images/works/4.jpg`, alt: "Audit SEO / Tracking", title: "Audit : priorités data", tag: "Analytics • Tracking • Plan d’actions", href: "/services/analytics/" },
  { img: `${ASSET_BASE}/images/works/5.jpg`, alt: "Contenu SEO local", title: "Pages villes + services", tag: "SEO • Contenu • Maillage", href: "/services/contenu-seo/" },
  { img: `${ASSET_BASE}/images/works/6.jpg`, alt: "Stratégie webmarketing", title: "Stratégie acquisition", tag: "SEO • Ads • CRO", href: "/services/" },
];

const processSteps = [
  { icon: `${ASSET_BASE}/images/icons/research.svg`, title: "1. Audit & priorités", desc: "On identifie les leviers à fort impact : visibilité locale, pages clés, tracking, points de friction." },
  { icon: `${ASSET_BASE}/images/icons/optimizing.svg`, title: "2. Mise en place & optimisation", desc: "SEO local, Ads, landing pages, formulaires : on construit un système qui génère un flux de demandes." },
  { icon: `${ASSET_BASE}/images/icons/result.svg`, title: "3. Suivi & résultats", desc: "Reporting clair, décisions data : on améliore en continu le coût par lead et la qualité des demandes." },
];

const blog = [
  { href: "/blog/seo-local-oise/", img: `${ASSET_BASE}/images/blog/1.jpg`, alt: "SEO local Oise", title: "SEO local : apparaître dans Google Maps (Oise & Nord 95)", author: "Horizon Conversion", date: "2026", excerpt: "Les bases qui font la différence : Google Business Profile, avis, catégories, pages locales et cohérence NAP." },
  { href: "/blog/google-ads-artisans/", img: `${ASSET_BASE}/images/blog/2.jpg`, alt: "Google Ads artisans", title: "Google Ads : générer des devis sans brûler le budget", author: "Horizon Conversion", date: "2026", excerpt: "Structure, mots-clés, exclusions, annonces, landing page : le combo pour un coût par lead maîtrisé." },
  { href: "/blog/cro-formulaire/", img: `${ASSET_BASE}/images/blog/3.jpg`, alt: "CRO formulaire", title: "CRO : 7 optimisations pour doubler les demandes", author: "Horizon Conversion", date: "2026", excerpt: "Preuves, CTA, friction, vitesse, mobile : des gains rapides sans changer tout le site." },
];

// JSON-LD (à adapter quand tu ajoutes adresse/ville)
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  name: "Horizon Conversion",
  url: canonical,
  areaServed: ["Oise", "Val-d’Oise"],
  serviceType: ["SEO local", "Google Ads", "CRO", "Analytics"],
  email: contact.email,
  telephone: contact.phoneDisplay,
};
---

<!DOCTYPE html>
<html dir="ltr" lang="fr-FR">
  <Head {seo} {canonical} {jsonLd} ASSET_BASE={ASSET_BASE} />

  <body class="stretched">
    <div id="wrapper">
      <TopBar {contact} ASSET_BASE={ASSET_BASE} />

      <Header {contact} ASSET_BASE={ASSET_BASE} />

      <!-- Slider -->
      <section id="slider" class="slider-element slider-parallax min-vh-60 min-vh-md-100 include-header">
        <div
          class="slider-inner"
          style={`background: var(--cnvs-contrast-0) url('${ASSET_BASE}/images/hero/hero-1.jpg') center center no-repeat; background-size: cover;`}
        >
          <div class="vertical-middle slider-element-fade">
            <div class="container py-5">
              <div class="row pt-6 mt-5">
                <div class="col-lg-7 col-md-10">
                  <div class="slider-title">
                    <div class="badge rounded-pill badge-default">Sud Oise (60) • Nord 95</div>

                    <h1 class="mb-2">
                      Consultant webmarketing local : <br />
                      SEO, Google Ads &amp; CRO.
                    </h1>

                    <h2 class="h3 text-rotater mb-2" data-separator="," data-rotate="fadeIn" data-speed="3500">
                      - Générez plus de <span class="t-rotate">leads,appels,devis</span> avec une stratégie orientée conversion.
                    </h2>

                    <p class="lead">
                      J’accompagne artisans, cabinets et PME autour de <strong>Senlis, Chantilly, Creil, Compiègne</strong> et du
                      <strong>Nord Val-d’Oise</strong> pour gagner en visibilité sur Google, capter des demandes qualifiées et améliorer le taux
                      de conversion de leur site.
                    </p>

                    <a href="/contact/" class="button button-rounded button-large text-transform-none ls-0">Demander un audit</a>
                    <a href="/services/" class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0">
                      Voir les services
                    </a>

                    <div class="mt-4 small text-muted">
                      <strong>Focus requêtes :</strong> consultant webmarketing Oise • consultant SEO local Oise • agence Google Ads Oise • optimisation conversion (CRO) • SEO Nord 95
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="video-wrap h-100 d-block d-lg-none">
            <div class="video-overlay" style="background: rgba(255,255,255,0.85);"></div>
          </div>
        </div>
      </section>

      <section id="content">
        <div class="content-wrap pt-0">

          <!-- Client Carousel -->
          <div class="section bg-transparent m-0 border-bottom py-5">
            <div class="container">
              <div
                id="oc-clients"
                class="owl-carousel image-carousel carousel-widget"
                data-margin="100"
                data-loop="true"
                data-autoplay="5000"
                data-nav="false"
                data-pagi="false"
                data-items-xs="2"
                data-items-sm="3"
                data-items-md="4"
                data-items-lg="5"
                data-items-xl="6"
              >
                <div class="oc-item"><a href="#"><img src={`${ASSET_BASE}/demos/business/images/clients/linkedin.svg`} alt="Artisans & PME" /></a></div>
                <div class="oc-item"><a href="#"><img src={`${ASSET_BASE}/demos/business/images/clients/amazon.svg`} alt="E-commerce" /></a></div>
                <div class="oc-item"><a href="#"><img src={`${ASSET_BASE}/demos/business/images/clients/zillow.svg`} alt="Immobilier" /></a></div>
                <div class="oc-item"><a href="#"><img src={`${ASSET_BASE}/demos/business/images/clients/jetblue.svg`} alt="Services locaux" /></a></div>
                <div class="oc-item"><a href="#"><img src={`${ASSET_BASE}/demos/business/images/clients/nat-geo.svg`} alt="Professions libérales" /></a></div>
              </div>
            </div>
          </div>

          <!-- Features -->
          <div class="section bg-transparent mt-4 mb-0 pb-0">
            <div class="container">
              <div class="heading-block border-bottom-0 text-center mx-auto mb-0" style="max-width: 650px">
                <div class="badge rounded-pill badge-default">Services</div>
                <h2 class="h3 text-transform-none ls-0 mb-3">Ce que je fais (concrètement)</h2>
                <p>
                  Une approche simple : <strong>attirer</strong> le bon trafic (SEO/Ads), <strong>mesurer</strong> (tracking), puis <strong>convertir</strong> (CRO).
                  Objectif : plus d’appels, plus de formulaires, plus de chiffre.
                </p>
              </div>

              <div class="row justify-content-between align-items-center">
                <div class="col-lg-4 col-sm-6">
                  <div class="feature-box flex-md-row-reverse text-md-end border-0">
                    <div class="fbox-icon">
                      <a href="/services/seo-local/">
                        <img src={`${ASSET_BASE}/images/icons/seo.svg`} alt="SEO local Oise" class="bg-transparent rounded-0" />
                      </a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none ls-0">SEO local (Oise / Nord 95)</h3>
                      <p>Google Business Profile, pages “ville + service”, avis, maillage interne : visibilité durable là où vos clients cherchent.</p>
                    </div>
                  </div>

                  <div class="feature-box flex-md-row-reverse text-md-end border-0 mt-5">
                    <div class="fbox-icon">
                      <a href="/services/google-ads/">
                        <img src={`${ASSET_BASE}/images/icons/adword.svg`} alt="Google Ads Oise" class="bg-transparent rounded-0" />
                      </a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none ls-0">Google Ads (leads rapides)</h3>
                      <p>Structure propre, mots-clés intention, annonces orientées devis, pages dédiées : on pilote au coût par lead.</p>
                    </div>
                  </div>

                  <div class="feature-box flex-md-row-reverse text-md-end border-0 mt-5">
                    <div class="fbox-icon">
                      <a href="/services/analytics/">
                        <img src={`${ASSET_BASE}/images/icons/analysis.svg`} alt="Tracking GA4 GTM" class="bg-transparent rounded-0" />
                      </a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none ls-0">Tracking &amp; analyse</h3>
                      <p>GA4, GTM, conversions, appels, UTM : vous savez d’où viennent vos demandes et ce qui rapporte.</p>
                    </div>
                  </div>
                </div>

                <div class="col-lg-3 col-7 offset-3 offset-sm-0 d-sm-none d-lg-block text-center my-5">
                  <img
                    src={`${ASSET_BASE}/images/sections/2.png`}
                    alt="Tableau de bord marketing"
                    class="rounded parallax"
                    data-bottom-top="transform: translateY(-30px)"
                    data-top-bottom="transform: translateY(30px)"
                  />
                </div>

                <div class="col-lg-4 col-sm-6">
                  <div class="feature-box border-0">
                    <div class="fbox-icon">
                      <a href="/services/social/">
                        <img src={`${ASSET_BASE}/images/icons/social.svg`} alt="Social & retargeting" class="bg-transparent rounded-0" />
                      </a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none ls-0">Social &amp; retargeting</h3>
                      <p>On connecte contenu + publicités pour relancer les visiteurs et déclencher la demande (sans “posts pour poster”).</p>
                    </div>
                  </div>

                  <div class="feature-box border-0 mt-5">
                    <div class="fbox-icon">
                      <a href="/services/cro/">
                        <img src={`${ASSET_BASE}/images/icons/experience.svg`} alt="CRO Conversion" class="bg-transparent rounded-0" />
                      </a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none ls-0">CRO (optimisation conversion)</h3>
                      <p>Amélioration UX, preuves, arguments, formulaires, vitesse : même trafic, plus de contacts.</p>
                    </div>
                  </div>

                  <div class="feature-box border-0 mt-5">
                    <div class="fbox-icon">
                      <a href="/services/contenu-seo/">
                        <img src={`${ASSET_BASE}/images/icons/content_marketing.svg`} alt="Contenu SEO local" class="bg-transparent rounded-0" />
                      </a>
                    </div>
                    <div class="fbox-content">
                      <h3 class="text-transform-none ls-0">Pages SEO &amp; contenus locaux</h3>
                      <p>Pages services, pages villes, FAQ, schémas : on capte les requêtes “près de chez moi” et “devis”.</p>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>

          <div class="section m-0" style={`background: url('${ASSET_BASE}/images/sections/4.png') no-repeat center top; background-size: cover; padding: 140px 0 0;`}>
            <div class="container">
              <div class="row justify-content-between">
                <div class="col-lg-4 mt-4">
                  <div class="heading-block border-bottom-0 mb-4">
                    <div class="badge rounded-pill badge-default">Offres</div>
                    <h2 class="h3 text-transform-none ls-0">Des packs simples.<br />Objectif : leads qualifiés.</h2>
                  </div>
                  <p>{pricing?.intro}</p>

                  <div class="pricing-tenure-switcher d-flex align-items-center mb-4 position-relative" data-container="#pricing-switch">
                    <span class="pts-switch pts-false col-auto">Mensuel</span>
                    <div class="pts-switcher col-auto">
                      <div class="switch mx-3">
                        <input id="switch-toggle-pricing-tenure" class="switch-toggle switch-toggle-round" type="checkbox" />
                        <label for="switch-toggle-pricing-tenure" class="mb-0"></label>
                      </div>
                    </div>
                    <span class="pts-switch pts-true col-auto">Trimestriel</span>
                    <div class="price-discount"></div>
                  </div>

                  <small class="text-muted d-block">
                    Zone : Sud Oise (60) &amp; Nord 95 • Senlis, Chantilly, Creil, Compiègne, Luzarches, L’Isle-Adam…
                  </small>
                </div>

                <div class="col-lg-8">
                  <div id="section-pricing" class="page-section p-0 m-0">
                    <div id="pricing-switch" class="pricing row align-items-end g-0 col-mb-50 mb-4">
                      {pricing?.plans?.map((p) => (
                        <div class="col-md-6">
                          <div class="pricing-box">
                            <div class="pricing-title">
                              <img class="mb-2 bg-transparent rounded-0" src={p.icon} alt={p.name} width={p.iconWidth} />
                              <h3>{p.name}</h3>
                              <span>{p.subtitle}</span>
                            </div>

                            <div class="pricing-price">
                              <div class="pts-content pts-content-false"><span class="price-unit">€</span>{p.monthly}<span class="price-tenure"> / mois</span></div>
                              <div class="pts-content pts-content-true"><span class="price-unit">€</span>{p.quarterly}<span class="price-tenure"> / trimestre</span></div>
                            </div>

                            <div class="pricing-features border-0 bg-transparent">
                              <ul>
                                {p.featuresMonthly?.map((f) => (
                                  <li class={f.del ? "pts-content pts-content-false text-black-50" : "pts-content pts-content-false"}>
                                    {f.ok ? <i class="fa-solid fa-check-circle color me-2"></i> : <i class="bi-dash-circle me-2"></i>}
                                    {f.del ? <del style="opacity:.5">{f.text}</del> : f.text}
                                  </li>
                                ))}

                                {p.featuresQuarterly?.map((f) => (
                                  <li class="pts-content pts-content-true">
                                    <i class="fa-solid fa-check-circle color me-2"></i>{f.text}
                                  </li>
                                ))}
                              </ul>
                            </div>

                            <div class="pricing-action">
                              <div class="pts-content pts-content-false">
                                <a href={p.cta?.href} class={`button ${p.primary ? "" : "button-light text-dark bg-white border"} button-large button-rounded w-100 text-transform-none m-0 ls-0`}>
                                  {p.cta?.label}
                                </a>
                              </div>
                              <div class="pts-content pts-content-true">
                                <a href={p.cta?.href} class={`button ${p.primary ? "" : "button-light text-dark bg-white border"} button-large button-rounded w-100 text-transform-none m-0 ls-0`}>
                                  {p.cta?.label}
                                </a>
                              </div>
                            </div>
                          </div>
                        </div>
                      ))}

                      <small class="text-muted">{pricing?.note}</small>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>

          <FormSection ASSET_BASE={ASSET_BASE} />

          <!-- Works/Projects -->
          <div class="section m-0" style={`background: url('${ASSET_BASE}/images/sections/5.jpg') no-repeat center center; background-size: cover; padding: 80px 0;`}>
            <div class="container">
              <div class="heading-block border-bottom-0 text-center">
                <div class="badge rounded-pill badge-default">Résultats</div>
                <h2 class="h3 text-transform-none ls-0">Exemples de missions (format “cas”)</h2>
                <p class="mb-0 text-muted">À remplacer par tes vrais cas clients dès que possible (même 3 suffisent).</p>
              </div>

              <div id="portfolio" class="portfolio row gutter-20">
                {works.map((w) => (
                  <article class="portfolio-item col-12 col-sm-6 col-md-4">
                    <div class="grid-inner">
                      <div class="portfolio-image">
                        <img src={w.img} alt={w.alt} />
                        <div class="bg-overlay">
                          <div class="bg-overlay-content dark" data-hover-animate="fadeIn" data-hover-speed="500">
                            <a href={w.href} class="overlay-trigger-icon bg-light text-dark" data-hover-animate="fadeIn" data-hover-speed="500">
                              <i class="uil uil-ellipsis-h"></i>
                            </a>
                          </div>
                          <div class="bg-overlay-bg dark" data-hover-animate="fadeIn" data-hover-speed="500"></div>
                        </div>
                      </div>
                      <div class="portfolio-desc">
                        <h3><a href={w.href}>{w.title}</a></h3>
                        <span>{w.tag}</span>
                      </div>
                    </div>
                  </article>
                ))}
              </div>

              <div class="text-center">
                <a href="/services/" class="button button-large button-rounded text-capitalize ms-0 mt-5 ls-0">Voir les services</a>
              </div>
            </div>
          </div>

          <!-- Process -->
          <div class="container py-5">
            <div class="row">
              {processSteps.map((s) => (
                <div class="col-md-4 mt-5">
                  <div class="feature-box fbox-center border-0">
                    <div class="fbox-icon">
                      <a href="#"><img src={s.icon} alt={s.title} class="bg-transparent rounded-0" /></a>
                    </div>
                    <div class="fbox-content">
                      <h2 class="h3 text-transform-none ls-0">{s.title}</h2>
                      <p>{s.desc}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <Testimonials />

          <!-- Blog -->
          <div class="container py-4">
            <div class="heading-block border-bottom-0 text-center">
              <div class="badge rounded-pill badge-default">Ressources</div>
              <h2 class="h3 text-transform-none ls-0">Derniers articles</h2>
            </div>

            <div class="row mt-5">
              {blog.map((b) => (
                <div class="col-md-4">
                  <article class="entry">
                    <div class="entry-image mb-3">
                      <a href={b.href}><img src={b.img} alt={b.alt} /></a>
                    </div>
                    <div class="entry-title">
                      <h3><a href={b.href}>{b.title}</a></h3>
                    </div>
                    <div class="entry-meta">
                      <ul>
                        <li><i class="bi-person"></i><a href="#"> {b.author}</a></li>
                        <li><i class="bi-calendar"></i><a href="#"> {b.date}</a></li>
                      </ul>
                    </div>
                    <div class="entry-content">
                      <p>{b.excerpt}</p>
                    </div>
                  </article>
                </div>
              ))}
            </div>
          </div>

          <!-- Promo/Contact -->
          <div class="section mt-5 footer-stick promo-section bg-transparent" style="padding: 100px 0; overflow: visible">
            <div class="container">
              <div class="heading-block border-bottom-0 text-center">
                <div class="h6 text-uppercase ls-1 mb-1">Audit gratuit • Sud Oise &amp; Nord 95</div>
                <h2 class="h3 text-transform-none ls-0">
                  On fait le point sur votre acquisition et vos conversions.<br />
                  <span>Vous repartez avec un plan d’actions.</span>
                </h2>
                <a href="/contact/" class="button button-large button-rounded text-transform-none ms-0 ls-0 mt-4">Demander un audit</a>
              </div>
            </div>
          </div>

        </div>
      </section>

      <Footer {contact} ASSET_BASE={ASSET_BASE} />
    </div>

    <div id="gotoTop" class="uil uil-angle-up"></div>
    <JavaScripts ASSET_BASE={ASSET_BASE} />
  </body>
</html>