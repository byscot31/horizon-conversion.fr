---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionServices from "../components/SectionServices.astro";
import SectionZones from "../components/SectionZones.astro";
import SectionMethode from "../components/SectionMethode.astro";
import SectionPreuves from "../components/SectionPreuves.astro";
import SectionRessourses from "../components/SectionRessourses.astro";
import SectionPromo from "../components/SectionPromo.astro";

const title = "Webmarketing local Sud Oise & Val d’Oise 95 | Plus d’appels & demandes";
const description =
  "SEO local (Google/Maps), Ads, contenu et site qui convertit : pour générer plus d’appels et de demandes. Sud Oise & Nord 95.";
---

<BaseLayout
  title={title}
  description={description}
>
  <!-- Hero / Slider -->
  <section
    id="slider"
    class="slider-element slider-parallax min-vh-60 min-vh-md-100 include-header"
  >
    <div
      class="slider-inner"
      style="background: var(--cnvs-contrast-0) url('/_assets_/images/hero/hero-1.jpg') center center no-repeat; background-size: cover;"
    >
      <div class="vertical-middle slider-element-fade">
        <div class="container py-5">
          <div class="row pt-5">
            <div class="col-lg-6 col-md-9">
              <div class="slider-title">
                <div class="badge rounded-pill badge-default">Sud Oise • Nord 95</div>

                <h2 class="text-transform-none ls-0 mb-2">
                  Plus d’appels et de demandes locales.
                </h2>

                <h3 class="text-rotater mb-3 text-transform-none ls-0"
                    data-separator=","
                    data-rotate="fadeIn"
                    data-speed="3500">
                  - Pour les <span class="t-rotate">artisans,commerces,TPE,professions libérales</span>.
                </h3>

                <p class="mb-4">
                  SEO Google & Google Maps + Ads + pages qui convertissent.
                  Une méthode claire, des livrables, un suivi mensuel. Sans promesses irréalistes.
                </p>

                <div class="d-flex flex-wrap gap-2">
                  <a href="/contact" class="button button-rounded button-large text-transform-none ls-0">
                    Demander un audit gratuit
                  </a>
                  <a href="/zones" class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0">
                    Voir les zones couvertes
                  </a>
                </div>

                <div class="mt-4 small text-muted">
                  Objectif : transformer la visibilité en <strong>contacts</strong> (appels, formulaires, devis).
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="video-wrap h-100 d-block d-lg-none">
        <div class="video-overlay" style="background: rgba(255,255,255,0.85);"></div>
      </div>
    </div>
  </section>

  <!-- Content -->
  <section id="content">
    <div class="content-wrap pt-0">

      <!-- Bandeau confiance / promesse -->
      <div class="section bg-transparent m-0 border-bottom py-5">
        <div class="container">
          <div class="row align-items-center justify-content-between g-4">
            <div class="col-lg-7">
              <h3 class="text-transform-none ls-0 mb-2">Une approche simple : visibilité → preuves → appels.</h3>
              <p class="mb-0 text-muted">
                On commence par un audit, on priorise, on met en place, on mesure.
                Tu sais quoi faire, pourquoi, et ce que ça rapporte.
              </p>
            </div>
            <div class="col-lg-5 text-lg-end">
              <a href="/contact" class="button button-rounded text-transform-none ls-0">
                Être rappelé
              </a>
              <a href="/seo-local" class="button button-rounded button-light text-dark bg-white border text-transform-none ls-0 ms-2">
                Découvrir les offres
              </a>
            </div>
          </div>
        </div>
      </div>

      <SectionServices />

      <SectionZones />

      <SectionMethode />

      <SectionPreuves />

      <SectionRessourses />

      <SectionPromo />

    </div>
  </section>
</BaseLayout>