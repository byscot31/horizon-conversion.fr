---
// src/components/Footer.astro

import site from "../data/site.json";
---

<footer id="footer" class="border-0" style="background: var(--cnvs-contrast-0);">
  <div class="container">
    <div class="footer-widgets-wrap pb-5">
      <div class="row col-mb-50">

        <div class="col-md-8">
          <div class="widget">
            <img
              src="/_assets_/images/footer-logo.png"
              alt={`${site.brand} — Logo`}
              class="alignleft"
              style="margin-top: 8px; padding-right: 18px; border-right: 1px solid #DDD;"
            />

            <p>
              Consultant webmarketing local. <strong>Simple</strong>, <strong>concret</strong>, orienté <strong>demandes</strong>.
              Sud Oise / Nord 95.
            </p>

            <div class="line line-sm"></div>

            <div class="row g-4">
              <div class="col-lg-4 col-6 widget_links">
                <ul>
                  <li><a href="/">Accueil</a></li>
                  <li><a href="/services/">Services</a></li>
                  <li><a href="/zones/">Zones</a></li>
                  <li><a href="/etudes-de-cas/">Résultats</a></li>
                  <li><a href="/contact/">Contact</a></li>
                </ul>
              </div>

              <div class="col-lg-4 col-6 widget_links">
                <ul>
                  <li><a href="/mentions-legales/">Mentions légales</a></li>
                  <li><a href="/politique-confidentialite/">Confidentialité</a></li>
                  <li><a href="/cookies/">Cookies</a></li>
                </ul>
              </div>

              <div class="col-lg-4 col-12 widget_links">
                <ul>
                  <li><a href="/contact/?objet=audit">Audit gratuit 15 min</a></li>
                  <li><a href="/contact/?objet=rappel">Être rappelé</a></li>
                  <li><a href="/contact/?objet=devis">Demander un devis</a></li>
                </ul>
              </div>
            </div>

          </div>
        </div>

        <div class="col-md-4">
          <div class="widget">
            <div class="row">
              <div class="col-12">
                <div class="feature-box fbox-plain fbox-sm align-items-center">
                  <div class="fbox-icon">
                    <i class="bi-telephone text-dark"></i>
                  </div>
                  <div class="fbox-content">
                    <span class="text-muted">Téléphone</span><br />
                    <h3 class="text-transform-none ls-0 fw-semibold">
                      <a class="text-dark" href={`tel:${site.phone}`}>{site.phone}</a>
                    </h3>
                  </div>
                </div>
              </div>

              <div class="col-12 mt-4">
                <div class="feature-box fbox-plain fbox-sm align-items-center">
                  <div class="fbox-icon">
                    <i class="bi-envelope text-dark"></i>
                  </div>
                  <div class="fbox-content">
                    <span class="text-muted">Email</span><br />
                    <h3 class="text-transform-none ls-0 fw-semibold">
                      <a class="text-dark" href={`mailto:${site.email}`}>{site.email}</a>
                    </h3>
                  </div>
                </div>
              </div>

              <div class="col-12 mt-4">
                <div class="p-4 rounded-6 bg-white shadow-sm">
                  <div class="fw-semibold mb-2">{site.targetAreaLabel}</div>
                  <div class="text-contrast-600 small">
                    Réponse sous 24h.<br />
                    Un interlocuteur unique.
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div id="copyrights"
       style="background: url('/_assets_/images/hero/footer.svg') no-repeat top center; background-size: cover; padding-top: 70px;">
    <div class="container">
      <div class="row justify-content-between col-mb-30">
        <div class="col-12 col-lg-auto text-center text-lg-start">
          © {new Date().getFullYear()} {site.brand}. Tous droits réservés.<br />
          <div class="copyright-links">
            <a href="/mentions-legales/" class="text-contrast-600">Mentions légales</a> /
            <a href="/politique-confidentialite/" class="text-contrast-600">Confidentialité</a>
          </div>
        </div>

        <div class="col-12 col-lg-auto text-center text-lg-end">
          <div class="copyrights-menu copyright-links">
            <a href="/" class="text-contrast-600">Accueil</a> /
            <a href="/services/" class="text-contrast-600">Services</a> /
            <a href="/zones/" class="text-contrast-600">Zones</a> /
            <a href="/contact/" class="text-contrast-600">Contact</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>