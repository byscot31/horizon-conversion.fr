---
// src/components/Objections.astro
import objections from "../data/objections.json";
import { resolveByIds } from "../lib/resolve";

const { ids = [], title = "Ce qu’on entend souvent (et notre réponse)" } = Astro.props;
const items = resolveByIds(objections, ids);
if (!items.length) return;
---

<section class="container py-4">
  <h2 class="h3 fw-bold mb-3">{title}</h2>

  <div class="row g-3">
    {items.map((o) => (
      <div class="col-md-6">
        <div class="p-3 border rounded-3 h-100">
          <h3 class="h6 fw-semibold mb-2">{o.label}</h3>
          <p class="mb-0">{o.text}</p>
        </div>
      </div>
    ))}
  </div>

  <div class="mt-4">
    <a class="btn btn-primary" href="/audit">Demander un audit gratuit</a>
    <a class="btn btn-link" href="/contact?callback=1">Être rappelé</a>
  </div>
</section>
