---
// src/components/Promesse.astro
const { hero, variant } = Astro.props;
// hero: { h1, sub, bullets[], ctaPrimary{label,href}, ctaSecondary{label,href} }
---

<section class="container py-4 py-lg-5">
  <div class="row align-items-center g-4">
    <div class="col-lg-7">
      <h1 class="display-6 fw-bold mb-3">{hero.h1}</h1>
      <p class="lead mb-4">{hero.sub}</p>

      {hero.bullets?.length ? (
        <ul class="list-unstyled mb-4">
          {hero.bullets.map((b) => (
            <li class="d-flex gap-2 mb-2">
              <span aria-hidden="true">✓</span>
              <span>{b}</span>
            </li>
          ))}
        </ul>
      ) : null}

      <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-primary" href={hero.ctaPrimary.href}>{hero.ctaPrimary.label}</a>
        <a class="btn btn-outline-primary" href={hero.ctaSecondary.href}>{hero.ctaSecondary.label}</a>
      </div>

      {variant?.tone ? (
        <p class="text-muted small mt-3 mb-0">
          {variant.tone === "direct-quickwins" ? "Approche directe : on vise l’utile, vite." : null}
          {variant.tone === "reassure-confiance" ? "Approche rassurante : clarté, process, transparence." : null}
        </p>
      ) : null}
    </div>

    <div class="col-lg-5">
      <div class="p-4 border rounded-3 bg-light">
        <h2 class="h5 fw-semibold mb-2">Prochain pas</h2>
        <p class="mb-3">Demande un audit gratuit : on te dit quoi faire en priorité pour avoir plus de contacts.</p>
        <div class="d-grid gap-2">
          <a class="btn btn-primary" href={hero.ctaPrimary.href}>Demander un audit gratuit</a>
          <a class="btn btn-outline-secondary" href={hero.ctaSecondary.href}>Être rappelé</a>
        </div>
      </div>
    </div>
  </div>
</section>
