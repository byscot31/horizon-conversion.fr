---
// src/components/LiensInternes.astro
const { primary = [], secondary = [], title = "Pour aller plus loin" } = Astro.props;
---

<section class="container py-4">
  <h2 class="h4 fw-semibold mb-3">{title}</h2>

  <div class="row g-3">
    <div class="col-md-6">
      <div class="p-3 border rounded-3 h-100">
        <h3 class="h6 fw-semibold">Essentiel</h3>
        <ul class="mb-0">
          {primary.map((l) => (
            <li><a href={l.href}>{l.label}</a></li>
          ))}
        </ul>
      </div>
    </div>

    <div class="col-md-6">
      <div class="p-3 border rounded-3 h-100">
        <h3 class="h6 fw-semibold">Ressources</h3>
        <ul class="mb-0">
          {secondary.map((l) => (
            <li><a href={l.href}>{l.label}</a></li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
