---
// src/components/Benefices.astro
import benefits from "../data/benefits.json";
import { resolveByIds } from "../lib/resolve";

const { ids, title = "Ce que ça change pour vous" } = Astro.props;
const items = resolveByIds(benefits, ids || []);
---

<section class="container py-4">
  <h2 class="h3 fw-bold mb-3">{title}</h2>

  <div class="row g-3">
    {items.map((it) => (
      <div class="col-md-6">
        <div class="p-3 border rounded-3 h-100">
          <div class="d-flex gap-2 align-items-start">
            <span aria-hidden="true">•</span>
            <p class="mb-0">{it.text}</p>
          </div>
        </div>
      </div>
    ))}
  </div>

  <div class="mt-4">
    <a class="btn btn-primary" href="/audit">Demander un audit gratuit</a>
    <a class="btn btn-link" href="/contact?callback=1">Être rappelé</a>
  </div>
</section>
