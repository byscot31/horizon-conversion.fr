---
// src/components/Preuves.astro
import proofs from "../data/proofs.json";
import { resolveByIds } from "../lib/resolve";

const { ids, title = "Preuves (sans blabla)" } = Astro.props;
const items = resolveByIds(proofs, ids || []);
---

<section class="container py-4">
  <h2 class="h3 fw-bold mb-3">{title}</h2>

  <div class="row g-3">
    {items.map((p) => (
      <div class="col-md-4">
        <div class="p-3 border rounded-3 h-100">
          <h3 class="h6 fw-semibold mb-2">{p.title}</h3>
          <p class="mb-0">{p.text}</p>
        </div>
      </div>
    ))}
  </div>

  <div class="mt-4 d-flex flex-wrap gap-2">
    <a class="btn btn-primary" href="/audit">Demander un audit gratuit</a>
    <a class="btn btn-outline-primary" href="/preuves">Voir dâ€™autres exemples</a>
  </div>
</section>
