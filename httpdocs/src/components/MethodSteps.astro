---
// src/components/MethodSteps.astro

const steps = [
  { title: "1. Audit", text: "On repère ce qui bloque les demandes." },
  { title: "2. Plan", text: "3 à 5 actions. Pas plus." },
  { title: "3. Mise en place", text: "SEO, pubs, contenu, site. On exécute." },
  { title: "4. Optimisation", text: "On améliore au fil des semaines." }
];
---

<div class="container py-5">
  <div class="heading-block border-bottom-0 text-center">
    <div class="badge rounded-pill badge-default">Méthode</div>
    <h2 class="text-transform-none ls-0">Simple. Carré. Efficace.</h2>
  </div>

  <div class="row">
    {steps.map((s) => (
      <div class="col-md-6 col-lg-3 mt-4">
        <div class="feature-box fbox-center border-0">
          <div class="fbox-content">
            <h3 class="text-transform-none ls-0">{s.title}</h3>
            <p class="mb-0">{s.text}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>