---
// src/components/SectionHero.astro

type Props = {
  h1: string;
  intro?: string;
  bullets?: string[];
};

const { h1, intro = "", bullets = [] } = Astro.props as Props;
---

<section class="hc-hero">
  <div class="hc-hero__inner">
    <h1>{h1}</h1>
    {intro ? <p class="hc-hero__intro">{intro}</p> : null}

    {bullets.length ? (
      <ul class="hc-hero__bullets">
        {bullets.map((b) => <li>{b}</li>)}
      </ul>
    ) : null}

    <div class="hc-hero__cta">
      <a class="btn btn-primary" href="/contact">Demander un audit gratuit</a>
      <a class="btn btn-ghost" href="/contact">Être rappelé</a>
    </div>
  </div>
</section>

<style>
  .hc-hero{padding:2rem 0 1rem}
  .hc-hero__inner{max-width:980px;margin:0 auto;padding:0 1rem}
  .hc-hero h1{font-size:2rem;line-height:1.15;margin:0 0 .75rem}
  .hc-hero__intro{font-size:1.05rem;color:#374151;margin:0 0 1rem}
  .hc-hero__bullets{margin:0 0 1rem;padding-left:1.25rem;color:#111827}
  .hc-hero__cta{display:flex;gap:.75rem;flex-wrap:wrap}
  .btn{display:inline-block;padding:.75rem 1rem;border-radius:12px;text-decoration:none;font-weight:700}
  .btn-primary{background:#111827;color:#fff}
  .btn-ghost{border:1px solid #e5e7eb;color:#111827}
</style>