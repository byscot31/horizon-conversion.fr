---
// src/components/SectionFAQ.astro

type Props = { title?: string; items: { q: string; a: string }[] };
const { title = "FAQ", items } = Astro.props as Props;
if (!items?.length) return;
---

<section class="hc-section">
  <div class="wrap">
    <h2>{title}</h2>
    <div class="faq">
      {items.map((it) => (
        <details class="faq__item">
          <summary>{it.q}</summary>
          <p>{it.a}</p>
        </details>
      ))}
    </div>
  </div>
</section>

<style>
  .hc-section{padding:1.5rem 0}
  .wrap{max-width:980px;margin:0 auto;padding:0 1rem}
  h2{margin:0 0 .75rem;font-size:1.25rem}
  .faq{display:grid;gap:.5rem}
  .faq__item{border:1px solid #e5e7eb;border-radius:12px;padding:.75rem 1rem;background:#fff}
  summary{cursor:pointer;font-weight:700}
  p{margin:.5rem 0 0;color:#374151}
</style>