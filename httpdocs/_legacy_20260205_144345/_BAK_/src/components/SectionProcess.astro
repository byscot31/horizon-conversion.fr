---
// src/components/SectionProcess.astro

type Props = { title?: string; steps: string[] };
const { title = "Comment Ã§a se passe", steps } = Astro.props as Props;
if (!steps?.length) return;
---

<section class="hc-section">
  <div class="wrap">
    <h2>{title}</h2>
    <ol class="steps">
      {steps.map((s) => <li>{s}</li>)}
    </ol>
  </div>
</section>

<style>
  .hc-section{padding:1.5rem 0}
  .wrap{max-width:980px;margin:0 auto;padding:0 1rem}
  h2{margin:0 0 .75rem;font-size:1.25rem}
  .steps{margin:0;padding-left:1.25rem;display:grid;gap:.4rem}
</style>