---
// src/components/SectionCTA.astro

type Props = { title?: string; text?: string };
const {
  title = "On regarde ensemble ce qui bloque vos demandes ?",
  text = "Audit gratuit : visibilité Google/Maps, Ads, site (CRO). Plan d’actions clair, sans blabla."
} = Astro.props as Props;
---

<section class="hc-cta">
  <div class="wrap">
    <h2>{title}</h2>
    <p>{text}</p>
    <div class="actions">
      <a class="btn btn-primary" href="/contact">Demander un audit gratuit</a>
      <a class="btn btn-ghost" href="/contact">Recevoir un devis</a>
    </div>
  </div>
</section>

<style>
  .hc-cta{padding:2rem 0;background:#111827;color:#fff;margin-top:1.5rem}
  .wrap{max-width:980px;margin:0 auto;padding:0 1rem}
  h2{margin:0 0 .5rem;font-size:1.35rem}
  p{margin:0 0 1rem;color:#e5e7eb}
  .actions{display:flex;gap:.75rem;flex-wrap:wrap}
  .btn{display:inline-block;padding:.75rem 1rem;border-radius:12px;text-decoration:none;font-weight:800}
  .btn-primary{background:#fff;color:#111827}
  .btn-ghost{border:1px solid rgba(255,255,255,.25);color:#fff}
</style>