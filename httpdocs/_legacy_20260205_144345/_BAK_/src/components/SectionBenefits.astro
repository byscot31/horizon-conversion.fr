---
// src/components/SectionBenefits.astro

type Props = { title?: string; items: string[] };
const { title = "3 bénéfices concrets", items } = Astro.props as Props;
if (!items?.length) return;
---

<section class="hc-section">
  <div class="wrap">
    <h2>{title}</h2>
    <div class="grid">
      {items.slice(0, 3).map((it) => (
        <div class="card">
          <p>{it}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .hc-section{padding:1.5rem 0}
  .wrap{max-width:980px;margin:0 auto;padding:0 1rem}
  h2{margin:0 0 .75rem;font-size:1.25rem}
  .grid{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:.75rem}
  .card{border:1px solid #e5e7eb;border-radius:12px;padding:1rem;background:#fff}
  .card p{margin:0;color:#111827}
  @media (max-width:900px){.grid{grid-template-columns:1fr}}
</style>