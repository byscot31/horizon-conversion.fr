---
// src/components/LinksOut.astro

import type { LinkOut } from "../lib/mapping";

type Props = {
  title?: string;
  links: LinkOut[];
};

const { title = "Ã€ explorer", links } = Astro.props as Props;
if (!links?.length) return;
---

<section class="hc-section">
  <div class="wrap">
    <h2>{title}</h2>
    <ul class="links">
      {links.map((l) => (
        <li><a href={l.href}>{l.label}</a></li>
      ))}
    </ul>
  </div>
</section>

<style>
  .hc-section{padding:1.5rem 0}
  .wrap{max-width:980px;margin:0 auto;padding:0 1rem}
  h2{margin:0 0 .75rem;font-size:1.25rem}
  .links{margin:0;padding-left:1.25rem;display:grid;gap:.35rem}
  a{color:#111827}
</style>