---
// src/pages/villes.astro

import BaseLayout from "../layouts/BaseLayout.astro";
import villes from "../data/villes.json";
import seoMapping from "../data/seo-mapping.json";

import LinksOut from "../components/LinksOut.astro";
import SectionFAQ from "../components/SectionFAQ.astro";

import { getStaticPageByUrl, normalizeLinksOut, resolveFaqItems, safeText } from "../lib/mapping";

const page = getStaticPageByUrl("/villes");

const title = safeText(page?.metaTitle, "Villes couvertes | Horizon Conversion");
const description = safeText(page?.metaDescription, "Sud Oise (60) et Val d’Oise (95) : pages locales utiles (SEO, Ads, CRO).");
const h1 = safeText(page?.h1, "Villes couvertes : Sud Oise (60) / Val d’Oise (95)");

const linksOut = normalizeLinksOut(page?.linksOut);
const faqItems = resolveFaqItems({ pageFaqRefs: page?.faqRefs, pageFaq: page?.faq });

const vs = Array.isArray(villes) ? villes : [];

const SERVICES = [
  { slug: "seo-local", label: "SEO local" },
  { slug: "ads-google-meta", label: "Google/Meta Ads" },
  { slug: "optimisation-site-cro", label: "CRO / Conversion" }
];

const allArticles = Array.isArray((seoMapping as any)?.computed?.articles) ? (seoMapping as any).computed.articles : [];
const ressources = allArticles.slice(0, 2);
---

<BaseLayout
  title={title}
  description={description}
  pageContext={{ type: "static", staticLabel: "Villes", staticUrl: "/villes" }}
  faqItems={faqItems}
>
  <section class="section m-0">
    <div class="container">
      <div class="heading-block">
        <h1>{h1}</h1>
        <span>Objectif : éviter les pages “clone”. Une ville renvoie vers des pages service×ville utiles + un CTA.</span>
      </div>

      <div class="row g-4">
        {vs.map((v: any) => (
          <div class="col-lg-6">
            <div class="card p-4 h-100">
              <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                <div>
                  <h3 class="mb-1">{v.nom}</h3>
                  <div class="text-muted">{v.codePostal} • Zone : {v.zone}</div>
                </div>

                <div class="d-flex flex-wrap gap-2">
                  {SERVICES.map((s) => (
                    <a class="button button-small button-light" href={`/${s.slug}/${v.slug}`}>
                      {s.label}
                    </a>
                  ))}
                </div>
              </div>

              {v.specificites ? <p class="mt-3 mb-2">{v.specificites}</p> : null}

              {Array.isArray(v.alentours) && v.alentours.length ? (
                <p class="mb-0 text-muted">
                  <strong>Alentours :</strong> {v.alentours.join(", ")}
                </p>
              ) : null}
            </div>
          </div>
        ))}
      </div>

      {ressources.length ? (
        <div class="card p-4 mt-5">
          <h2 class="mb-3">Ressources utiles</h2>
          <div class="d-flex flex-wrap gap-2">
            {ressources.map((a: any) => (
              <a class="button button-small button-light" href={`/ressources/${a.slug}`}>
                {a.titre}
              </a>
            ))}
          </div>
        </div>
      ) : null}

      <div class="mt-5 d-flex flex-wrap gap-2">
        <a class="button button-rounded button-dark" href="/contact">Demander un audit gratuit</a>
        <a class="button button-rounded button-light" href="/zones">Voir les zones</a>
        <a class="button button-rounded button-light" href="/services">Voir les offres</a>
      </div>

      <SectionFAQ items={faqItems} />
      <LinksOut links={linksOut} />
    </div>
  </section>
</BaseLayout>