---
// src/components/Hero.astro

import site from "../data/site.json";

const ctas = {
  primary: { label: "Audit gratuit 15 min", href: "/contact/?objet=audit" },
  secondary: { label: "Être rappelé", href: "/contact/?objet=rappel" },
  tertiary: { label: "Demander un devis", href: "/contact/?objet=devis" }
};
---

<section id="slider" class="slider-element slider-parallax min-vh-60 min-vh-md-100 include-header">
  <div
    class="slider-inner"
    style="background: var(--cnvs-contrast-0) url('/_assets_/images/hero/hero-1.jpg') center center no-repeat; background-size: cover;"
  >
    <div class="vertical-middle slider-element-fade">
      <div class="container py-5">
        <div class="row pt-5">
          <div class="col-lg-6 col-md-9">
            <div class="slider-title">
              <div class="badge rounded-pill badge-default">{site.targetAreaLabel}</div>

              <h2>Plus d’appels. Plus de demandes.</h2>

              <h3 class="mb-3" style="font-weight: 500;">
                SEO local, pubs Google/Meta et site qui convertit.
              </h3>

              <p class="mb-4">
                Un seul interlocuteur. Des actions simples. Des résultats mesurés.
              </p>

              <div class="d-flex flex-wrap gap-2">
                <a href={ctas.primary.href} class="button button-rounded button-large text-transform-none ls-0">
                  {ctas.primary.label}
                </a>
                <a href={ctas.secondary.href} class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0">
                  {ctas.secondary.label}
                </a>
                <a href={ctas.tertiary.href} class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0 d-none d-md-inline-flex">
                  {ctas.tertiary.label}
                </a>
              </div>

              <div class="mt-4 text-contrast-600 small">
                Réponse sous 24h • Sud Oise / Nord 95 • Suivi mensuel
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Overlay mobile comme ton template -->
    <div class="video-wrap h-100 d-block d-lg-none">
      <div class="video-overlay" style="background: rgba(255,255,255,0.85);"></div>
    </div>
  </div>
</section>