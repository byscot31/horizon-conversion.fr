---
// src/pages/pro/realisations/index.astro
import LayoutPro from "@layouts/LayoutPro.astro";

// (Optionnel) JSON data : si vous créez @data/realisations-pro.json
// import realisations from "@data/realisations-pro.json";

const brand = import.meta.env.PUBLIC_BRAND_NAME ?? "Horizon Conversion";
const regionLabel = import.meta.env.PUBLIC_REGION_LABEL ?? "Sud Oise (60) / Nord 95";

const title = `Réalisations — Acquisition & Conversion | ${regionLabel} | ${brand}`;
const description =
  "Exemples de réalisations : SEO local, Google Ads, optimisation de landing pages et tracking pour générer des leads.";
const canonical = "/pro/realisations/";

// Dummy data si vous n’avez pas encore le JSON
const realisations = [
  {
    title: "SEO local — Google Business Profile + pages locales",
    forWho: "Artisan / services — Sud Oise",
    problem: "Visibilité faible sur Google Maps, peu d’appels hors bouche-à-oreille.",
    solution: "Optimisation GBP, structure locale (ville×métier×service), tracking des conversions.",
    result: "Plus d’appels et de demandes qualifiées, meilleure présence locale.",
    tags: ["SEO local", "GBP", "Pages locales", "Tracking"],
  },
  {
    title: "Google Ads — campagnes orientées appels",
    forWho: "TPE — Nord 95",
    problem: "Budget dépensé sans conversions stables.",
    solution: "Rebuild campagnes, mots-clés, annonces, extensions, suivi conversions & landing.",
    result: "Leads plus réguliers, optimisation continue sur la base des conversions.",
    tags: ["Google Ads", "SEA", "Leads", "Optimisation"],
  },
  {
    title: "CRO — landing page qui convertit",
    forWho: "Commerce / service — Oise (60)",
    problem: "Trafic présent, demandes faibles.",
    solution: "Audit UX/CRO, preuves, clarifications offre, CTA, réduction frictions formulaire.",
    result: "Meilleure conversion sans augmenter le trafic.",
    tags: ["CRO", "UX", "Landing", "Conversion"],
  },
];

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", position: 1, name: "Pro", item: "/pro/" },
    { "@type": "ListItem", position: 2, name: "Réalisations", item: canonical },
  ],
};

const jsonLd = [breadcrumbJsonLd];
---

<LayoutPro title={title} description={description} canonical={canonical} jsonLd={jsonLd}>
  <section class="page-title page-title-center dark include-header include-topbar">
    <div class="container">
      <div class="page-title-row mt-5">
        <div class="page-title-content">
          <div class="badge rounded-pill border border-light text-light">Pro</div>
          <h1>Réalisations</h1>
          <p class="lead mb-0">SEO local • Google Ads • CRO — {regionLabel}</p>
        </div>

        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/pro/">Pro</a></li>
            <li class="breadcrumb-item active" aria-current="page">Réalisations</li>
          </ol>
        </nav>
      </div>
    </div>
  </section>

  <section id="content">
    <div class="content-wrap pb-0">
      <div class="container">

        <!-- Intro -->
        <div class="row justify-content-center">
          <div class="col-lg-9 text-center">
            <div class="badge rounded-pill badge-default mb-2">Preuves</div>
            <h2 class="display-6 fw-bold mb-3">Exemples de projets orientés leads</h2>
            <p class="text-muted mb-0">
              L’objectif est simple : générer des demandes qualifiées et mesurer ce qui marche
              (tracking, appels, formulaires, prise de rendez-vous).
            </p>
          </div>
        </div>

        <div class="clear line my-6"></div>

        <!-- Grille réalisations -->
        <div class="row g-3">
          {realisations.map((r) => (
            <div class="col-lg-4 col-md-6">
              <div class="card h-100 shadow-sm">
                <div class="card-body p-4">

                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <div class="fw-semibold">{r.title}</div>
                      <div class="small text-muted">{r.forWho}</div>
                    </div>
                    <span class="badge bg-light text-dark">Projet</span>
                  </div>

                  <div class="clear line line-sm my-4"></div>

                  <div class="small fw-semibold">Problème</div>
                  <p class="text-muted mb-3">{r.problem}</p>

                  <div class="small fw-semibold">Solution</div>
                  <p class="text-muted mb-3">{r.solution}</p>

                  <div class="small fw-semibold">Résultat</div>
                  <p class="text-muted mb-3">{r.result}</p>

                  {r.tags?.length ? (
                    <div class="d-flex flex-wrap gap-2 mb-4">
                      {r.tags.slice(0, 8).map((tag) => (
                        <span class="badge bg-secondary">{tag}</span>
                      ))}
                    </div>
                  ) : null}

                  <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-outline-secondary btn-sm" href="/pro/seo-local/">SEO local</a>
                    <a class="btn btn-outline-secondary btn-sm" href="/pro/google-ads/">Google Ads</a>
                    <a class="btn btn-outline-secondary btn-sm" href="/pro/cro/">CRO</a>
                  </div>

                  <div class="clear line line-sm my-4"></div>

                  <a class="button button-rounded button-small m-0" href="/pro/contact/">
                    Demander un diagnostic gratuit
                  </a>

                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="clear line my-6"></div>

        <!-- CTA -->
        <div class="section mt-0" style="padding: 70px 0;">
          <div class="container">
            <div class="row justify-content-center text-center">
              <div class="col-lg-8">
                <div class="badge rounded-pill badge-default mb-2">Diagnostic gratuit</div>
                <h3 class="text-transform-none ls-0 mb-3">Vous voulez le même type de résultats ?</h3>
                <p class="text-muted mb-4">
                  Décrivez votre contexte (activité, zone, objectif). Vous recevez un plan d’action clair et priorisé.
                </p>
                <a href="/pro/contact/" class="button button-rounded button-large m-0">
                  Demander un diagnostic gratuit
                </a>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
</LayoutPro>
