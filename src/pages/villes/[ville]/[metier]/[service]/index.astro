---
import Layout from "../../../../../layouts/Layout.astro";
import HubspotCustomForm from "../../../../../components/HubspotCustomForm.astro";

import villes from "../../../../../data/villes.json";
import metiers from "../../../../../data/metiers.json";
import services from "../../../../../data/services.json";

export function getStaticPaths() {
  const A = villes.filter((v) => v.priority === "A");
  const topServices = services.filter((s) => s.is_top === true);

  const paths = [];

  for (const v of A) {
    for (const m of metiers) {
      const svcs = topServices.filter((s) => s.metier === m.slug);
      for (const s of svcs) {
        paths.push({
          params: { ville: v.slug, metier: m.slug, service: s.slug },
        });
      }
    }
  }

  return paths;
}

const { ville: villeSlug, metier: metierSlug, service: serviceSlug } = Astro.params;

const ville = villes.find((v) => v.slug === villeSlug);
const metier = metiers.find((m) => m.slug === metierSlug);
const service = services.find((s) => s.slug === serviceSlug && s.metier === metierSlug);

if (!ville || !metier || !service) {
  throw new Error(`Page introuvable: ${villeSlug}/${metierSlug}/${serviceSlug}`);
}

// Noindex si ville B (au cas o√π tu changes le sitemap plus tard)
const noindex = ville.priority !== "A";

const brand = import.meta.env.PUBLIC_BRAND_NAME ?? "Horizon Conversion";
const phone = import.meta.env.PUBLIC_PHONE ?? "+33600000000";
const phoneDisplay = import.meta.env.PUBLIC_PHONE_DISPLAY ?? "06 00 00 00 00";
const regionLabel = import.meta.env.PUBLIC_REGION_LABEL ?? "Sud Oise (60) / Nord 95";

const title = `${service.name} √† ${ville.name} (${ville.dept}) ‚Äî ${metier.name} | ${brand}`;
const description = `${service.short} Intervention ${ville.name} et communes autour. Devis gratuit, r√©ponse rapide.`;

const canonical = `/villes/${ville.slug}/${metier.slug}/${service.slug}/`;

// FAQ (merge: service.faq + FAQ g√©n√©riques)
const faq = [
  ...(service.faq ?? []),
  {
    q: `Intervenez-vous aussi autour de ${ville.name} ?`,
    a: `Oui : ${[...(ville.around ?? [])].slice(0, 8).map((x) => x.replace(/-/g, " ")).join(", ")} et les communes proches selon planning.`,
  },
  {
    q: "Le devis est-il gratuit ?",
    a: "Oui, devis communiqu√© avant intervention (hors cas sp√©cifiques).",
  },
];

const faqJsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faq.map((f) => ({
    "@type": "Question",
    "name": f.q.replaceAll("{ville}", ville.name),
    "acceptedAnswer": { "@type": "Answer", "text": f.a.replaceAll("{ville}", ville.name) },
  })),
};

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Accueil", "item": "/" },
    { "@type": "ListItem", "position": 2, "name": "Villes", "item": "/villes/" },
    { "@type": "ListItem", "position": 3, "name": ville.name, "item": `/villes/${ville.slug}/` },
    { "@type": "ListItem", "position": 4, "name": metier.name, "item": `/villes/${ville.slug}/${metier.slug}/` },
    { "@type": "ListItem", "position": 5, "name": service.name, "item": canonical },
  ],
};

const jsonLd = [breadcrumbJsonLd, faqJsonLd];

// services siblings (m√™me m√©tier)
const siblingServices = services
  .filter((s) => s.metier === metier.slug && s.is_top)
  .filter((s) => s.slug !== service.slug)
  .slice(0, 6);

// villes around (liens internes)
const around = (ville.around ?? [])
  .map((slug) => villes.find((v) => v.slug === slug))
  .filter(Boolean)
  .slice(0, 10);
---

<Layout title={title} description={description} canonical={canonical} jsonLd={jsonLd} noindex={noindex}>
  <section class="page-title page-title-center dark include-header include-topbar">
    <div class="container">
      <div class="page-title-row">
        <div class="page-title-content">
          <div class="badge rounded-pill border border-light text-light">{metier.name}</div>
          <h1>{service.name} √† {ville.name}</h1>
          <p class="lead mb-0">Intervention {ville.name} ({ville.dept}) ‚Ä¢ {regionLabel}</p>
        </div>

        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Accueil</a></li>
            <li class="breadcrumb-item"><a href="/villes/">Villes</a></li>
            <li class="breadcrumb-item"><a href={`/villes/${ville.slug}/`}>{ville.name}</a></li>
            <li class="breadcrumb-item"><a href={`/villes/${ville.slug}/${metier.slug}/`}>{metier.name}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{service.name}</li>
          </ol>
        </nav>
      </div>
    </div>
  </section>

  <section id="content">
    <div class="content-wrap pb-0">
      <div class="container">

        <!-- HERO + preuves + CTA -->
        <div class="row align-items-center g-4">
          <div class="col-lg-7">
            <div class="badge rounded-pill badge-default mb-2">Devis gratuit ‚Ä¢ R√©ponse rapide</div>
            <h2 class="display-6 fw-bold mb-3">
              {service.name} {ville.name} : intervention rapide et soign√©e
            </h2>

            <p class="text-muted mb-3">{service.short}</p>

            <ul class="iconlist ms-3 mb-4">
              {(service.benefits ?? ["Diagnostic clair", "Devis avant travaux", "Intervention soign√©e"]).slice(0, 5).map((b) => (
                <li><i class="fa-solid fa-check text-smaller color"></i> {b}</li>
              ))}
            </ul>

            <div class="d-flex flex-wrap gap-2">
              <a href={`tel:${phone}`} class="button button-rounded button-large text-transform-none ls-0 m-0">
                üìû Appeler ‚Äî {phoneDisplay}
              </a>
              <a href="#devis" class="button button-rounded button-large button-light text-dark bg-white border text-transform-none ls-0 m-0">
                üìù Demander un devis
              </a>
            </div>

            <div class="small text-muted mt-3">
              Zone : {ville.name} + alentours ‚Ä¢ {metier.name} ‚Ä¢ {service.category}
            </div>
          </div>

          <div class="col-lg-5">
            <div class="card shadow-sm">
              <div class="card-body p-4">
                <h3 class="h5 mb-2">Ce que tu obtiens</h3>
                <div class="row g-3 small">
                  <div class="col-12"><div class="p-3 border rounded">‚úÖ Diagnostic clair + explication</div></div>
                  <div class="col-12"><div class="p-3 border rounded">‚úÖ Devis avant intervention</div></div>
                  <div class="col-12"><div class="p-3 border rounded">‚úÖ Intervention soign√©e</div></div>
                  <div class="col-12"><div class="p-3 border rounded">‚úÖ Conseils pr√©vention</div></div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="clear line my-6"></div>

        <!-- Services li√©s -->
        {siblingServices.length ? (
          <>
            <div class="heading-block border-bottom-0 text-center">
              <div class="badge rounded-pill badge-default">Services</div>
              <h3 class="text-transform-none ls-0">Autres demandes fr√©quentes</h3>
              <p class="text-muted mb-0">M√™me zone, m√™me m√©tier ‚Äî pour capter plus de requ√™tes.</p>
            </div>

            <div class="row mt-4 col-mb-30">
              {siblingServices.map((s) => (
                <div class="col-md-6 col-lg-4">
                  <div class="card h-100">
                    <div class="card-body p-4">
                      <h3 class="h6 mb-2">{s.name}</h3>
                      <p class="small text-muted mb-3">{s.short}</p>
                      <a class="button button-rounded button-small m-0" href={`/villes/${ville.slug}/${metier.slug}/${s.slug}/`}>
                        Voir {s.name.toLowerCase()}
                      </a>
                    </div>
                  </div>
                </div>
              ))}
            </div>

            <div class="clear line my-6"></div>
          </>
        ) : null}

        <!-- Zones : communes autour -->
        <div class="heading-block border-bottom-0 text-center">
          <div class="badge rounded-pill badge-default">Zone</div>
          <h3 class="text-transform-none ls-0">Intervention autour de {ville.name}</h3>
          <p class="text-muted mb-0">On se d√©place aussi dans les communes proches.</p>
        </div>

        <div class="row col-mb-20 mt-4">
          {around.map((v) => (
            <div class="col-lg-3 col-md-4 col-6">
              <a class="card h-100 text-decoration-none" href={`/villes/${v.slug}/${metier.slug}/${service.slug}/`}>
                <div class="card-body p-3">
                  <div class="fw-semibold">{v.name}</div>
                  <div class="small text-muted">{v.dept}</div>
                </div>
              </a>
            </div>
          ))}
        </div>

        <div class="clear line my-6"></div>

        <!-- FAQ -->
        <div class="heading-block border-bottom-0 text-center">
          <div class="badge rounded-pill badge-default">FAQ</div>
          <h3 class="text-transform-none ls-0">Questions fr√©quentes</h3>
        </div>

        <div class="row justify-content-center">
          <div class="col-lg-10">
            <div class="faqs">
              {faq.map((f) => (
                <div class="toggle faq pb-3 mb-4">
                  <div class="toggle-header">
                    <div class="toggle-icon color">
                      <i class="toggle-closed bi-question-circle"></i>
                      <i class="toggle-open bi-question-circle"></i>
                    </div>
                    <div class="toggle-title fw-semibold ps-1">{f.q.replaceAll("{ville}", ville.name)}</div>
                    <div class="toggle-icon color">
                      <i class="toggle-closed fa-solid fa-chevron-down text-black-50"></i>
                      <i class="toggle-open fa-solid fa-chevron-up color"></i>
                    </div>
                  </div>
                  <div class="toggle-content text-black-50 ps-4">
                    {f.a.replaceAll("{ville}", ville.name)}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <div class="clear line my-6"></div>

        <!-- FORM -->
        <div id="devis" class="section mt-0" style="padding: 70px 0;">
          <div class="container">
            <div class="row justify-content-between align-items-start g-4">
              <div class="col-lg-5">
                <div class="heading-block border-bottom-0 mb-2">
                  <div class="badge rounded-pill badge-default">Devis gratuit</div>
                  <h2 class="text-transform-none ls-0 mb-0">Demande rapide ‚Äî {service.name}</h2>
                </div>
                <p class="text-muted">
                  Indique l‚Äôadresse, l‚Äôurgence et ton probl√®me. On te rappelle vite sur {ville.name} et alentours.
                </p>

                <div class="small text-muted">
                  Pages associ√©es :
                  <a href={`/villes/${ville.slug}/`}>{ville.name}</a> ‚Ä¢
                  <a href={`/villes/${ville.slug}/${metier.slug}/`}>{metier.name} {ville.name}</a>
                </div>
              </div>

              <div class="col-lg-6">
                <HubspotCustomForm
                  title={`Devis ${service.name}`}
                  subtitle={`${ville.name} ‚Ä¢ ${metier.name} ‚Ä¢ tracking auto (UTM + page source)`}
                  submitLabel="Envoyer ma demande"
                />
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
</Layout>
