/**
 * Layout.astro ‚Äî SEO-ready (improved)
 * Usage :
 * <Layout title="..." description="..." canonical="..." jsonLd={...} noindex={false}>
 *   ...page...
 * </Layout>
 */

import MainMenu from "@components/MainMenu.astro";

const {
  title = "Horizon Conversion ‚Äî Artisan local",
  description = "Artisan local : d√©pannage, installation et devis rapide dans le Sud Oise et le Nord 95.",
  canonical,
  ogImage = "/images/og-default.jpg",
  noindex = false,
  jsonLd = null, // object ou array
} = Astro.props;

// ENV
const SITE_URL =
  import.meta.env.PUBLIC_SITE_URL ??
  (Astro.site ? Astro.site.toString().replace(/\/$/, "") : "");

const BRAND_NAME = import.meta.env.PUBLIC_BRAND_NAME ?? "Horizon Conversion";
const PHONE = import.meta.env.PUBLIC_PHONE ?? "+33660921008";
const PHONE_DISPLAY = import.meta.env.PUBLIC_PHONE_DISPLAY ?? PHONE;

// Helpers
const stripUtm = (urlStr) => {
  try {
    const u = new URL(urlStr);
    ["utm_source","utm_medium","utm_campaign","utm_term","utm_content","gclid","fbclid"].forEach((k) => u.searchParams.delete(k));
    u.hash = "";
    return u.toString();
  } catch {
    return urlStr;
  }
};

const ensureTrailingSlash = (urlStr) => {
  try {
    const u = new URL(urlStr);
    if (!u.pathname.endsWith("/")) u.pathname += "/";
    return u.toString();
  } catch {
    return urlStr;
  }
};

const canonicalRaw =
  canonical ??
  (SITE_URL ? `${SITE_URL}${Astro.url.pathname}` : Astro.url.toString());

const canonicalUrl = ensureTrailingSlash(stripUtm(canonicalRaw));

const ogImageUrl = ogImage?.startsWith("http")
  ? ogImage
  : (SITE_URL ? `${SITE_URL}${ogImage}` : ogImage);

const telHref = `tel:${String(PHONE).replace(/\s+/g, "")}`;

// JSON-LD: accepte object/array, sinon null
const jsonLdPayload =
  Array.isArray(jsonLd) ? jsonLd :
  (jsonLd && typeof jsonLd === "object") ? jsonLd :
  null;

// Robots : noindex MAIS follow pour conserver le maillage interne crawlable
const robotsContent = noindex ? "noindex,follow" : "index,follow";
