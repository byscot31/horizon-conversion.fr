---
/**
 * Layout.astro — SEO-ready (improved)
 * Usage :
 * <Layout title="..." description="..." canonical="..." jsonLd={...} noindex={false}>
 *   ...page...
 * </Layout>
 */

import MainMenu from "@components/MainMenu.astro";

const {
  title = "Horizon Conversion — Artisan local",
  description = "Artisan local : dépannage, installation et devis rapide dans le Sud Oise et le Nord 95.",
  canonical,
  ogImage = "/images/og-default.jpg",
  noindex = false,
  jsonLd = null, // object ou array
} = Astro.props;

// ENV
const SITE_URL =
  import.meta.env.PUBLIC_SITE_URL ??
  (Astro.site ? Astro.site.toString().replace(/\/$/, "") : "");

const BRAND_NAME = import.meta.env.PUBLIC_BRAND_NAME ?? "Horizon Conversion";
const PHONE = import.meta.env.PUBLIC_PHONE ?? "+33600000000";
const PHONE_DISPLAY = import.meta.env.PUBLIC_PHONE_DISPLAY ?? PHONE;

// Helpers
const stripUtm = (urlStr) => {
  try {
    const u = new URL(urlStr);
    // retire tracking courants
    ["utm_source","utm_medium","utm_campaign","utm_term","utm_content","gclid","fbclid"].forEach((k) => u.searchParams.delete(k));
    u.hash = "";
    return u.toString();
  } catch {
    return urlStr;
  }
};

const ensureTrailingSlash = (urlStr) => {
  try {
    const u = new URL(urlStr);
    if (!u.pathname.endsWith("/")) u.pathname += "/";
    return u.toString();
  } catch {
    return urlStr;
  }
};

const canonicalRaw =
  canonical ??
  (SITE_URL ? `${SITE_URL}${Astro.url.pathname}` : Astro.url.toString());

const canonicalUrl = ensureTrailingSlash(stripUtm(canonicalRaw));

const ogImageUrl = ogImage?.startsWith("http")
  ? ogImage
  : (SITE_URL ? `${SITE_URL}${ogImage}` : ogImage);

const telHref = `tel:${String(PHONE).replace(/\s+/g, "")}`;

// JSON-LD: accepte object/array, sinon null
const jsonLdPayload =
  Array.isArray(jsonLd) ? jsonLd :
  (jsonLd && typeof jsonLd === "object") ? jsonLd :
  null;

// Robots : noindex MAIS follow pour conserver le maillage interne crawlable
const robotsContent = noindex ? "noindex,follow" : "index,follow";
---

<!DOCTYPE html>
<html dir="ltr" lang="fr-FR">
<head>

  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta http-equiv="x-ua-compatible" content="IE=edge" />
  <meta name="author" content={BRAND_NAME} />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Canonical + robots -->
  <link rel="canonical" href={canonicalUrl} />
  <meta name="robots" content={robotsContent} />

  <link rel="alternate" type="application/rss+xml" title="RSS" href="/rss.xml" />
  <link rel="alternate" type="application/rss+xml" title="RSS - Avis" href="/rss-avis.xml" />
  <link rel="alternate" type="application/rss+xml" title="RSS - Travaux" href="/rss-travaux.xml" />

  <!-- Hreflang (FR) -->
  <link rel="alternate" hrefLang="fr" href={canonicalUrl} />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content={BRAND_NAME} />
  {ogImageUrl && <meta property="og:image" content={ogImageUrl} />}

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}

  <title>{title}</title>

  <!-- JSON-LD (optionnel) -->
  {jsonLdPayload && (
    <script type="application/ld+json">
      {JSON.stringify(jsonLdPayload)}
    </script>
  )}

  <!-- Slot head pour méta spécifiques (FAQPage, BreadcrumbList, etc.) -->
  <slot name="head" />

  <!-- Font Imports -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;900&display=swap" rel="stylesheet" />

  <!-- Core Style -->
  <link rel="stylesheet" href="/style.css" />
  <link rel="stylesheet" href="/css/font-icons.css" />
  <link rel="stylesheet" href="/css/components/bs-switches.css" />
  <link rel="stylesheet" href="/hc.css" />
  <link rel="stylesheet" href="/css/custom.css" />

</head>

<body class="stretched page-transition" data-loader="2" data-animation-in="fadeIn" data-speed-in="1500" data-animation-out="fadeOut" data-speed-out="800">

  <div id="wrapper">

    <!-- Header -->
    <header id="header" class="full-header header-size-md" data-sticky-offset="full" data-sticky-offset-negative="80">
      <div id="header-wrap">
        <div class="container">
          <div class="header-row">

            <!-- Logo -->
            <div id="logo">
              <a href="/" class="standard-logo">
                <img src="/images/logo.svg" alt={`${BRAND_NAME} - Artisan local`} />
              </a>
            </div>

            <!-- Header misc (desktop) -->
            <div class="header-misc d-none d-lg-flex align-items-center gap-2">
              <a href={telHref} class="btn btn-outline-secondary btn-sm">{PHONE_DISPLAY}</a>
              <a href="/contact/" class="button button-rounded button-small m-0">Devis gratuit</a>
            </div>

            <!-- Mobile Menu Trigger -->
            <div id="primary-menu-trigger" aria-label="Ouvrir le menu" role="button" tabindex="0">
              <svg class="svg-trigger" viewBox="0 0 100 100" aria-hidden="true" focusable="false">
                <path d="m 30,33 h 40 c 3.7,0 7.5,3.1 7.5,8.6 0,5.5 -2.7,8.4 -7.5,8.4 h -20"></path>
                <path d="m 30,50 h 40"></path>
                <path d="m 70,67 h -40 c 0,0 -7.5,-0.8 -7.5,-8.4 0,-7.6 7.5,-8.6 7.5,-8.6 h 20"></path>
              </svg>
            </div>

            <!-- Primary Navigation -->
            <nav class="primary-menu mobile-menu-off-canvas from-right">
              <MainMenu slot="header" />
            </nav>

          </div>
        </div>
      </div>

      <div class="header-wrap-clone"></div>
    </header>

    <slot />

    <!-- Footer -->
    <footer id="footer" class="dark">
      <div class="container">...</div>
      <div id="copyrights">
        <div class="container">...</div>
      </div>
    </footer>

  </div>

  <div id="gotoTop" class="uil uil-angle-up"></div>

  <!-- Sticky CTA -->
  <div class="scw-switcher-wrap text-center">
    <a href="/contact/" class="scw-trigger-icon scw-trigger" aria-label="Demander un devis">
      <i class="bi-whatsapp align-baseline pt-1"></i>
    </a>
  </div>

  <script is:inline src="/js/plugins.min.js"></script>
  <script is:inline src="/js/functions.bundle.js"></script>

</body>
</html>
