---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { listMetiers } from "../../lib/data";

const metiers = listMetiers();

const seo = {
  title: "Métiers assurance | Sud Oise (60) & Nord Val-d’Oise (95)",
  description: "Agences, courtiers, mutuelles, emprunteur, pro, patrimoine : pages métiers et offres associées.",
  canonical: "/metiers/"
};
---
<SiteLayout
    seo={seo}
    h1="Métiers assurance"
    intro="Choisis ton métier : on te montre la méthode, les prestations recommandées et les angles qui convertissent sur 60/95."
    breadcrumbs={[{ label: "Accueil", href: "/" }, { label: "Métiers", href: "/metiers/" }]}
>
  <ul>
    {metiers.map((m) => (
        <li><a href={`/metiers/${m.slug}/`}>{m.title}</a></li>
    ))}
  </ul>
</SiteLayout>