---
import SiteLayout from "../../layouts/SiteLayout.astro";
import FAQ from "../../components/FAQ.astro";

const seo = {
  title: "Tarifs | Acquisition locale assurance (60/95)",
  description:
    "3 packs (Essentiel, Croissance, Performance) + options (tracking, CRM, contenus). Transparence sur ce qui est inclus.",
  canonical: "/tarifs/"
};

const packs = [
  {
    name: "Essentiel",
    target: "Démarrer vite (1 offre prioritaire)",
    includes: [
      "Audit + plan d’action (SEO/Ads/CRO)",
      "1 landing conversion (offre d’entrée)",
      "Tracking basique (form_submit + click_call)",
      "Maillage minimal vers méthode/preuves/contact"
    ]
  },
  {
    name: "Croissance",
    target: "Stabiliser CPL & augmenter volume (2–3 offres)",
    includes: [
      "Structure pages métiers + prestations + 3–6 croisements",
      "Optim Ads (structure + négatifs + zones) OU SEO local (selon priorité)",
      "Modules locaux anti-spam/anti-duplicate",
      "Dashboard simple (leads/source/coût)"
    ]
  },
  {
    name: "Performance",
    target: "Scaling & industrialisation",
    includes: [
      "Déploiement croisements systématique (presta × métier)",
      "CRO itératif (tests, friction, formulaires)",
      "Tracking avancé (UTM + attribution + call tracking option)",
      "Workflows (rappel < 10 min) si CRM"
    ]
  }
];

const options = [
  { name: "Call tracking", desc: "Numéros dédiés campagne/page + attribution appels." },
  { name: "CRM & workflows", desc: "Rappel <10 min, relances, prise de RDV, nurturing." },
  { name: "Contenus & preuves", desc: "Pages offres, preuves, FAQ, mini-cas, rassurance." },
  { name: "Landing supplémentaires", desc: "1 landing par offre/segment si besoin." }
];

const faq = [
  { q: "Vous affichez les prix ?", a: "MVP : on présente les packs et ce qui est inclus. Le prix final dépend du volume (offres/croisements) et du tracking/CRM." },
  { q: "Quel pack pour démarrer ?", a: "Si besoin immédiat : Essentiel. Si vous avez déjà du trafic/Ads : Croissance pour stabiliser et scaler. Performance pour industrialiser." },
  { q: "Engagement ?", a: "MVP : on propose un démarrage simple. Les itérations se font ensuite au mois avec objectifs et KPIs." }
];
---
<SiteLayout
    seo={seo}
    h1="Tarifs (packs + options)"
    intro="3 niveaux pour démarrer, stabiliser puis scaler. Tout est orienté leads mesurés."
    breadcrumbs={[
      { label: "Accueil", href: "/" },
      { label: "Tarifs", href: "/tarifs/" }
    ]}
    ctas={{
      primary: { label: "Demander un devis", href: "/contact/" },
      secondary: { label: "Voir la méthode", href: "/methode/" }
    }}
    schema={{ faq }}
>
  <section>
    <h2>Les packs</h2>
    <div style="display:grid; gap:12px; grid-template-columns:repeat(auto-fit,minmax(240px,1fr));">
      {packs.map((p) => (
          <article style="padding:12px; border:1px solid #eee; border-radius:16px;">
            <h3 style="margin-top:0;">{p.name}</h3>
            <p><strong>Objectif :</strong> {p.target}</p>
            <p><strong>Inclus :</strong></p>
            <ul>
              {p.includes.map((x) => <li>{x}</li>)}
            </ul>
            <p><a href="/contact/">Choisir {p.name}</a></p>
          </article>
      ))}
    </div>
  </section>

  <section style="margin-top:24px;">
    <h2>Options</h2>
    <ul>
      {options.map((o) => (
          <li><strong>{o.name}</strong> — {o.desc}</li>
      ))}
    </ul>
  </section>

  <FAQ items={faq} />

  <section style="margin-top:24px; padding-top:16px; border-top:1px solid #eee;">
    <h2>Navigation</h2>
    <ul>
      <li><a href="/prestations/">Prestations</a></li>
      <li><a href="/metiers/">Métiers</a></li>
      <li><a href="/preuves/">Preuves</a></li>
      <li><a href="/contact/">Contact</a></li>
    </ul>
  </section>
</SiteLayout>