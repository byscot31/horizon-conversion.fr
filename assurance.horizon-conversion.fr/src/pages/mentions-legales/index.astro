---
import SiteLayout from "../../layouts/SiteLayout.astro";

const seo = {
  title: "Mentions légales | Assurance Horizon Conversion",
  description: "Mentions légales du site assurance.horizon-conversion.fr",
  canonical: "/mentions-legales/"
};

// ⚠️ Remplis avec tes infos réelles
const company = {
  name: "Horizon Conversion",
  legalForm: "—",
  siret: "—",
  address: "—",
  email: "—",
  director: "—",
  host: "— (Plesk / Hébergeur)",
  hostAddress: "—"
};
---
<SiteLayout
    seo={seo}
    h1="Mentions légales"
    intro="Informations légales et hébergement."
    breadcrumbs={[
      { label: "Accueil", href: "/" },
      { label: "Mentions légales", href: "/mentions-legales/" }
    ]}
>
  <section>
    <h2>Éditeur du site</h2>
    <ul>
      <li><strong>Raison sociale :</strong> {company.name}</li>
      <li><strong>Forme juridique :</strong> {company.legalForm}</li>
      <li><strong>SIRET :</strong> {company.siret}</li>
      <li><strong>Adresse :</strong> {company.address}</li>
      <li><strong>Email :</strong> {company.email}</li>
      <li><strong>Directeur de publication :</strong> {company.director}</li>
    </ul>
  </section>

  <section>
    <h2>Hébergement</h2>
    <ul>
      <li><strong>Hébergeur :</strong> {company.host}</li>
      <li><strong>Adresse :</strong> {company.hostAddress}</li>
    </ul>
  </section>

  <section>
    <h2>Propriété intellectuelle</h2>
    <p>Les contenus (textes, images, marques) sont protégés. Toute reproduction est interdite sans autorisation.</p>
  </section>

  <section>
    <h2>Contact</h2>
    <p>Pour toute demande : <a href="/contact/">page contact</a>.</p>
  </section>
</SiteLayout>