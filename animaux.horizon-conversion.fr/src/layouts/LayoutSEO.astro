// src/layouts/LayoutSEO.astro
import type { AstroGlobal } from "astro";

type OgType = "website" | "article" | "profile";

type BreadcrumbItem = {
  name: string;
  item: string; // absolute URL
};

type Address = {
  streetAddress?: string;
  postalCode?: string;
  addressLocality?: string;
  addressRegion?: string;
  addressCountry?: string; // e.g. "FR"
};

type Geo = {
  latitude: number;
  longitude: number;
};

type OpeningHoursSpec = {
  dayOfWeek: string[]; // e.g. ["Monday","Tuesday"]
  opens: string; // "09:00"
  closes: string; // "18:00"
};

type SeoProps = {
  title: string;
  description: string;

  // URLs
  canonical?: string; // absolute preferred, but relative accepted
  baseUrl?: string; // used to absolutize canonical/og if they are relative

  // Indexing
  noindex?: boolean;
  nofollow?: boolean;

  // Social
  ogType?: OgType;
  ogImage?: string; // absolute preferred
  ogImageAlt?: string;
  twitterCard?: "summary" | "summary_large_image";

  // Breadcrumbs (JSON-LD)
  breadcrumbs?: BreadcrumbItem[];

  // JSON-LD (Organization / LocalBusiness / Service / FAQ, etc.)
  jsonLd?: Record<string, any> | Array<Record<string, any>>;
  // If you want to auto-generate a LocalBusiness schema quickly:
  business?: {
    name: string;
    url: string; // absolute
    logo?: string; // absolute
    image?: string[]; // absolute
    telephone?: string;
    email?: string;
    priceRange?: string;
    address?: Address;
    geo?: Geo;
    areaServed?: string[]; // e.g. ["Sud Oise", "Val d’Oise"]
    openingHoursSpecification?: OpeningHoursSpec[];
    sameAs?: string[];
  };
};

const {
  title,
  description,
  canonical,
  baseUrl,
  noindex,
  nofollow,
  ogType = "website",
  ogImage,
  ogImageAlt,
  twitterCard = "summary_large_image",
  breadcrumbs,
  jsonLd,
  business,
} = (Astro.props ?? {}) as SeoProps;

const site = Astro.site?.toString() || baseUrl || "";

// Normalize URL -> absolute when possible
const toAbs = (url?: string) => {
  if (!url) return undefined;
  try {
    // Already absolute
    return new URL(url).toString();
  } catch {
    // Relative + site
    if (!site) return url;
    return new URL(url.replace(/^\//, ""), site.endsWith("/") ? site : site + "/").toString();
  }
};

const canonicalUrl = toAbs(canonical || Astro.url.toString());
const ogUrl = canonicalUrl;
const ogImageUrl = toAbs(ogImage);
const robots = [
  noindex ? "noindex" : "index",
  nofollow ? "nofollow" : "follow",
].join(", ");

const makeBreadcrumbLd = (items?: BreadcrumbItem[]) => {
  if (!items?.length) return undefined;
  return {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: items.map((b, idx) => ({
      "@type": "ListItem",
      position: idx + 1,
      name: b.name,
      item: b.item,
    })),
  };
};

const makeBusinessLd = (b?: SeoProps["business"]) => {
  if (!b) return undefined;
  const ld: Record<string, any> = {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    name: b.name,
    url: b.url,
  };
  if (b.logo) ld.logo = b.logo;
  if (b.image?.length) ld.image = b.image;
  if (b.telephone) ld.telephone = b.telephone;
  if (b.email) ld.email = b.email;
  if (b.priceRange) ld.priceRange = b.priceRange;
  if (b.sameAs?.length) ld.sameAs = b.sameAs;

  if (b.address) {
    ld.address = {
      "@type": "PostalAddress",
      ...b.address,
    };
    // default country if omitted
    if (!ld.address.addressCountry) ld.address.addressCountry = "FR";
  }
  if (b.geo) {
    ld.geo = {
      "@type": "GeoCoordinates",
      latitude: b.geo.latitude,
      longitude: b.geo.longitude,
    };
  }
  if (b.areaServed?.length) ld.areaServed = b.areaServed;

  if (b.openingHoursSpecification?.length) {
    ld.openingHoursSpecification = b.openingHoursSpecification.map((oh) => ({
      "@type": "OpeningHoursSpecification",
      ...oh,
    }));
  }
  return ld;
};

const breadcrumbLd = makeBreadcrumbLd(breadcrumbs);
const businessLd = makeBusinessLd(business);

// Merge JSON-LD blocks cleanly (allow array or object)
const ldBlocks: Array<Record<string, any>> = [];
if (breadcrumbLd) ldBlocks.push(breadcrumbLd);
if (businessLd) ldBlocks.push(businessLd);

if (Array.isArray(jsonLd)) ldBlocks.push(...jsonLd);
else if (jsonLd) ldBlocks.push(jsonLd);

// De-duplicate by @type + name/url when possible
const dedupeKey = (o: Record<string, any>) =>
  `${o["@type"] || ""}::${o.name || ""}::${o.url || o.item || ""}`;

const uniqueLdBlocks = Array.from(
  new Map(ldBlocks.map((o) => [dedupeKey(o), o])).values()
);

const ldJson = uniqueLdBlocks.length ? JSON.stringify(uniqueLdBlocks, null, 0) : "";

// ✅ Nav
const nav = [
  { href: "/methode/", label: "Méthode" },
  { href: "/preuves/", label: "Preuves" },
  { href: "/prestations/", label: "Prestations" },
  { href: "/metiers/", label: "Métiers" },
  { href: "/zones/", label: "Zones" },
  { href: "/contact/", label: "Contact" },
];
