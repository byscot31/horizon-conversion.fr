---
// src/components/NAP.astro
import { NAP } from "../data/nap";

const {
  name,
  phoneDisplay,
  phoneE164,
  email,
  areaServed,
  googleBusinessProfileUrl,
} = NAP;

const showGbp = Boolean(googleBusinessProfileUrl);
---

<style>
  .nap { margin-top: 10px; color: #334155; font-size: 14px; line-height: 1.6; }
  .nap a { color: #0f172a; text-decoration: none; border-bottom: 1px solid rgba(15,23,42,.18); }
  .nap a:hover { border-bottom-color: rgba(15,23,42,.45); }
  .muted { color: #64748b; font-size: 12px; margin-top: 6px; }
</style>

<div class="nap">
  <strong>{name}</strong><br />
  Téléphone : <a href={`tel:${phoneE164}`}>{phoneDisplay}</a><br />
  Email : <a href={`mailto:${email}`}>{email}</a><br />
  <span class="muted">Zone de service : {areaServed.join(" • ")}</span>
  {showGbp && (
    <>
      <br />
      <span class="muted">
        Google Business Profile : <a href={googleBusinessProfileUrl} rel="nofollow">voir</a>
      </span>
    </>
  )}
</div>
*