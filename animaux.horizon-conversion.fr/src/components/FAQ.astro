---
const { items = [] } = Astro.props;
---

{items.length ? (
<section style="margin-top: 32px;">
  <h2>FAQ</h2>
  <div>
    {items.map((x) => (
        <details style="margin: 12px 0; padding: 12px; border: 1px solid #eee; border-radius: 10px;">
          <summary style="cursor: pointer; font-weight: 600;">{x.q}</summary>
          <p style="margin-top: 10px;">{x.a}</p>
        </details>
    ))}
  </div>
</section>
  ) : null}
