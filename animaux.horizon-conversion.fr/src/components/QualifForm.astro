---
const action = "/merci/";
---

<form method="post" action={action} style="margin-top: 24px; padding: 18px; border: 1px solid #eee; border-radius: 14px; background:#fafafa;">
  <h2 style="margin:0 0 10px;">Demander un mini-audit (15 min)</h2>

  <label style="display:block; margin:10px 0 6px;">Votre métier</label>
  <select name="metier" required style="width:100%; padding:10px; border-radius:10px; border:1px solid #ddd;">
    <option value="">Choisir…</option>
    <option value="veterinaire">Vétérinaire</option>
    <option value="toiletteur">Toiletteur</option>
  </select>

  <label style="display:block; margin:10px 0 6px;">Votre zone</label>
  <select name="zone" required style="width:100%; padding:10px; border-radius:10px; border:1px solid #ddd;">
    <option value="">Choisir…</option>
    <option value="sud-oise-60">Sud Oise (60)</option>
    <option value="val-doise-95">Val d’Oise (95)</option>
  </select>

  <label style="display:block; margin:10px 0 6px;">Objectif principal</label>
  <select name="objectif" required style="width:100%; padding:10px; border-radius:10px; border:1px solid #ddd;">
    <option value="">Choisir…</option>
    <option value="plus-appels">Plus d’appels</option>
    <option value="plus-rdv">Plus de RDV</option>
    <option value="maps">Remonter sur Google Maps</option>
    <option value="ads">Lancer / optimiser Google Ads</option>
  </select>

  <label style="display:block; margin:10px 0 6px;">Téléphone</label>
  <input name="telephone" required placeholder="06…" style="width:100%; padding:10px; border-radius:10px; border:1px solid #ddd;" />

  <label style="display:block; margin:10px 0 6px;">Email</label>
  <input type="email" name="email" required placeholder="contact@..." style="width:100%; padding:10px; border-radius:10px; border:1px solid #ddd;" />

  <label style="display:block; margin:10px 0 6px;">Message (optionnel)</label>
  <textarea name="message" rows="4" style="width:100%; padding:10px; border-radius:10px; border:1px solid #ddd;"></textarea>

  <button type="submit" style="margin-top:12px; padding:10px 14px; border-radius:12px; background:#111; color:#fff; border:0;">
    Envoyer
  </button>

  <p style="margin-top:10px; font-size: 14px;">
    Ou appelez directement : <a href="tel:+33660921008">06 60 92 10 08</a>
  </p>
</form>
