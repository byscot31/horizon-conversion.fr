---
// src/pages/preuves.astro
import LayoutSEO from "../layouts/LayoutSEO.astro";

const baseUrl = "https://animaux.horizon-conversion.fr";
const canonical = `${baseUrl}${Astro.url.pathname}`;

const title = "Preuves | Horizon Conversion Animaux";
const description =
  "Preuves sans dépendre des avis : process, livrables, tracking, transparence et garanties de moyens pour convaincre localement (Sud Oise 60, Val d’Oise 95).";

const breadcrumbs = [
  { name: "Accueil", item: `${baseUrl}/` },
  { name: "Preuves", item: canonical },
];

const proofPillars = [
  {
    title: "Process clair (et reproductible)",
    text:
      "Vous savez exactement ce qui est fait, dans quel ordre, et pourquoi. Le process devient une preuve de sérieux, même sans avis.",
    bullets: [
      "Cadrage → plan d’actions priorisé",
      "Implémentations rapides (pages/GBP/Ads)",
      "Suivi hebdo : ce qui marche / ce qui bloque",
      "Décisions basées sur la donnée",
    ],
  },
  {
    title: "Livrables concrets (pas du blabla)",
    text:
      "On fournit des éléments prêts à publier : pages locales, copy, titles/metas, FAQ, schémas, recommandations GBP, structures Ads.",
    bullets: [
      "Pages locales “1 intention = 1 page”",
      "Templates de sections (réassurance, FAQ, CTA)",
      "Plan de mots-clés & intent mapping",
      "Checklists Google Business Profile",
    ],
  },
  {
    title: "Tracking (preuve par les chiffres)",
    text:
      "On mesure appels, formulaires, sources (SEO/Maps/Ads) et on relie tout à vos objectifs business : RDV, devis, ventes.",
    bullets: [
      "UTM + source/medium/campaign",
      "Suivi appels (clic-to-call + call tracking)",
      "Événements GA4 / Matomo / Pixel",
      "Tableau de bord leads & coûts",
    ],
  },
  {
    title: "Qualification stricte (moins de pertes de temps)",
    text:
      "On filtre les demandes hors zone / hors budget / hors besoin. Résultat : moins de bruit, plus de RDV utiles.",
    bullets: [
      "Questions de qualification dans les formulaires",
      "Exclusions mots-clés + ciblages Ads",
      "Pages dédiées par service & zone",
      "Messages adaptés aux métiers animaliers",
    ],
  },
  {
    title: "Transparence & pilotage",
    text:
      "Vous avez une vision claire : ce qui a été fait, ce que ça produit, et les prochaines priorités. Pas de boîte noire.",
    bullets: [
      "Plan mensuel priorisé",
      "Historique des changements",
      "Recommandations actionnables",
      "Points de contrôle réguliers",
    ],
  },
  {
    title: "Garantie de moyens (engagement sur l’exécution)",
    text:
      "On s’engage sur la production, l’itération et la qualité des fondations (pages, tracking, campagnes), pas sur une promesse irréaliste.",
    bullets: [
      "Livrables définis dès le départ",
      "Délais de production annoncés",
      "Itérations et optimisations incluses",
      "Contrôle qualité (SEO/UX/Tracking)",
    ],
  },
];

const kpis = [
  { label: "Leads qualifiés", hint: "appels + formulaires + RDV", value: "Mesurés" },
  { label: "Coût par lead", hint: "Ads pilotées au coût", value: "Optimisé" },
  { label: "Taux de conversion", hint: "pages + offres + CTA", value: "Amélioré" },
  { label: "Visibilité locale", hint: "SEO + Maps", value: "Renforcée" },
];

// ✅ Images (à placer dans public/proofs/)
const proofImages = {
  ads: "/proofs/ads-before-after.png",
  tracking: "/proofs/tracking-events.png",
  structure: "/proofs/local-page-structure.png",
};

// ✅ Fallback texte sous les images (ouvrable)
const trackingText = `Événements suivis
- click_to_call       : clic sur tel: (Header/CTA/pages locales) | params: page_path, utm_*, device
- form_submit         : envoi formulaire (Contact/Landing)         | params: page_path, lead_type, city, department
- cta_diagnostic_click: clic CTA “Diagnostic”                      | params: page_path, placement, utm_campaign`;

const localPageText = `Structure type (métier + ville)
- H1 clair : “Éducateur canin à Senlis”
- Bloc réassurance (process + tracking + qualif)
- Problèmes fréquents (3–5) + objectifs (3–5)
- Services (SEO local / Maps / Ads / landing / tracking)
- FAQ locale (3–6 questions) + CTA
- Schémas : WebPage + BreadcrumbList + Service + FAQPage`;

const schemaSnippet = `[
  {
    "@context":"https://schema.org",
    "@type":"Service",
    "name":"Webmarketing local pour Éducateur canin à Senlis",
    "areaServed":["Senlis","Sud Oise (60)"],
    "provider":{
      "@type":"Organization",
      "name":"Horizon Conversion Animaux",
      "telephone":"+33660921008",
      "email":"contact@horizon-conversion.fr",
      "url":"https://animaux.horizon-conversion.fr"
    }
  }
]`;

const faqs = [
  {
    q: "Quelles “preuves” si je démarre sans avis clients ?",
    a: "On compense par un process visible, des livrables concrets, une page par intention, des éléments de réassurance (garantie de moyens, transparence) et surtout un tracking qui prouve la performance (leads, appels, RDV).",
  },
  {
    q: "Comment prouver que les leads viennent bien du SEO, de Google Maps ou des Ads ?",
    a: "Avec un plan de tracking : UTM sur les campagnes, événements GA4/Matomo, suivi des clics appels, formulaires tagués, et un tableau de bord qui regroupe les sources.",
  },
  {
    q: "Est-ce que vous pouvez filtrer les demandes hors zone (60/95) ?",
    a: "Oui : via la structure des pages, la configuration Google Business Profile, les ciblages Ads, les exclusions, et un formulaire qui qualifie (ville, zone, besoin).",
  },
  {
    q: "Qu’est-ce que je reçois à la fin du mois ?",
    a: "Un récap des actions, les livrables produits (pages / schemas / Ads / recommandations), les résultats (leads, coûts, conversion) et les priorités du mois suivant.",
  },
];

const faqJsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((f) => ({
    "@type": "Question",
    name: f.q,
    acceptedAnswer: { "@type": "Answer", text: f.a },
  })),
};

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: "Preuves | Horizon Conversion Animaux",
    url: canonical,
    description,
    isPartOf: {
      "@type": "WebSite",
      name: "Horizon Conversion Animaux",
      url: baseUrl,
    },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: breadcrumbs.map((b, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: b.name,
      item: b.item,
    })),
  },
];
---

<LayoutSEO
  title={title}
  description={description}
  baseUrl={baseUrl}
  canonical={canonical}
  ogType="website"
  ogImage={`${baseUrl}/og/preuves.jpg`}
  ogImageAlt="Preuves Horizon Conversion Animaux"
  breadcrumbs={breadcrumbs}
  jsonLd={[...jsonLd, faqJsonLd]}
>
<style>
  :global(body) {
    margin: 0;
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell,
      Noto Sans, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    color: #0f172a;
    background: #ffffff;
  }
  .wrap {
    max-width: 1040px;
    margin: 0 auto;
    padding: 28px 16px 72px;
  }
  .breadcrumbs {
    font-size: 14px;
    color: #475569;
    margin: 4px 0 18px;
  }
  .breadcrumbs a { color: inherit; text-decoration: none; }

  header.hero {
    border: 1px solid #e2e8f0;
    border-radius: 18px;
    background: linear-gradient(180deg, #f8fafc, #fff);
    padding: 22px;
    display: grid;
    gap: 10px;
  }
  h1 {
    margin: 0;
    font-size: 34px;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }
  .sub {
    margin: 0;
    color: #334155;
    max-width: 78ch;
    line-height: 1.6;
  }

  .grid {
    margin-top: 18px;
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 18px;
    align-items: start;
  }
  @media (max-width: 920px) {
    .grid { grid-template-columns: 1fr; }
  }

  .card {
    border: 1px solid #e2e8f0;
    border-radius: 18px;
    padding: 18px;
    background: #fff;
    box-shadow: 0 6px 20px rgba(15, 23, 42, 0.06);
  }

  .kpis {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 10px;
    margin-top: 12px;
  }
  .kpi {
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    background: #f8fafc;
    padding: 12px;
  }
  .kpi strong { display: block; font-size: 14px; }
  .kpi span { display: block; font-size: 12px; color: #64748b; margin-top: 2px; }
  .kpi em {
    display: inline-block;
    margin-top: 8px;
    font-style: normal;
    font-weight: 800;
    font-size: 13px;
    color: #0f172a;
    background: #fff;
    border: 1px solid #e2e8f0;
    padding: 4px 10px;
    border-radius: 999px;
  }

  .pillars { display: grid; gap: 12px; }
  .pillar {
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    padding: 16px;
    display: grid;
    gap: 10px;
  }
  .pillar h2 { margin: 0; font-size: 18px; }
  .pillar p { margin: 0; color: #334155; line-height: 1.6; }
  .pillar ul { margin: 0; padding-left: 18px; color: #334155; line-height: 1.55; }

  .pill {
    display: inline-block;
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid #e2e8f0;
    background: #fff;
    color: #334155;
    margin: 0 6px 8px 0;
  }

  .cta {
    display: grid;
    gap: 10px;
    margin-top: 12px;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 14px;
    border-radius: 14px;
    border: 1px solid #0f172a;
    background: #0f172a;
    color: #fff;
    cursor: pointer;
    font-weight: 800;
    text-decoration: none;
  }
  .btn.secondary { background: #fff; color: #0f172a; }
  .meta { color: #475569; font-size: 14px; line-height: 1.6; }

  /* ✅ Exemples avec images */
  .examples { margin-top: 18px; display: grid; gap: 12px; }
  .exCard {
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    padding: 16px;
    background: #fff;
    display: grid;
    gap: 10px;
  }
  .mediaGrid {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: 12px;
    margin-top: 8px;
  }
  .figure {
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    overflow: hidden;
    background: #f8fafc;
  }
  .figure a { text-decoration: none; }
  .img {
    display: block;
    width: 100%;
    height: auto;
    background: #f1f5f9;
  }
  .caption {
    padding: 10px 12px 12px;
    color: #334155;
    font-size: 13px;
    line-height: 1.55;
    border-top: 1px solid #e2e8f0;
    background: #fff;
  }
  .caption strong { display:block; font-size: 13px; margin-bottom: 2px; }
  .caption span { color: #64748b; }

  .details {
    border: 1px dashed #cbd5e1;
    border-radius: 16px;
    padding: 12px 14px;
    background: #f8fafc;
  }
  details summary { cursor: pointer; font-weight: 900; }
  .mono {
    margin-top: 10px;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    font-size: 12px;
    line-height: 1.55;
    color: #0f172a;
    background: #fff;
    border: 1px solid #e2e8f0;
    border-radius: 14px;
    padding: 12px;
    overflow-x: auto;
    white-space: pre;
  }

  .faq { margin-top: 18px; }
  .faq details {
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    padding: 12px 14px;
    background: #fff;
    margin-bottom: 10px;
  }
  .faq summary { cursor: pointer; font-weight: 800; }
  .faq p { margin: 10px 0 0; color: #334155; line-height: 1.6; }
</style>

<div class="wrap">
  <nav class="breadcrumbs" aria-label="Fil d’Ariane">
    <a href="/">Accueil</a> <span aria-hidden="true">›</span> <span>Preuves</span>
  </nav>

  <header class="hero">
    <h1>Des preuves, même sans avis</h1>
    <p class="sub">
      Pour les pros des animaux, la confiance est clé. Quand les avis sont rares,
      on s’appuie sur des preuves alternatives : <strong>process</strong>,
      <strong>livrables</strong>, <strong>tracking</strong> et
      <strong>transparence</strong>. Le but : générer des <strong>RDV</strong>
      dans le <strong>Sud Oise (60)</strong> et le <strong>Val d’Oise (95)</strong>.
    </p>
  </header>

  <section class="grid">
    <div class="card">
      <div class="pillars">
        {proofPillars.map((p) => (
          <article class="pillar">
            <h2>{p.title}</h2>
            <p>{p.text}</p>
            <ul>
              {p.bullets.map((b) => <li>{b}</li>)}
            </ul>
          </article>
        ))}
      </div>

      {/* ✅ IMAGES : Exemples */}
      <div class="examples" id="exemples">
        <h2 style="margin:0;">Exemples réels (anonymisés)</h2>
        <p class="meta" style="margin:0;">
          2–3 artefacts concrets valent mieux qu’un long discours : avant/après, tracking, et structure de page locale.
        </p>

        <section class="exCard" aria-label="Avant / Après Ads (anonymisé)">
          <strong>Avant / Après (anonymisé)</strong>
          <div class="meta" style="margin:0;">
            Exemples de KPI : <strong>CTR Ads</strong>, <strong>taux de conversion landing</strong>, <strong>appels / semaine</strong>.
          </div>

          <div class="mediaGrid">
            <figure class="figure">
              <a href={proofImages.ads} target="_blank" rel="noopener noreferrer" aria-label="Ouvrir l’image Avant/Après Ads">
                <img
                  class="img"
                  src={proofImages.ads}
                  width="1200"
                  height="675"
                  loading="lazy"
                  decoding="async"
                  alt="Avant / Après (anonymisé) : CTR Ads, taux de conversion landing, appels par semaine — exemple pour pros des animaux"
                />
              </a>
              <figcaption class="caption">
                <strong>Avant / Après (anonymisé)</strong>
                <span>Optimisation annonces + landing + exclusions + tracking événements.</span>
              </figcaption>
            </figure>

            <details class="details">
              <summary>Voir la version texte (fallback)</summary>
              <div class="mono">{`Cas A (anonymisé) — Google Ads Search
- CTR Ads : 2,3% → 4,8%
- Conv. landing : 3,1% → 7,4%
- Appels / sem. : 3–5 → 9–13

Cas B (anonymisé) — Meta Ads + landing
- CTR Ads : 0,9% → 1,6%
- Conv. landing : 2,7% → 5,9%
- Appels / sem. : 2–4 → 6–10`}</div>
            </details>
          </div>
        </section>

        <section class="exCard" aria-label="Exemple de tracking">
          <strong>Exemple de tracking</strong>
          <div class="meta" style="margin:0;">
            Événements qui prouvent d’où viennent les leads (clic-to-call, formulaire, CTA), reliés aux UTM.
          </div>

          <div class="mediaGrid">
            <figure class="figure">
              <a href={proofImages.tracking} target="_blank" rel="noopener noreferrer" aria-label="Ouvrir l’image Tracking">
                <img
                  class="img"
                  src={proofImages.tracking}
                  width="1200"
                  height="675"
                  loading="lazy"
                  decoding="async"
                  alt="Exemple de tracking : événements click_to_call, form_submit, cta_diagnostic_click (GA4/Matomo)"
                />
              </a>
              <figcaption class="caption">
                <strong>Plan de tracking (exemple)</strong>
                <span>Événements + paramètres (page_path, utm_*, device) → tableau de bord leads.</span>
              </figcaption>
            </figure>

            <details class="details">
              <summary>Voir la version texte (fallback)</summary>
              <div class="mono">{trackingText}</div>
            </details>
          </div>
        </section>

        <section class="exCard" aria-label="Exemple de page locale">
          <strong>Exemple de page locale</strong>
          <div class="meta" style="margin:0;">
            Structure “métier + ville” + FAQ + schémas : c’est ce qui ranke le mieux en local.
          </div>

          <div class="mediaGrid">
            <figure class="figure">
              <a href={proofImages.structure} target="_blank" rel="noopener noreferrer" aria-label="Ouvrir l’image Structure page locale">
                <img
                  class="img"
                  src={proofImages.structure}
                  width="1200"
                  height="675"
                  loading="lazy"
                  decoding="async"
                  alt="Exemple de page locale : structure H1, réassurance, problèmes/objectifs, FAQ, schéma JSON-LD"
                />
              </a>
              <figcaption class="caption">
                <strong>Structure page locale (exemple)</strong>
                <span>H1 → preuves → FAQ → schémas → CTA (1 intention = 1 page).</span>
              </figcaption>
            </figure>

            <details class="details">
              <summary>Voir la version texte (fallback)</summary>
              <div class="mono">{localPageText}</div>
              <div class="mono" style="margin-top:10px;">{schemaSnippet}</div>
            </details>
          </div>
        </section>
      </div>

      <div class="faq" id="faq">
        <h2 style="margin:0 0 10px;">FAQ</h2>
        {faqs.map((f) => (
          <details>
            <summary>{f.q}</summary>
            <p>{f.a}</p>
          </details>
        ))}
      </div>
    </div>

    <aside class="card">
      <h2 style="margin:0;">Ce qu’on mesure</h2>
      <p class="meta" style="margin:10px 0 0;">
        La preuve la plus simple : des chiffres propres, reliés à vos objectifs.
      </p>

      <div class="kpis">
        {kpis.map((k) => (
          <div class="kpi">
            <strong>{k.label}</strong>
            <span>{k.hint}</span>
            <em>{k.value}</em>
          </div>
        ))}
      </div>

      <h3 style="margin:16px 0 10px;">Réassurance rapide</h3>
      <div>
        <span class="pill">Méthode claire</span>
        <span class="pill">Livrables</span>
        <span class="pill">Tracking</span>
        <span class="pill">Qualif stricte</span>
        <span class="pill">Transparence</span>
      </div>

      <div class="cta">
        <a class="btn" href="/contact/">Demander un diagnostic</a>
        <a class="btn secondary" href="tel:+33660921008">Appeler : 06 60 92 10 08</a>
      </div>

      <p class="meta" style="margin-top:12px;">
        <strong>Horizon Conversion Animaux</strong><br />
        <a
          href="mailto:contact@horizon-conversion.fr"
          style="color:#0f172a;text-decoration:none;border-bottom:1px solid rgba(15,23,42,.2);"
        >
          contact@horizon-conversion.fr
        </a>
      </p>

      <div style="margin-top:14px;" class="details" aria-label="Accès rapide">
        <strong>Accès rapide</strong>
        <div style="margin-top:8px;">
          <a class="pill" href="#exemples" style="text-decoration:none;">Exemples</a>
          <a class="pill" href="#faq" style="text-decoration:none;">FAQ</a>
        </div>
      </div>
    </aside>
  </section>
</div>
</LayoutSEO>