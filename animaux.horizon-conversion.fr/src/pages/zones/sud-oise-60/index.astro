---
// src/pages/zones/sud-oise-60/index.astro
import LayoutSEO from "../../../layouts/LayoutSEO.astro";

const baseUrl = "https://animaux.horizon-conversion.fr";
const canonical = `${baseUrl}${Astro.url.pathname}`;

const zoneName = "Sud Oise (60)";
const title = `${zoneName} | Zone d’intervention – Horizon Conversion Animaux`;
const description =
  "Webmarketing local pour les pros des animaux en Sud Oise (60) : SEO local & Google Maps, pages locales (1 intention = 1 page), Google Ads & Meta Ads, conversion & tracking.";

const breadcrumbs = [
  { name: "Accueil", item: `${baseUrl}/` },
  { name: "Zones", item: `${baseUrl}/zones/` },
  { name: "Sud Oise (60)", item: canonical },
];

// Villes “cœur” (à ajuster)
const towns = [
  "Chantilly",
  "Senlis",
  "Lamorlaye",
  "Gouvieux",
  "Creil",
  "Nogent-sur-Oise",
  "Pont-Sainte-Maxence",
  "Clermont",
  "Méru",
  "Liancourt",
];

// ✅ slugify unique (utilisé pour JSON-LD + liens)
const slugify = (s: string) =>
  s
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .replace(/['’]/g, "")
    .replace(/[^a-z0-9]+/g, "-")
    .replace(/(^-|-$)/g, "");

// Exemples d’intentions locales (à décliner en pages plus tard)
const intentExamples = [
  "éducateur canin Chantilly",
  "toiletteur chien Senlis",
  "pension canine Lamorlaye",
  "ostéopathe animalier Gouvieux",
  "vétérinaire Creil",
];

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: title,
    url: canonical,
    description,
    isPartOf: { "@type": "WebSite", name: "Horizon Conversion Animaux", url: baseUrl },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: breadcrumbs.map((b, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: b.name,
      item: b.item,
    })),
  },
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    itemListElement: towns.map((t, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: t,
      // ✅ Liens vers /zones/<ville>/
      url: `${baseUrl}/zones/${slugify(t)}/`,
    })),
  },
];
---

<LayoutSEO
  title={title}
  description={description}
  baseUrl={baseUrl}
  canonical={canonical}
  ogType="website"
  ogImage={`${baseUrl}/og/zones-sud-oise-60.jpg`}
  ogImageAlt="Sud Oise (60) – Horizon Conversion Animaux"
  breadcrumbs={breadcrumbs}
  jsonLd={jsonLd}
>

<style>
  :global(body) {
    margin: 0;
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell,
      Noto Sans, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    color: #0f172a;
    background: #ffffff;
  }
  .wrap {
    max-width: 1040px;
    margin: 0 auto;
    padding: 28px 16px 72px;
  }
  .breadcrumbs {
    font-size: 14px;
    color: #475569;
    margin: 4px 0 18px;
  }
  .breadcrumbs a {
    color: inherit;
    text-decoration: none;
  }
  header.hero {
    border: 1px solid #e2e8f0;
    border-radius: 18px;
    background: linear-gradient(180deg, #f8fafc, #fff);
    padding: 22px;
    display: grid;
    gap: 10px;
  }
  h1 {
    margin: 0;
    font-size: 34px;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }
  .sub {
    margin: 0;
    color: #334155;
    max-width: 90ch;
    line-height: 1.6;
  }

  .grid {
    margin-top: 18px;
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    gap: 18px;
    align-items: start;
  }
  @media (max-width: 920px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }

  .card {
    border: 1px solid #e2e8f0;
    border-radius: 18px;
    padding: 18px;
    background: #fff;
    box-shadow: 0 6px 20px rgba(15, 23, 42, 0.06);
  }

  h2 {
    margin: 0 0 10px;
    font-size: 18px;
  }
  p {
    margin: 0;
    color: #334155;
    line-height: 1.6;
  }

  .pills {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 12px;
  }
  .pill {
    display: inline-block;
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid #e2e8f0;
    background: #fff;
    color: #334155;
  }

  .list {
    margin: 10px 0 0;
    padding-left: 18px;
    color: #334155;
    line-height: 1.55;
  }

  .cityLink {
    color: #0f172a;
    text-decoration: none;
    border-bottom: 1px solid rgba(15, 23, 42, 0.18);
  }
  .cityLink:hover {
    border-bottom-color: rgba(15, 23, 42, 0.45);
  }

  .ctaRow {
    margin-top: 18px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }
  @media (max-width: 720px) {
    .ctaRow {
      grid-template-columns: 1fr;
    }
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 14px;
    border-radius: 14px;
    border: 1px solid #0f172a;
    background: #0f172a;
    color: #fff;
    cursor: pointer;
    font-weight: 900;
    text-decoration: none;
  }
  .btn.secondary {
    background: #fff;
    color: #0f172a;
  }
  .meta {
    color: #475569;
    font-size: 14px;
    line-height: 1.6;
    margin-top: 10px;
  }

  .note {
    margin-top: 12px;
    border: 1px dashed #cbd5e1;
    border-radius: 16px;
    padding: 14px;
    background: #f8fafc;
    color: #334155;
    line-height: 1.6;
  }
</style>

<div class="wrap">
  <nav class="breadcrumbs" aria-label="Fil d’Ariane">
    <a href="/">Accueil</a> <span aria-hidden="true">›</span>{" "}
    <a href="/zones/">Zones</a> <span aria-hidden="true">›</span>{" "}
    <span>Sud Oise (60)</span>
  </nav>

  <header class="hero">
    <h1>Sud Oise (60)</h1>
    <p class="sub">
      On déploie une stratégie locale pensée pour les professionnels des animaux :
      <strong> SEO local</strong> + <strong>Google Maps</strong> + <strong>Ads</strong>,
      avec des pages dédiées par intention (“<strong>1 intention = 1 page</strong>”)
      afin de capter des recherches très qualifiées dans le Sud de l’Oise.
    </p>
  </header>

  <section class="grid">
    <div class="card">
      <h2>Comment on génère des demandes locales</h2>
      <p>
        Dans cette zone, le plus efficace est de combiner : une base SEO local (pages + schémas),
        une Google Business Profile optimisée, et des campagnes Ads orientées RDV sur les services
        les plus rentables.
      </p>

      <div class="note">
        <strong>Principe :</strong> au lieu d’une seule page “générale”, on crée des pages ultra ciblées
        (métier + ville + service) avec FAQ + preuves alternatives + CTA, puis on relie le tout via ce hub.
      </div>

      <h2 style="margin-top:16px;">Exemples d’intentions à forte intention</h2>
      <div class="pills" aria-label="Exemples de requêtes">
        {intentExamples.map((x) => (
          <span class="pill">{x}</span>
        ))}
      </div>

      <div class="ctaRow">
        <a class="btn" href="/contact/">Demander un diagnostic</a>
        <a class="btn secondary" href="tel:+33660921008">Appeler : 06 60 92 10 08</a>
      </div>

      <p class="meta">
        Email :{" "}
        <a
          href="mailto:contact@horizon-conversion.fr"
          style="color:#0f172a;text-decoration:none;border-bottom:1px solid rgba(15,23,42,.2);"
        >
          contact@horizon-conversion.fr
        </a>
      </p>
    </div>

    <aside class="card">
      <h2>Villes couvertes</h2>
      <p>
        Pages locales possibles pour améliorer la couverture et la pertinence.
        (Liste à adapter selon votre activité et vos zones de déplacement.)
      </p>

      <ul class="list">
        {towns.map((t) => (
          <li>
            <a class="cityLink" href={`/zones/${slugify(t)}/`}>{t}</a>
          </li>
        ))}
      </ul>

      <h2 style="margin-top:16px;">Prochaine étape</h2>
      <p>
        Choisir 5–10 pages “métier + ville” prioritaires (forte intention, concurrence gérable),
        puis lancer le tracking et les optimisations Google Maps.
      </p>
    </aside>
  </section>
</div>