---
// src/pages/metiers/[metier].astro
import LayoutSEO from "../../layouts/LayoutSEO.astro";
import { JOBS, type JobKey } from "../../data/jobs.ts";
import { PRESTATIONS } from "../../data/prestations.ts";
import { ZONES, slugifyCity } from "../../data/zones.ts";

export const prerender = true;

const baseUrl = "https://animaux.horizon-conversion.fr";

export function getStaticPaths() {
  return (Object.keys(JOBS) as JobKey[]).map((metier) => ({ params: { metier } }));
}

const { metier } = Astro.params as { metier: JobKey };
const job = JOBS[metier];
if (!job) throw new Error(`Métier inconnu: ${metier}`);

const canonical = `${baseUrl}${Astro.url.pathname}`;

// helpers
const clampMeta = (s: string, max = 160) => {
  const clean = String(s || "").replace(/\s+/g, " ").trim();
  if (clean.length <= max) return clean;
  const cut = clean.slice(0, max - 1);
  const lastSpace = cut.lastIndexOf(" ");
  return (lastSpace > 80 ? cut.slice(0, lastSpace) : cut).trim() + "…";
};
const seed =
  String(metier)
    .split("")
    .reduce((acc, ch) => acc + ch.charCodeAt(0), 0) || 1;

const rotate = <T,>(arr: T[], n: number) => {
  if (!arr?.length) return [];
  const k = ((n % arr.length) + arr.length) % arr.length;
  return arr.slice(k).concat(arr.slice(0, k));
};

const ZONE_SHORT = "Sud Oise (60) & Val d’Oise (95)";

// ✅ Title / Meta uniques (data-first + fallback)
const title =
  (job as any).seoTitle ||
  `${job.name} – plus de RDV en ${ZONE_SHORT} | Horizon Conversion`;

const description = clampMeta(
  (job as any).seoDescription ||
    `Acquisition locale pour ${String(job.name).toLowerCase()} : SEO local & Google Maps, Ads orientées RDV, pages métier×ville, conversion & tracking. Zones : ${ZONE_SHORT}.`,
  160
);

const breadcrumbs = [
  { name: "Accueil", item: `${baseUrl}/` },
  { name: "Métiers", item: `${baseUrl}/metiers/` },
  { name: job.name, item: canonical },
];

// ✅ zones hubs
const zoneLinks = [
  { href: "/zones/sud-oise-60/", label: "Sud Oise (60)" },
  { href: "/zones/val-doise-95/", label: "Val d’Oise (95)" },
];

// ✅ Villes + pages réelles métier×ville (prioritaires)
// (data-first: job.featuredTowns peut forcer un set vraiment pertinent)
const towns60 = (ZONES as any)["sud-oise-60"]?.towns ?? [];
const towns95 = (ZONES as any)["val-doise-95"]?.towns ?? [];

const featuredTowns: string[] =
  ((job as any).featuredTowns as string[] | undefined)?.filter(Boolean) ||
  [
    ...rotate(towns60, seed).slice(0, 6),
    ...rotate(towns95, seed + 3).slice(0, 6),
  ].filter(Boolean);

const cityPages = Array.from(new Set(featuredTowns))
  .slice(0, 12)
  .map((t) => ({
    name: t,
    slug: slugifyCity(t),
    href: `/zones/${slugifyCity(t)}/${metier}/`,
  }));

// ✅ Prestations clés (2–3) — data-first via job.recommendedPrestations
const defaultPrestations: Array<keyof typeof PRESTATIONS> = [
  "seo-local",
  "google-ads",
  "landing-pages",
];
const prestationKeys =
  ((job as any).recommendedPrestations as Array<keyof typeof PRESTATIONS> | undefined) ||
  defaultPrestations;

const prestationLinks = prestationKeys
  .map((k) => ({
    key: k,
    label: PRESTATIONS[k]?.name as string | undefined,
    href: `/prestations/${String(k)}/`,
  }))
  .filter((x) => x.label)
  .slice(0, 3);

// ✅ “Ce qu’on met en place” (stable) — data-first via job.services
const whatWeDo: string[] =
  ((job as any).services as string[] | undefined)?.filter(Boolean) || [
    "Pages locales “métier × ville” (1 intention = 1 page) + FAQ + schémas",
    "Google Business Profile : cohérence, services, zones, posts",
    "Ads (si besoin) sur intentions rentables + exclusions anti-parasites",
    "Landing pages orientées RDV + preuve + réassurance",
    "Tracking (clic-to-call, formulaires, UTM) + dashboard",
  ];

// ✅ Contenu variable “Spécificités métier” (anti template)
// data-first: job.specifics = { objections:[], reassurance:[], differentiation:[] }
const fallbackSpecifics: Record<
  JobKey,
  { objections: string[]; reassurance: string[]; differentiation: string[] }
> = {
  "educateur-canin": {
    objections: [
      "“Je veux un éducateur rapidement, près de chez moi.”",
      "“Est-ce que ça marche pour mon cas (peur, agressivité, rappel) ?”",
      "“Je ne veux pas perdre du temps au téléphone.”",
    ],
    reassurance: [
      "Déroulé clair (bilan → plan → suivi) + durée/format",
      "Cas fréquents traités + cadre (sans promesse irréaliste)",
      "CTA direct (appel + diagnostic) + filtrage (ville/délai)",
    ],
    differentiation: [
      "Angles locaux : chiot / rappel / réactivité + pages par ville",
      "Preuve par process + contenu pédagogique (FAQ problématiques)",
      "Positionnement “anti demandes parasites” (rayon + qualif)",
    ],
  },
  comportementaliste: {
    objections: [
      "“C’est un problème sérieux, j’ai besoin d’être rassuré.”",
      "“J’ai peur d’être jugé / culpabilisé.”",
      "“Je veux savoir si vous traitez ce type de cas.”",
    ],
    reassurance: [
      "Tonalité empathique + explication des limites + plan d’action",
      "FAQ par problématique (anxiété, aboiements, agressivité…)",
      "Qualification douce : contexte, urgence, ville, objectifs",
    ],
    differentiation: [
      "Pages “problème × ville” (si tu les crées) + maillage métier×ville",
      "Réassurance forte : méthode, étapes, attentes réalistes",
      "Tracking pour savoir quels messages convertissent",
    ],
  },
  toiletteur: {
    objections: [
      "“Combien ça coûte / combien de temps ça prend ?”",
      "“Je veux un créneau vite.”",
      "“Mon animal est difficile / gabarit particulier.”",
    ],
    reassurance: [
      "FAQ pratique : prix indicatifs, durée, races, conditions",
      "Preuve : hygiène/protocole + photos (si dispo) + process",
      "CTA “prendre RDV” / “appel” + filtrage (race/gabarit)",
    ],
    differentiation: [
      "Pages par prestation (tonte/démêlage/chat) + ville",
      "Angles saisonniers (mue/été) + Ads ponctuelles",
      "Réduction des demandes hors zone via rayon/communes",
    ],
  },
  "pension-canine": {
    objections: [
      "“Je dois être sûr de la sécurité et des conditions.”",
      "“Est-ce qu’il reste de la place à mes dates ?”",
      "“Je veux éviter les plateformes.”",
    ],
    reassurance: [
      "Conditions, capacité, protocole, visites, calendrier clair",
      "Formulaire qualifiant (dates, gabarit, besoins) + CTA",
      "Pages locales + preuve (process) pour confiance",
    ],
    differentiation: [
      "Saisonnalité : vacances/WE → pages dédiées + Ads",
      "Maillage zone→ville→métier pour élargir la couverture",
      "Tracking (dates/demandes) pour piloter le remplissage",
    ],
  },
  veterinaire: {
    objections: [
      "“Urgence ou non ? Qui appeler ?”",
      "“Je cherche un service précis (vaccin, chirurgie, NAC…).”",
      "“Je veux une info claire avant de me déplacer.”",
    ],
    reassurance: [
      "Parcours urgence/non urgence + CTA adaptés",
      "Pages service + FAQ + schémas + GBP alignée",
      "Transparence horaires/zone + tracking appels",
    ],
    differentiation: [
      "Pages service×ville (si tu les déploies) + maillage fort",
      "Clarté offre + prise de RDV + itinéraires",
      "Pilotage sur appels/rdv (data, pas feeling)",
    ],
  },
  "osteo-animalier": {
    objections: [
      "“Vous vous déplacez jusqu’où ?”",
      "“Pour chien/chat/cheval : est-ce adapté ?”",
      "“Je veux savoir ce que ça améliore.”",
    ],
    reassurance: [
      "Rayon explicite + frais éventuels + communes couvertes",
      "Pages par espèce + FAQ (douleur/boiterie/récupération)",
      "Process (bilan → séance → suivi) + tracking",
    ],
    differentiation: [
      "Ciblage local serré + pages prioritaires (rentables)",
      "Réassurance sans avis : livrables + cas anonymisés",
      "Filtrage demandes hors zone via formulaire + Ads",
    ],
  },
};

const specifics =
  (job as any).specifics ||
  fallbackSpecifics[metier] || { objections: [], reassurance: [], differentiation: [] };

// ✅ Mini cas (anonymisé) — data-first via job.miniCase
type MiniCase = {
  title: string;
  context: string;
  kpis: Array<{ label: string; value: string }>;
  note?: string;
};
const fallbackCases: Record<JobKey, MiniCase> = {
  "educateur-canin": {
    title: "Mini cas (anonymisé) — Éducateur canin",
    context:
      "Pages métier×ville + GBP + tracking. Objectif : plus d’appels qualifiés et moins de demandes hors secteur.",
    kpis: [
      { label: "Appels qualifiés", value: "+ (tendance) sur 4–8 semaines" },
      { label: "Demandes hors zone", value: "↓ via rayon + formulaire" },
      { label: "Pages locales", value: "5–10 pages prioritaires" },
    ],
    note: "Exemple indicatif : résultats variables selon offre, concurrence, agenda.",
  },
  comportementaliste: {
    title: "Mini cas (anonymisé) — Comportementaliste",
    context:
      "FAQ par problématique + pages locales + Ads ponctuelles. Objectif : leads mieux qualifiés (problème, urgence, ville).",
    kpis: [
      { label: "Qualif formulaire", value: "↑ (questions + messages)" },
      { label: "RDV utiles", value: "↑ (matching intention)" },
      { label: "Temps perdu", value: "↓ (filtrage)" },
    ],
    note: "Exemple indicatif : la qualité dépend du cadrage de l’offre.",
  },
  toiletteur: {
    title: "Mini cas (anonymisé) — Toiletteur",
    context:
      "Landing dédiée + Ads Search + tracking appels/form. Objectif : remplir créneaux semaine et cadrer la zone.",
    kpis: [
      { label: "CTR Ads", value: "↑ via annonces + extensions" },
      { label: "Conversion", value: "↑ via landing + FAQ" },
      { label: "Coût/lead", value: "↓ via négatifs + qualif" },
    ],
    note: "Exemple indicatif : dépend du budget et de la saison.",
  },
  "pension-canine": {
    title: "Mini cas (anonymisé) — Pension canine",
    context:
      "Pages locales + formulaire dates/gabarit + retargeting. Objectif : moins de demandes non sérieuses, plus de réservations.",
    kpis: [
      { label: "Demandes qualifiées", value: "↑ (dates + conditions)" },
      { label: "No-show", value: "↓ (cadrage)" },
      { label: "Saisonnalité", value: "pilotée (vacances/WE)" },
    ],
    note: "Exemple indicatif : dépend de capacité, dates et prix.",
  },
  veterinaire: {
    title: "Mini cas (anonymisé) — Vétérinaire",
    context:
      "Pages service + parcours urgence/non-urgence + tracking appels. Objectif : orienter les demandes et réduire la friction.",
    kpis: [
      { label: "Appels mesurés", value: "↑ (clic-to-call)" },
      { label: "Services mis en avant", value: "pages dédiées" },
      { label: "Itinéraires", value: "↑ via GBP" },
    ],
    note: "Exemple indicatif : attention aux règles/contraintes métier.",
  },
  "osteo-animalier": {
    title: "Mini cas (anonymisé) — Ostéo animalier",
    context:
      "Rayon + communes couvertes + pages locales. Objectif : limiter les déplacements non rentables et mieux convertir.",
    kpis: [
      { label: "Demandes hors zone", value: "↓ (rayon + FAQ)" },
      { label: "Pages prioritaires", value: "focus 5–10" },
      { label: "RDV", value: "↑ (matching local)" },
    ],
    note: "Exemple indicatif : dépend du rayon réel et de la densité locale.",
  },
};

const miniCase: MiniCase = (job as any).miniCase || fallbackCases[metier];

// ✅ Exemples de requêtes locales (pills) — data-first via job.intentExamples
const intentExamples: string[] =
  ((job as any).intentExamples as string[] | undefined)?.filter(Boolean) ||
  (() => {
    const t1 = cityPages[0]?.name || "Chantilly";
    const t2 = cityPages[1]?.name || "Cergy";
    const base = String(job.name).toLowerCase();
    return [
      `${base} ${t1}`,
      `${base} ${t2}`,
      `${base} proche de moi`,
      `${base} urgent ${t1}`,
    ];
  })();

// ✅ FAQ spécifique métier — data-first via job.faq (sinon fallback)
const jobFaqFallback: Record<JobKey, Array<{ q: string; a: string }>> = {
  "educateur-canin": [
    {
      q: "Comment éviter les demandes hors zone (ou trop loin) ?",
      a: "Pages locales + rayon explicite + exclusions Ads + formulaire qualifiant (ville, distance, urgence).",
    },
    {
      q: "Qu’est-ce qui convertit le mieux ?",
      a: "Une promesse simple (bilan/chiot/rééducation), un déroulé clair, une FAQ ciblée et un CTA rapide (appel + diagnostic).",
    },
    {
      q: "Je démarre et j’ai peu d’avis : c’est bloquant ?",
      a: "Non : on renforce la confiance via process, livrables visibles, transparence et tracking.",
    },
  ],
  comportementaliste: [
    {
      q: "Comment filtrer les demandes trop vagues ?",
      a: "Formulaire qualifiant (trouble, contexte, urgence, ville) + pages dédiées par problématique + messages clairs.",
    },
    {
      q: "Peut-on cibler anxiété / peur / agressivité ?",
      a: "Oui, via pages et Ads sur intentions fortes, avec wording prudent + réassurance (méthode, déroulé, attentes réalistes).",
    },
    {
      q: "Comment prouver la performance sans avis ?",
      a: "Cas anonymisés, exemples de livrables, tracking (appels/formulaires) et dashboard par source.",
    },
  ],
  toiletteur: [
    {
      q: "Comment remplir les créneaux creux ?",
      a: "Socle Maps/SEO + Ads ponctuelles sur périodes clés + landing dédiée + offre lisible (prix/booking/FAQ).",
    },
    {
      q: "Comment éviter les clients hors prestation ?",
      a: "Pages par prestation + FAQ (race/gabarit/contraintes) + formulaire qualifiant + exclusions Ads.",
    },
    {
      q: "Google Maps peut suffire ?",
      a: "Souvent oui en base, mais le combo Maps + pages locales + tracking stabilise et augmente les demandes.",
    },
  ],
  "pension-canine": [
    {
      q: "Comment réduire la dépendance aux plateformes ?",
      a: "Pages locales + contenus GBP + Ads saisonnières + formulaire (dates/conditions) + retargeting.",
    },
    {
      q: "Comment filtrer les demandes non sérieuses ?",
      a: "Formulaire qualifiant + conditions claires (capacité, calendrier, règles) + optimisation sur leads qualifiés.",
    },
    {
      q: "Qu’est-ce qui rassure le plus ?",
      a: "Transparence (visites, protocole, sécurité), process clair, et pages locales utiles.",
    },
  ],
  veterinaire: [
    {
      q: "Peut-on séparer urgence / non urgence ?",
      a: "Oui : parcours clair, CTA adaptés, pages services et tracking appels pour mesurer et optimiser.",
    },
    {
      q: "Comment mettre en avant certains services ?",
      a: "Pages service + FAQ + schémas + GBP alignée, puis Ads sur intentions fortes si besoin.",
    },
    {
      q: "Comment prouver l’origine des RDV ?",
      a: "Tracking appels + formulaires + UTM Ads + dashboard par canal (SEO/Maps/Ads).",
    },
  ],
  "osteo-animalier": [
    {
      q: "Comment gérer une zone trop large ?",
      a: "Rayon rentable + communes couvertes + pages locales prioritaires + filtrage via formulaire.",
    },
    {
      q: "Peut-on cibler chien / chat / cheval ?",
      a: "Oui : pages par espèce + ville, angles adaptés + preuve + CTA.",
    },
    {
      q: "Sans avis, comment rassurer ?",
      a: "Process visible, livrables, cas anonymisés et tracking.",
    },
  ],
};

const faqs: Array<{ q: string; a: string }> =
  ((job as any).faq as Array<{ q: string; a: string }> | undefined)?.filter((x) => x?.q && x?.a) ||
  jobFaqFallback[metier] || [
    { q: "Comment générez-vous des demandes locales ?", a: "SEO local + Google Maps + Ads + pages dédiées + tracking." },
    { q: "Ça marche sans avis ?", a: "Oui : preuves alternatives (process, livrables, tracking) + pages utiles." },
    { q: "Peut-on filtrer les demandes hors zone ?", a: "Oui : pages + formulaires + ciblages/exclusions Ads." },
  ];

const faqJsonLd = faqs.length
  ? {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      mainEntity: faqs.map((f) => ({
        "@type": "Question",
        name: f.q,
        acceptedAnswer: { "@type": "Answer", text: f.a },
      })),
    }
  : null;

const cityListLd = cityPages.length
  ? {
      "@context": "https://schema.org",
      "@type": "ItemList",
      name: `Pages ${job.name} par ville`,
      itemListElement: cityPages.slice(0, 12).map((c, i) => ({
        "@type": "ListItem",
        position: i + 1,
        name: `${job.name} à ${c.name}`,
        url: `${baseUrl}${c.href}`,
      })),
    }
  : null;

const serviceLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: `Acquisition locale – ${job.name}`,
  areaServed: ["Sud Oise (60)", "Val d’Oise (95)"],
  provider: {
    "@type": "Organization",
    name: "Horizon Conversion Animaux",
    url: baseUrl,
    telephone: "+33660921008",
    email: "contact@horizon-conversion.fr",
  },
};

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: title,
    url: canonical,
    description,
    isPartOf: { "@type": "WebSite", name: "Horizon Conversion Animaux", url: baseUrl },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: breadcrumbs.map((b, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: b.name,
      item: b.item,
    })),
  },
  serviceLd,
  ...(cityListLd ? [cityListLd] : []),
  ...(faqJsonLd ? [faqJsonLd] : []),
];
---

<LayoutSEO
  title={title}
  description={description}
  baseUrl={baseUrl}
  canonical={canonical}
  ogType="website"
  ogImage={`${baseUrl}/og/metiers-${metier}.jpg`}
  ogImageAlt={`Webmarketing local – ${job.name}`}
  breadcrumbs={breadcrumbs}
  jsonLd={jsonLd}
>
  <style>
    .wrap { max-width: 1040px; margin: 0 auto; padding: 28px 16px 72px; }
    .breadcrumbs { font-size: 14px; color: #475569; margin: 4px 0 18px; }
    .breadcrumbs a { color: inherit; text-decoration: none; }

    header.hero {
      border: 1px solid #e2e8f0;
      border-radius: 18px;
      background: linear-gradient(180deg, #f8fafc, #fff);
      padding: 22px;
      display: grid;
      gap: 10px;
    }
    h1 { margin: 0; font-size: 34px; line-height: 1.1; letter-spacing: -0.02em; }
    .sub { margin: 0; color: #334155; max-width: 95ch; line-height: 1.6; }

    .grid { margin-top: 18px; display: grid; grid-template-columns: 1.2fr 0.8fr; gap: 18px; align-items: start; }
    @media (max-width: 920px) { .grid { grid-template-columns: 1fr; } }

    .card { border: 1px solid #e2e8f0; border-radius: 18px; padding: 18px; background: #fff; box-shadow: 0 6px 20px rgba(15, 23, 42, 0.06); }

    h2 { margin: 0 0 10px; font-size: 18px; }
    h3 { margin: 16px 0 10px; font-size: 15px; }
    p { margin: 0; color: #334155; line-height: 1.6; }
    ul { margin: 10px 0 0; padding-left: 18px; color: #334155; line-height: 1.55; }

    .cols { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; margin-top: 12px; }
    @media (max-width: 720px) { .cols { grid-template-columns: 1fr; } }
    .box { border: 1px solid #e2e8f0; border-radius: 16px; padding: 14px; background: #f8fafc; }
    .box strong { display:block; }

    .pills { display: flex; flex-wrap: wrap; gap: 8px; margin-top: 10px; }
    .pill, .pillLink {
      display: inline-block;
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid #e2e8f0;
      background: #fff;
      color: #334155;
      text-decoration: none;
    }
    .pillLink:hover { background: #f8fafc; }

    .note { margin-top: 12px; border: 1px dashed #cbd5e1; border-radius: 16px; padding: 14px; background: #f8fafc; color: #334155; line-height: 1.6; }

    .ctaRow { margin-top: 14px; display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
    @media (max-width: 720px) { .ctaRow { grid-template-columns: 1fr; } }
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 12px 14px;
      border-radius: 14px;
      border: 1px solid #0f172a;
      background: #0f172a;
      color: #fff;
      cursor: pointer;
      font-weight: 900;
      text-decoration: none;
    }
    .btn.secondary { background: #fff; color: #0f172a; }

    .meta { color: #475569; font-size: 14px; line-height: 1.6; margin-top: 10px; }
    .link { color: #0f172a; text-decoration: none; border-bottom: 1px solid rgba(15,23,42,.2); }
    .link:hover { border-bottom-color: rgba(15,23,42,.45); }

    .miniCase { margin-top: 12px; border: 1px solid #e2e8f0; border-radius: 16px; padding: 14px; background: #fff; }
    .miniGrid { display: grid; grid-template-columns: repeat(3, minmax(0, 1fr)); gap: 10px; margin-top: 10px; }
    @media (max-width: 720px) { .miniGrid { grid-template-columns: 1fr; } }
    .kpi { border: 1px solid #e2e8f0; border-radius: 14px; padding: 10px; background: #f8fafc; }
    .kpi strong { display:block; font-size: 13px; }
    .kpi span { display:block; font-size: 12px; color:#64748b; margin-top:2px; }

    .faq details { border: 1px solid #e2e8f0; border-radius: 16px; padding: 12px 14px; background: #fff; margin-top: 10px; }
    .faq summary { cursor: pointer; font-weight: 900; }
    .faq p { margin: 10px 0 0; }
  </style>

  <div class="wrap">
    <nav class="breadcrumbs" aria-label="Fil d’Ariane">
      <a href="/">Accueil</a> <span aria-hidden="true">›</span>{" "}
      <a href="/metiers/">Métiers</a> <span aria-hidden="true">›</span>{" "}
