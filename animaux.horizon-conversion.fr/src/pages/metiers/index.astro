---
// src/pages/metiers/index.astro
import LayoutSEO from "../../layouts/LayoutSEO.astro";

const baseUrl = "https://animaux.horizon-conversion.fr";
const canonical = `${baseUrl}${Astro.url.pathname}`;

const title = "Métiers | Horizon Conversion Animaux";
const description =
  "Webmarketing local pour les métiers animaliers : SEO local, Google Maps, Google Ads, Meta Ads, conversion & tracking en Sud Oise (60) et Val d’Oise (95).";

const breadcrumbs = [
  { name: "Accueil", item: `${baseUrl}/` },
  { name: "Métiers", item: canonical },
];

// ✅ Liste “hub” : adapte / ajoute facilement des métiers
const jobs = [
  {
    slug: "educateur-canin",
    name: "Éducateur canin",
    promise: "Plus de bilans & séances, moins de demandes hors zone.",
    intents: ["éducateur canin + ville", "éducation chiot + ville", "rééducation chien + ville"],
  },
  {
    slug: "comportementaliste",
    name: "Comportementaliste",
    promise: "Des demandes qualifiées sur les troubles prioritaires.",
    intents: ["comportementaliste chien + ville", "peur/agressivité + ville", "anxiété séparation + ville"],
  },
  {
    slug: "toiletteur",
    name: "Toiletteur",
    promise: "Des créneaux remplis avec des clients de proximité.",
    intents: ["toiletteur chien + ville", "toiletteur chat + ville", "toilettage + ville"],
  },
  {
    slug: "pension-canine",
    name: "Pension canine / Pet-sitter",
    promise: "Plus de réservations aux périodes clés, sans dépendre des plateformes.",
    intents: ["pension canine + ville", "pet sitter + ville", "garde chien + ville"],
  },
  {
    slug: "veterinaire",
    name: "Vétérinaire",
    promise: "Visibilité locale + prises de RDV selon vos services.",
    intents: ["vétérinaire + ville", "urgence vétérinaire + ville", "vaccin chien/chat + ville"],
  },
  {
    slug: "osteo-animalier",
    name: "Ostéopathe animalier",
    promise: "Des RDV réguliers et une zone maîtrisée.",
    intents: ["ostéopathe animalier + ville", "ostéo cheval/chien + ville", "douleur/boiterie + ville"],
  },
];

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    name: "Métiers | Horizon Conversion Animaux",
    url: canonical,
    description,
    isPartOf: { "@type": "WebSite", name: "Horizon Conversion Animaux", url: baseUrl },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: breadcrumbs.map((b, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: b.name,
      item: b.item,
    })),
  },
  // Optionnel : ItemList pour aider Google à comprendre la liste
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    itemListElement: jobs.map((j, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: j.name,
      url: `${baseUrl}/metiers/${j.slug}/`,
    })),
  },
];
---

<LayoutSEO
  title={title}
  description={description}
  baseUrl={baseUrl}
  canonical={canonical}
  ogType="website"
  ogImage={`${baseUrl}/og/metiers.jpg`}
  ogImageAlt="Métiers animaliers – Horizon Conversion Animaux"
  breadcrumbs={breadcrumbs}
  jsonLd={jsonLd}
>

<style>
  :global(body) {
    margin: 0;
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell,
      Noto Sans, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    color: #0f172a;
    background: #ffffff;
  }
  .wrap {
    max-width: 1040px;
    margin: 0 auto;
    padding: 28px 16px 72px;
  }
  .breadcrumbs {
    font-size: 14px;
    color: #475569;
    margin: 4px 0 18px;
  }
  .breadcrumbs a {
    color: inherit;
    text-decoration: none;
  }
  header.hero {
    border: 1px solid #e2e8f0;
    border-radius: 18px;
    background: linear-gradient(180deg, #f8fafc, #fff);
    padding: 22px;
    display: grid;
    gap: 10px;
  }
  h1 {
    margin: 0;
    font-size: 34px;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }
  .sub {
    margin: 0;
    color: #334155;
    max-width: 80ch;
    line-height: 1.6;
  }

  .grid {
    margin-top: 18px;
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .card {
    border: 1px solid #e2e8f0;
    border-radius: 18px;
    padding: 18px;
    background: #fff;
    box-shadow: 0 6px 20px rgba(15, 23, 42, 0.06);
    display: grid;
    gap: 10px;
  }

  .top {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 10px;
    flex-wrap: wrap;
  }
  .top h2 {
    margin: 0;
    font-size: 18px;
  }
  .pill {
    display: inline-block;
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid #e2e8f0;
    background: #fff;
    color: #334155;
    width: fit-content;
  }

  .promise {
    margin: 0;
    color: #334155;
    line-height: 1.6;
  }

  .intents {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 4px;
  }

  a.cardLink {
    text-decoration: none;
    color: inherit;
  }

  .ctaRow {
    margin-top: 18px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }
  @media (max-width: 720px) {
    .ctaRow {
      grid-template-columns: 1fr;
    }
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 14px;
    border-radius: 14px;
    border: 1px solid #0f172a;
    background: #0f172a;
    color: #fff;
    cursor: pointer;
    font-weight: 800;
    text-decoration: none;
  }
  .btn.secondary {
    background: #fff;
    color: #0f172a;
  }
  .meta {
    color: #475569;
    font-size: 14px;
    line-height: 1.6;
    margin-top: 10px;
  }
</style>

<div class="wrap">
  <nav class="breadcrumbs" aria-label="Fil d’Ariane">
    <a href="/">Accueil</a> <span aria-hidden="true">›</span> <span>Métiers</span>
  </nav>

  <header class="hero">
    <h1>Métiers animaliers</h1>
    <p class="sub">
      Sélectionnez votre métier : vous trouverez une approche “prête à lancer”
      (SEO local, Google Maps, Ads, conversion & tracking) adaptée aux
      professionnels des animaux en <strong>Sud Oise (60)</strong> et
      <strong>Val d’Oise (95)</strong>.
    </p>
  </header>

  <section class="grid" aria-label="Liste des métiers">
    {jobs.map((j) => (
      <a class="cardLink" href={`/metiers/${j.slug}/`}>
        <article class="card">
          <div class="top">
            <h2>{j.name}</h2>
            <span class="pill">Page métier</span>
          </div>
          <p class="promise">{j.promise}</p>
          <div class="intents" aria-label="Intentions locales">
            {j.intents.map((it) => (
              <span class="pill">{it}</span>
            ))}
          </div>
        </article>
      </a>
    ))}
  </section>

  <div class="ctaRow">
    <a class="btn" href="/contact/">Demander un diagnostic</a>
    <a class="btn secondary" href="tel:+33660921008">Appeler : 06 60 92 10 08</a>
  </div>

  <p class="meta">
    Besoin d’un métier non listé ? Contactez-nous :{" "}
    <a
      href="mailto:contact@horizon-conversion.fr"
      style="color:#0f172a;text-decoration:none;border-bottom:1px solid rgba(15,23,42,.2);"
    >
      contact@horizon-conversion.fr
    </a>
  </p>
</div>