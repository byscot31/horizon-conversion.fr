---
// src/pages/metiers/index.astro
import LayoutSeo from "../../layouts/LayoutSEO.astro";
---

<LayoutSeo>

  <!-- Page Title -->
  <section class="page-title page-title-parallax parallax scroll-detect dark include-header">
    <img src="/assets/images/page-title.jpg" class="parallax-bg" alt="pageTitleALT" />
    <div class="container">
      <div class="page-title-row pt-5 pb-3">

        <div class="page-title-content">
          <h1 style="font-size: 40px; line-height: 1.2; font-weight: 700; text-shadow: 1px 1px 1px rgba(0,0,0,0.5);">
            pageTitleH1
          </h1>
          <span class="fw-light d-none d-md-block" style="font-size: 16px; opacity: .85; max-width: 720px;">
            pageTitleLead
          </span>

          <div class="d-flex flex-wrap align-items-center gap-3 mt-4">
            <a href="/contact/" class="button button-large button-rounded ms-0" data-cta="1">
              Mini-audit (15 min)
            </a>
            <a href="tel:+33660921008" class="button button-large button-rounded button-border button-white button-light ms-0" data-cta="1">
              Appeler : 06 60 92 10 08
            </a>
          </div>

          <div class="row mt-4" style="max-width: 820px;">
            <div class="col-md-4">
              <div style="background: rgba(0,0,0,.35); padding: 12px 14px; border-radius: 12px;">
                <strong>proofs title 1</strong>
                <br/><small style="opacity:.85;">proofs subtitle 1</small>
              </div>
            </div>
            <div class="col-md-4">
              <div style="background: rgba(0,0,0,.35); padding: 12px 14px; border-radius: 12px;">
                <strong>proofs title 2</strong>
                <br/><small style="opacity:.85;">proofs subtitle 2</small>
              </div>
            </div>
            <div class="col-md-4">
              <div style="background: rgba(0,0,0,.35); padding: 12px 14px; border-radius: 12px;">
                <strong>proofs title 3</strong>
                <br/><small style="opacity:.85;">proofs subtitle 3</small>
              </div>
            </div>
          </div>
        </div>

        <nav aria-label="breadcrumb" class="d-none d-lg-block">
          <ol class="breadcrumb" style="--bs-breadcrumb-divider: '&#62;';">
            <li class="breadcrumb-item">
              <a href="/"><i class="uil uil-home"></i></a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Métiers</li>
          </ol>
        </nav>

      </div>
    </div>
  </section>

  <section id="content">
    <div class="content-wrap pt-0">

      <!-- Bénéfices -->
      <section class="section m-0" style="background-color: #eef2f5;">
        <div class="container">

          <div class="heading-block text-center border-bottom-0 mb-5 mt-4 mx-auto" style="max-width: 640px">
            <h2 class="text-transform-none font-secondary fw-normal" style="font-size: 36px;">
              benefits h2
            </h2>
            <span>benefits lead</span>
          </div>

          <div class="row align-items-stretch g-4">
            <div class="col-md-3">
              <div class="feature-box media-box fbox-bg h-100">
                <div class="fbox-content border-0">
                  <h3 class="text-transform-none ls-0 fw-semibold">benefits title 1</h3>
                  <p class="mb-0">benefits text 1</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="feature-box media-box fbox-bg h-100">
                <div class="fbox-content border-0">
                  <h3 class="text-transform-none ls-0 fw-semibold">benefits title 2</h3>
                  <p class="mb-0">benefits text 2</p>
                </div>
              </div>
            </div>
          </div>

        </div>
      </section>

      <!-- Prestations -->
      <div class="container mt-6">
        <div class="heading-block text-center border-bottom-0 mx-auto" style="max-width: 640px">
          <h2 class="text-transform-none font-secondary fw-normal" style="font-size: 36px;">
            prestationsBlocks h2
          </h2>
          <span>prestationsBlocks lead</span>
        </div>
        <div class="row align-items-stretch g-4">
          <div class="col-md-4">
            <div class="feature-box media-box h-100">
              <div class="fbox-content border-0">
                <h3 class="text-transform-none ls-0 fw-semibold">
                  prestationsBlocks title 1
                </h3>
                <ul class="iconlist my-4">
                  <li class="d-block"><i class="bi-check-lg me-1"></i> prestationsBlocks item 1</li>
                  <li class="d-block"><i class="bi-check-lg me-1"></i> prestationsBlocks item 2</li>
                </ul>
                <a href="prestationsBlocks href" class="button button-large button-rounded" data-cta="1">prestationsBlocks label</a>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="feature-box media-box h-100">
              <div class="fbox-content border-0">
                <h3 class="text-transform-none ls-0 fw-semibold">
                  prestationsBlocks title 2
                </h3>
                <ul class="iconlist my-4">
                  <li class="d-block"><i class="bi-check-lg me-1"></i> prestationsBlocks item 1</li>
                  <li class="d-block"><i class="bi-check-lg me-1"></i> prestationsBlocks item 2</li>
                </ul>
                <a href="prestationsBlocks href" class="button button-large button-rounded" data-cta="1">prestationsBlocks label</a>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="feature-box media-box h-100">
              <div class="fbox-content border-0">
                <h3 class="text-transform-none ls-0 fw-semibold">
                  prestationsBlocks title 3
                </h3>
                <ul class="iconlist my-4">
                  <li class="d-block"><i class="bi-check-lg me-1"></i> prestationsBlocks item 1</li>
                  <li class="d-block"><i class="bi-check-lg me-1"></i> prestationsBlocks item 2</li>
                </ul>
                <a href="prestationsBlocks href" class="button button-large button-rounded" data-cta="1">prestationsBlocks label</a>
              </div>
            </div>
          </div>

          <div class="line line-sm"></div>

          <div class="col-md-4">
            <div class="feature-box media-box h-100">
              <div class="fbox-content border-0">
                <h3 class="text-transform-none ls-0 fw-semibold">
                  prestationsBlocks title 4
                </h3>
                <ul class="iconlist my-4">
                  <li class="d-block"><i class="bi-check-lg me-1"></i> prestationsBlocks item 1</li>
                  <li class="d-block"><i class="bi-check-lg me-1"></i> prestationsBlocks item 2</li>
                </ul>
                <a href="prestationsBlocks href" class="button button-large button-rounded" data-cta="1">prestationsBlocks label</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Preuves -->
      <div class="section mb-0">
        <div class="heading-block text-center border-bottom-0 mb-0 mx-auto" style="max-width: 640px">
          <h2 class="text-transform-none font-secondary fw-normal" style="font-size: 36px;">
            proofsBlocks h2
          </h2>
          <span>proofsBlocks lead</span>
        </div>

        <div class="container mt-5">
          <div class="row feature-box">
            <div class="col-lg-6">
              <div class="card border-light shadow-sm mb-3">
                <div class="card-body">
                  <h3 class="text-transform-none ls-0 fw-semibold mb-0">proofsBlocks title 1</h3>
                  <ul class="iconlist my-3">
                    <li class="d-block"><i class="bi-check-lg me-1"></i> proofsBlocks items 1</li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="card border-light shadow-sm mb-3">
                <div class="card-body">
                  <h3 class="text-transform-none ls-0 fw-semibold mb-0">proofsBlocks title 2</h3>
                  <ul class="iconlist my-3">
                    <li class="d-block"><i class="bi-check-lg me-1"></i> proofsBlocks items 2</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <div class="text-center mt-4">
            <a href="objectives href" class="objectives style" data-cta="1">objectives label 1</a>
            <a href="objectives href" class="objectives style" data-cta="1">objectives label 2</a>
          </div>
        </div>
      </div>

      <!-- Process -->
      <div class="container mt-6">
        <div class="heading-block text-center border-bottom-0 mx-auto" style="max-width: 640px">
          <h2 class="text-transform-none font-secondary fw-normal" style="font-size: 36px;">
            process h2
          </h2>
          <span>process lead</span>
        </div>

        <ul class="process-steps process-2 feature-box row col-mb-30 justify-content-center mb-4">
          <li class="col-sm-3">
            <a href="process href" class="i-style rounded-circle i-alt mx-auto bg-color">1</a>
            <h3 class="text-transform-none ls-0 fw-semibold mb-0">process title</h3>
            <p class="mt-3 mb-0">process text</p>
          </li>
          <li class="col-sm-3">
            <a href="process href" class="i-style rounded-circle i-alt mx-auto bg-color">2</a>
            <h3 class="text-transform-none ls-0 fw-semibold mb-0">process title</h3>
            <p class="mt-3 mb-0">process text</p>
          </li>
        </ul>
      </div>

      <!-- CTA -->
      <div class="section dark parallax scroll-detect mb-0" style="padding: 140px 0;">
        <img src="/assets/images/others/section-bg.jpg" class="parallax-bg" alt="cta alt">
        <div class="container text-center">
          <div class="row">
            <div class="col-lg-6">
              <div class="heading-block border-bottom-0 mb-0">
                <div class="before-heading text-lowercase ls-1 text-white fw-normal">cta eyebrow</div>
                <h2 class="text-transform-none font-secondary fw-normal" style="font-size: 32px;">
                  cta title
                </h2>
                <a href="cta buttonHref" class="button button-large button-circle button-border button-white button-light mt-4 ms-0" data-cta="1">
                  cta buttonLabel
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Métiers -->
      <div class="container mt-6">
        <div class="heading-block text-center border-bottom-0 mx-auto" style="max-width: 640px">
          <h2 class="text-transform-none font-secondary fw-normal" style="font-size: 36px;">
            metiersBlocks h2
          </h2>
          <span>metiersBlocks lead</span>
        </div>

        <div class="row contact-properties">
          <div class="col-md-6">
            <a href="metiersBlocks href" data-cta="1" style={`background: url('metiersBlocks background') no-repeat center center; background-size: cover;`}>
              <div class="vertical-middle dark text-center">
                <div class="heading-block m-0 border-0">
                  <h3 class="text-capitalize fw-normal font-secondary">metiersBlocks title 1</h3>
                  <span style="margin-top: 100px; font-size: 17px; font-weight: 500;">
                    metiersBlocks description 1
                  </span>
                </div>
              </div>
            </a>
          </div>
          <div class="col-md-6">
            <a href="metiersBlocks href" data-cta="1" style={`background: url('metiersBlocks background') no-repeat center center; background-size: cover;`}>
              <div class="vertical-middle dark text-center">
                <div class="heading-block m-0 border-0">
                  <h3 class="text-capitalize fw-normal font-secondary">metiersBlocks title 2</h3>
                  <span style="margin-top: 100px; font-size: 17px; font-weight: 500;">
                    metiersBlocks description 2
                  </span>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>

      <!-- FAQ -->
      <div class="container mt-6">
        <div class="heading-block text-center border-bottom-0 mx-auto" style="max-width: 640px">
          <h2 class="text-transform-none font-secondary fw-normal" style="font-size: 36px;">
            faqs h2
          </h2>
          <span>faqs lead</span>
        </div>

        <div class="row justify-content-center">
          <div class="col-lg-10">
            <div class="toggle">
              <div class="toggle-header">
                <div class="toggle-icon">
                  <i class="toggle-closed bi-question-circle"></i>
                  <i class="toggle-open bi-question-circle"></i>
                </div>
                <div class="toggle-title">faqs q 1</div>
              </div>
              <div class="toggle-content">faqs a 1</div>
            </div>
            <div class="toggle">
              <div class="toggle-header">
                <div class="toggle-icon">
                  <i class="toggle-closed bi-question-circle"></i>
                  <i class="toggle-open bi-question-circle"></i>
                </div>
                <div class="toggle-title">faqs q 2</div>
              </div>
              <div class="toggle-content">faqs a 2</div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>

</LayoutSeo>
