---
// src/pages/tarifs.astro
import LayoutSEO from "../layouts/LayoutSEO.astro";

const baseUrl = "https://animaux.horizon-conversion.fr";
const canonical = `${baseUrl}${Astro.url.pathname}`;

const title = "Tarifs | Horizon Conversion Animaux";
const description =
  "Tarifs webmarketing local pour pros des animaux : SEO local & Google Maps, Ads (Google/Meta), landing pages, conversion & tracking (Sud Oise 60, Val d’Oise 95).";

const breadcrumbs = [
  { name: "Accueil", item: `${baseUrl}/` },
  { name: "Tarifs", item: canonical },
];

const NAP = {
  name: "Horizon Conversion Animaux",
  phoneDisplay: "06 60 92 10 08",
  phoneE164: "+33660921008",
  email: "contact@horizon-conversion.fr",
  url: baseUrl,
  areaServed: ["Sud Oise (60)", "Val d’Oise (95)"],
};

const plans = [
  {
    id: "local-essentiel",
    name: "Local Essentiel",
    bestFor: "Démarrer propre (SEO local + base conversion)",
    setupFrom: 490,
    monthlyFrom: 390,
    bullets: [
      "Audit express + plan d’actions priorisé",
      "Optimisation Google Business Profile (catégories, services, Q&R)",
      "Structure SEO locale (hubs + maillage interne)",
      "1 page “1 intention = 1 page” (modèle) + CTA",
      "Tracking de base (UTM + événements clés)",
      "Point mensuel + backlog d’optimisations",
    ],
    notes: ["Idéal si vous avez peu d’avis : process + livrables + tracking."],
    ctas: [{ href: "/contact/", label: "Demander un diagnostic" }],
  },
  {
    id: "local-performance",
    name: "Local Performance",
    bestFor: "Accélérer la demande (pages + tracking + optimisation continue)",
    setupFrom: 790,
    monthlyFrom: 690,
    highlight: "Recommandé",
    bullets: [
      "Tout le pack Essentiel",
      "2–4 pages locales / mois (selon priorité)",
      "Optimisation conversion (sections, preuves, FAQ, CTA)",
      "Tracking avancé (clic-to-call, form_submit, CTA) + dashboard",
      "Pilotage requêtes / intentions (priorisation “money pages”)",
      "Point hebdo léger (asynchrone) + point mensuel",
    ],
    notes: ["Pensé pour remplir l’agenda avec des demandes qualifiées (zone, besoin, budget)."],
    ctas: [{ href: "/contact/", label: "Voir si c’est adapté" }],
  },
  {
    id: "ads-booster",
    name: "Ads Booster (Google ou Meta)",
    bestFor: "Générer des leads rapides sur intentions fortes",
    setupFrom: 450,
    monthlyFrom: 450,
    bullets: [
      "Création/optimisation campagnes (Search ou Meta)",
      "Structure annonces + mots-clés + exclusions",
      "Landing page dédiée (ou optimisation existante)",
      "Tracking événements + UTM + objectifs",
      "Optimisation hebdo (CTR, CPL, conv.)",
      "Reporting clair (leads, coûts, axes d’amélioration)",
    ],
    notes: ["Budget pub non inclus. Pilotage au coût/lead, sans parasitage."],
    ctas: [{ href: "/contact/", label: "Estimer votre budget" }],
  },
  {
    id: "pack-complet",
    name: "Pack Complet",
    bestFor: "SEO local + Ads + conversion (pilotage global)",
    setupFrom: 990,
    monthlyFrom: 990,
    bullets: [
      "SEO local + GBP + pages locales (rythme priorisé)",
      "Ads (Google/Meta) selon opportunité et marge",
      "Landing pages & tests conversion",
      "Tracking complet + tableau de bord (appels/formulaires)",
      "Qualification stricte (form, ciblages, exclusions)",
      "Plan mensuel + itérations continues",
    ],
    notes: ["Le pack “agence” : focus RDV/ventes avec preuves chiffrées."],
    ctas: [{ href: "/contact/", label: "Demander une proposition" }],
  },
];

const options = [
  { name: "Call tracking (numéro dédié)", text: "Mesurer les appels + sources + heures (option selon prestataire)." },
  { name: "Création visuels Ads", text: "Créa statique (Meta) + variations (option si besoin)." },
  { name: "Pages supplémentaires", text: "Lot de pages locales / mois selon concurrence & priorité." },
  { name: "Audit concurrence local", text: "SERP + Maps + recommandations concrètes (one-shot)." },
];

const faqs = [
  {
    q: "Pourquoi “à partir de” ?",
    a: "Parce que la charge dépend du métier (véto, éducateur, pension…), de la concurrence locale, et du volume de pages/Ads à déployer. Le diagnostic fixe un plan et un périmètre clair.",
  },
  {
    q: "Y a-t-il un engagement ?",
    a: "Souvent oui, car le SEO local et l’optimisation Ads demandent des itérations. On propose un cadre simple (ex. 3 mois) pour laisser le temps aux pages, au tracking et au pilotage de produire des résultats mesurables.",
  },
  {
    q: "Le budget publicitaire est-il inclus ?",
    a: "Non. Le budget pub (Google/Meta) est payé directement à la plateforme. Nous facturons la stratégie, la mise en place, l’optimisation et le tracking.",
  },
  {
    q: "Est-ce utile si je n’ai pas beaucoup d’avis ?",
    a: "Oui : on compense via preuves alternatives (process, livrables, garanties de moyens) + une structure locale propre + tracking des appels/formulaires.",
  },
];

const faqJsonLd = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((f) => ({
    "@type": "Question",
    name: f.q,
    acceptedAnswer: { "@type": "Answer", text: f.a },
  })),
};

const offerCatalogLd = {
  "@context": "https://schema.org",
  "@type": "OfferCatalog",
  name: "Tarifs Horizon Conversion Animaux",
  url: canonical,
  itemListElement: plans.map((p) => ({
    "@type": "Offer",
    name: p.name,
    priceCurrency: "EUR",
    price: p.monthlyFrom,
    url: `${canonical}#${p.id}`,
    itemOffered: {
      "@type": "Service",
      name: p.name,
      areaServed: NAP.areaServed,
      provider: {
        "@type": "Organization",
        name: NAP.name,
        url: NAP.url,
        telephone: NAP.phoneE164,
        email: NAP.email,
      },
    },
  })),
};

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: title,
    url: canonical,
    description,
    isPartOf: { "@type": "WebSite", name: NAP.name, url: baseUrl },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: breadcrumbs.map((b, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: b.name,
      item: b.item,
    })),
  },
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    name: NAP.name,
    url: NAP.url,
    telephone: NAP.phoneE164,
    email: NAP.email,
    areaServed: NAP.areaServed,
  },
  offerCatalogLd,
];
---

<LayoutSEO
  title={title}
  description={description}
  baseUrl={baseUrl}
  canonical={canonical}
  ogType="website"
  ogImage={`${baseUrl}/og/tarifs.jpg`}
  ogImageAlt="Tarifs Horizon Conversion Animaux"
  breadcrumbs={breadcrumbs}
  jsonLd={[...jsonLd, faqJsonLd]}
>
  <style>
    .wrap { max-width: 1040px; margin: 0 auto; padding: 28px 16px 72px; }
    .breadcrumbs { font-size: 14px; color: #475569; margin: 4px 0 18px; }
    .breadcrumbs a { color: inherit; text-decoration: none; }

    header.hero {
      border: 1px solid #e2e8f0;
      border-radius: 18px;
      background: linear-gradient(180deg, #f8fafc, #fff);
      padding: 22px;
      display: grid;
      gap: 10px;
    }
    h1 { margin: 0; font-size: 34px; line-height: 1.1; letter-spacing: -0.02em; }
    .sub { margin: 0; color: #334155; max-width: 92ch; line-height: 1.6; }

    .grid { margin-top: 18px; display: grid; grid-template-columns: 1.2fr 0.8fr; gap: 18px; align-items: start; }
    @media (max-width: 920px) { .grid { grid-template-columns: 1fr; } }

    .card {
      border: 1px solid #e2e8f0;
      border-radius: 18px;
      padding: 18px;
      background: #fff;
      box-shadow: 0 6px 20px rgba(15,23,42,.06);
    }

    .plans {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 12px;
      margin-top: 12px;
    }
    @media (max-width: 920px) { .plans { grid-template-columns: 1fr; } }

    .plan {
      border: 1px solid #e2e8f0;
      border-radius: 18px;
      padding: 16px;
      background: #fff;
      display: grid;
      gap: 10px;
    }
    .planTop { display: flex; align-items: flex-start; justify-content: space-between; gap: 10px; }
    .badge {
      display: inline-flex;
      align-items: center;
      font-size: 12px;
      font-weight: 900;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid #0f172a;
      background: #0f172a;
      color: #fff;
      white-space: nowrap;
    }
    .plan h2 { margin: 0; font-size: 18px; }
    .bestFor { margin: 0; color: #64748b; font-size: 13px; line-height: 1.5; }

    .priceRow {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }
    .priceBox {
      border: 1px solid #e2e8f0;
      border-radius: 16px;
      padding: 12px;
      background: #f8fafc;
    }
    .priceBox strong { display: block; font-size: 12px; color: #475569; }
    .priceBox em { display: block; margin-top: 4px; font-style: normal; font-weight: 950; font-size: 16px; color: #0f172a; }

    .plan ul { margin: 0; padding-left: 18px; color: #334155; line-height: 1.55; }
    .note {
      border: 1px dashed #cbd5e1;
      border-radius: 16px;
      padding: 12px;
      background: #f8fafc;
      color: #334155;
      line-height: 1.6;
      font-size: 13px;
    }

    .ctaRow {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
      margin-top: 6px;
    }
    @media (max-width: 720px) { .ctaRow { grid-template-columns: 1fr; } }
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 12px 14px;
      border-radius: 14px;
      border: 1px solid #0f172a;
      background: #0f172a;
      color: #fff;
      cursor: pointer;
      font-weight: 900;
      text-decoration: none;
    }
    .btn.secondary { background: #fff; color: #0f172a; }

    .meta { color: #475569; font-size: 14px; line-height: 1.6; margin: 0; }
    .pill {
      display: inline-block;
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid #e2e8f0;
      background: #fff;
      color: #334155;
      margin: 0 6px 8px 0;
      text-decoration: none;
    }

    .faq { margin-top: 16px; }
    .faq details {
      border: 1px solid #e2e8f0;
      border-radius: 16px;
      padding: 12px 14px;
      background: #fff;
      margin-bottom: 10px;
    }
    .faq summary { cursor: pointer; font-weight: 900; }
    .faq p { margin: 10px 0 0; color: #334155; line-height: 1.6; }

    .list { margin: 10px 0 0; padding-left: 18px; color: #334155; line-height: 1.55; }
    .link { color:#0f172a; text-decoration:none; border-bottom:1px solid rgba(15,23,42,.18); }
    .link:hover { border-bottom-color: rgba(15,23,42,.45); }
  </style>

  <div class="wrap">
    <nav class="breadcrumbs" aria-label="Fil d’Ariane">
      <a href="/">Accueil</a> <span aria-hidden="true">›</span> <span>Tarifs</span>
    </nav>

    <header class="hero">
      <h1>Tarifs (clairs, orientés résultats)</h1>
      <p class="sub">
        Des packs pensés pour les <strong>pros des animaux</strong> (véto, éducateur canin, pension, toiletteur,
        ostéo, comportementaliste…) avec une logique simple : <strong>process + livrables + tracking</strong>.
        Zones : <strong>Sud Oise (60)</strong> • <strong>Val d’Oise (95)</strong>.
      </p>
    </header>

    <section class="grid">
      <div class="card">
        <h2 style="margin:0;">Packs & forfaits</h2>
        <p class="meta" style="margin-top:10px;">
          Les tarifs sont indiqués <strong>à partir de</strong> (selon concurrence, volume de pages et niveau de tracking).
          Le diagnostic permet de cadrer un plan précis.
        </p>

        <div class="plans" aria-label="Tarifs">
          {plans.map((p) => (
            <article class="plan" id={p.id}>
              <div class="planTop">
                <div>
                  <h2>{p.name}</h2>
                  <p class="bestFor">{p.bestFor}</p>
                </div>
                {p.highlight && <span class="badge">{p.highlight}</span>}
              </div>

              <div class="priceRow" aria-label="Prix">
                <div class="priceBox">
                  <strong>Mise en place</strong>
                  <em>À partir de {p.setupFrom}€</em>
                </div>
                <div class="priceBox">
                  <strong>Mensuel</strong>
                  <em>À partir de {p.monthlyFrom}€ / mois</em>
                </div>
              </div>

              <ul>
                {p.bullets.map((b) => <li>{b}</li>)}
              </ul>

              {p.notes?.length ? (
                <div class="note">
                  {p.notes.map((n) => <div>• {n}</div>)}
                </div>
              ) : null}

              <div class="ctaRow">
                <a class="btn" href={p.ctas[0].href}> {p.ctas[0].label} </a>
                <a class="btn secondary" href="tel:+33660921008">Appeler : 06 60 92 10 08</a>
              </div>
            </article>
          ))}
        </div>

        <div class="faq" id="faq">
          <h2 style="margin:0 0 10px;">FAQ Tarifs</h2>
          {faqs.map((f) => (
            <details>
              <summary>{f.q}</summary>
              <p>{f.a}</p>
            </details>
          ))}
        </div>
      </div>

      <aside class="card">
        <h2 style="margin:0;">Ce qui est inclus (toujours)</h2>
        <p class="meta" style="margin-top:10px;">
          Même sur un pack “léger”, on garde les fondamentaux : une exécution propre, des livrables, et du tracking.
        </p>

        <div style="margin-top:12px;">
          <span class="pill">Process clair</span>
          <span class="pill">Livrables prêts</span>
          <span class="pill">Tracking</span>
          <span class="pill">Qualif stricte</span>
          <span class="pill">Transparence</span>
        </div>

        <h2 style="margin-top:16px;">Options possibles</h2>
        <ul class="list">
          {options.map((o) => (
            <li>
              <strong>{o.name}</strong> — {o.text}
            </li>
          ))}
        </ul>

        <h2 style="margin-top:16px;">Ressources</h2>
        <div style="margin-top:10px;">
          <a class="pill" href="/prestations/">Prestations</a>
          <a class="pill" href="/preuves/">Preuves</a>
          <a class="pill" href="/methode/">Méthode</a>
          <a class="pill" href="/zones/">Zones</a>
          <a class="pill" href="/metiers/">Métiers</a>
        </div>

        <h2 style="margin-top:16px;">Contact</h2>
        <p class="meta" style="margin-top:10px;">
          <strong>{NAP.name}</strong><br />
          Téléphone : <a class="link" href={`tel:${NAP.phoneE164}`}>{NAP.phoneDisplay}</a><br />
          Email : <a class="link" href={`mailto:${NAP.email}`}>{NAP.email}</a>
        </p>

        <div style="margin-top:12px; display:grid; gap:10px;">
          <a class="btn" href="/contact/">Demander un diagnostic</a>
          <a class="btn secondary" href="tel:+33660921008">Appeler maintenant</a>
        </div>

        <p class="meta" style="margin-top:12px;">
          <strong>Note :</strong> on ne promet pas “la 1ère place” ; on s’engage sur l’exécution, l’itération et un suivi mesurable.
        </p>
      </aside>
    </section>
  </div>
</LayoutSEO>