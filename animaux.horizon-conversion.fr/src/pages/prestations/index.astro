---
// src/pages/prestations/index.astro
import LayoutSEO from "../../layouts/LayoutSEO.astro";

import { PRESTATIONS } from "../../data/prestations.ts";
import { JOBS } from "../../data/jobs.ts";
import { ZONES, slugifyCity } from "../../data/zones.ts";

const baseUrl = "https://animaux.horizon-conversion.fr";
const canonical = `${baseUrl}${Astro.url.pathname}`;

const title = "Prestations | Horizon Conversion Animaux";
const description =
  "Prestations webmarketing local pour les pros des animaux : SEO local & Google Maps, Google Ads, Meta Ads, landing pages, conversion & tracking (Sud Oise 60, Val d’Oise 95).";

const breadcrumbs = [
  { name: "Accueil", item: `${baseUrl}/` },
  { name: "Prestations", item: canonical },
];

// ✅ Ordre contrôlé (évite Object.entries aléatoire)
const offerOrder = ["seo-local", "google-ads", "meta-ads", "landing-pages", "tracking"] as const;

const offers = offerOrder
  .map((slug) => {
    const p: any = (PRESTATIONS as any)[slug];
    if (!p) return null;

    return {
      slug,
      title: p.name,
      badge: p.badge,
      intro: p.headline,
      bullets: p.bullets ?? [],
      // Optionnel: si tes données PRESTATIONS n'ont pas "forWho", on garde des valeurs par défaut
      forWho: p.forWho ?? [],
    };
  })
  .filter(Boolean) as Array<{
    slug: string;
    title: string;
    badge: string;
    intro: string;
    bullets: string[];
    forWho: string[];
  }>;

// ✅ Pastilles "Pour qui" -> liens métiers quand possible
const metierLinkMap: Record<string, string> = {
  "Éducateurs canins": "/metiers/educateur-canin/",
  "Éducateur canin": "/metiers/educateur-canin/",
  "Comportementalistes": "/metiers/comportementaliste/",
  "Comportementaliste": "/metiers/comportementaliste/",
  "Toiletteurs": "/metiers/toiletteur/",
  "Toiletteur": "/metiers/toiletteur/",
  "Pensions": "/metiers/pension-canine/",
  "Pension canine": "/metiers/pension-canine/",
  "Pet-sitter": "/metiers/pension-canine/",
  "Vétos": "/metiers/veterinaire/",
  "Vétérinaire": "/metiers/veterinaire/",
  "Ostéos animaliers": "/metiers/osteo-animalier/",
  "Ostéopathe animalier": "/metiers/osteo-animalier/",
};

// ✅ Villes cliquables (pages /zones/[ville]/ existent)
const allTowns = Array.from(
  new Set([
    ...((ZONES as any)["sud-oise-60"]?.towns ?? []),
    ...((ZONES as any)["val-doise-95"]?.towns ?? []),
  ])
).slice(0, 18);

// ✅ mini liste métiers (liens réels)
const jobs = Object.entries(JOBS).slice(0, 8).map(([slug, v]: any) => ({
  slug,
  name: v.name,
}));

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    name: "Prestations | Horizon Conversion Animaux",
    url: canonical,
    description,
    isPartOf: { "@type": "WebSite", name: "Horizon Conversion Animaux", url: baseUrl },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: breadcrumbs.map((b, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: b.name,
      item: b.item,
    })),
  },
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    itemListElement: offers.map((o, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: o.title,
      url: `${baseUrl}/prestations/${o.slug}/`,
    })),
  },
];
---

<LayoutSEO
  title={title}
  description={description}
  baseUrl={baseUrl}
  canonical={canonical}
  ogType="website"
  ogImage={`${baseUrl}/og/prestations.jpg`}
  ogImageAlt="Prestations – Horizon Conversion Animaux"
  breadcrumbs={breadcrumbs}
  jsonLd={jsonLd}
>
  <style>
    .wrap { max-width: 1040px; margin: 0 auto; padding: 28px 16px 72px; }

    .breadcrumbs { font-size: 14px; color: #475569; margin: 4px 0 18px; }
    .breadcrumbs a { color: inherit; text-decoration: none; }

    header.hero {
      border: 1px solid #e2e8f0;
      border-radius: 18px;
      background: linear-gradient(180deg, #f8fafc, #fff);
      padding: 22px;
      display: grid;
      gap: 10px;
    }
    h1 { margin: 0; font-size: 34px; line-height: 1.1; letter-spacing: -0.02em; }
    .sub { margin: 0; color: #334155; max-width: 85ch; line-height: 1.6; }

    .grid {
      margin-top: 18px;
      display: grid;
      grid-template-columns: 1.2fr 0.8fr;
      gap: 18px;
      align-items: start;
    }
    @media (max-width: 920px) { .grid { grid-template-columns: 1fr; } }

    .card {
      border: 1px solid #e2e8f0;
      border-radius: 18px;
      padding: 18px;
      background: #fff;
      box-shadow: 0 6px 20px rgba(15, 23, 42, 0.06);
    }

    a.cardLink { text-decoration: none; color: inherit; display: block; }

    .offerCard {
      border: 1px solid #e2e8f0;
      border-radius: 18px;
      padding: 18px;
      background: #fff;
      display: grid;
      gap: 10px;
      margin-bottom: 12px;
    }

    .top { display: flex; align-items: center; justify-content: space-between; gap: 10px; flex-wrap: wrap; }
    .top h2 { margin: 0; font-size: 18px; }

    .badge {
      display: inline-block;
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid #e2e8f0;
      background: #f8fafc;
      color: #334155;
      font-weight: 900;
    }

    .intro { margin: 0; color: #334155; line-height: 1.6; }

    .bullets { margin: 0; padding-left: 18px; color: #334155; line-height: 1.55; }

    .pills { display: flex; flex-wrap: wrap; gap: 8px; margin-top: 4px; }
    .pill {
      display: inline-block;
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid #e2e8f0;
      background: #fff;
      color: #334155;
    }
    a.pillLink {
      display: inline-block;
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid #e2e8f0;
      background: #fff;
      color: #334155;
      text-decoration: none;
    }
    a.pillLink:hover { background: #f8fafc; }

    .ctaRow {
      margin-top: 18px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }
    @media (max-width: 720px) { .ctaRow { grid-template-columns: 1fr; } }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 12px 14px;
      border-radius: 14px;
      border: 1px solid #0f172a;
      background: #0f172a;
      color: #fff;
      cursor: pointer;
      font-weight: 900;
      text-decoration: none;
    }
    .btn.secondary { background: #fff; color: #0f172a; }

    .meta { color: #475569; font-size: 14px; line-height: 1.6; margin-top: 10px; }

    .note {
      margin-top: 12px;
      border: 1px dashed #cbd5e1;
      border-radius: 16px;
      padding: 14px;
      background: #f8fafc;
      color: #334155;
      line-height: 1.6;
      font-size: 14px;
    }

    .asideBlock + .asideBlock { margin-top: 12px; }
    .asideTitle { margin: 0 0 8px; font-size: 14px; }
    .asideText { margin: 0; color: #334155; line-height: 1.6; font-size: 14px; }
  </style>

  <div class="wrap">
    <nav class="breadcrumbs" aria-label="Fil d’Ariane">
      <a href="/">Accueil</a> <span aria-hidden="true">›</span> <span>Prestations</span>
    </nav>

    <header class="hero">
      <h1>Prestations</h1>
      <p class="sub">
        Des prestations orientées résultats pour les professionnels des animaux :
        <strong> SEO local & Google Maps</strong>, <strong>Google Ads</strong>,
        <strong> Meta Ads</strong>, <strong>landing pages</strong>,
        <strong> conversion</strong> et <strong>tracking</strong>.
        Priorité : <strong>Sud Oise (60)</strong> et <strong>Val d’Oise (95)</strong>.
      </p>
    </header>

    <section class="grid" aria-label="Prestations + liens utiles">
      <!-- ✅ LISTE PRESTATIONS (liens réels) -->
      <div class="card">
        <h2 style="margin:0;">Toutes les prestations (pages réelles)</h2>
        <p class="meta" style="margin-top:8px;">
          Chaque carte renvoie vers une page dédiée (SEO + conversion + schémas).
        </p>

        <div style="margin-top:12px;">
          {offers.map((o) => (
            <a class="cardLink" href={`/prestations/${o.slug}/`}>
              <article class="offerCard">
                <div class="top">
                  <h2>{o.title}</h2>
                  <span class="badge">{o.badge}</span>
                </div>
                <p class="intro">{o.intro}</p>

                {o.bullets?.length > 0 && (
                  <ul class="bullets">
                    {o.bullets.map((b) => <li>{b}</li>)}
                  </ul>
                )}

                {(o.forWho?.length > 0) && (
                  <div class="pills" aria-label="Pour qui (liens quand possible)">
                    {o.forWho.map((x) => (
                      metierLinkMap[x]
                        ? <a class="pillLink" href={metierLinkMap[x]}>{x}</a>
                        : <span class="pill">{x}</span>
                    ))}
                  </div>
                )}
              </article>
            </a>
          ))}
        </div>

        <div class="ctaRow">
          <a class="btn" href="/contact/">Demander un diagnostic</a>
          <a class="btn secondary" href="tel:+33660921008">Appeler : 06 60 92 10 08</a>
        </div>

        <p class="meta">
          Besoin d’une prestation “sur-mesure” (lancement, refonte, croissance) ?{" "}
          <a
            href="mailto:contact@horizon-conversion.fr"
            style="color:#0f172a;text-decoration:none;border-bottom:1px solid rgba(15,23,42,.2);"
          >
            contact@horizon-conversion.fr
          </a>
        </p>
      </div>

      <!-- ✅ ASIDE : maillage interne vers vraies pages -->
      <aside class="card">
        <div class="asideBlock">
          <h3 class="asideTitle">Offres (packs)</h3>
          <p class="asideText">Tarifs & packs (ancres réelles) :</p>
          <div class="pills" aria-label="Packs">
            <a class="pillLink" href="/tarifs/#local-essentiel">Local Essentiel</a>
            <a class="pillLink" href="/tarifs/#local-performance">Local Performance</a>
            <a class="pillLink" href="/tarifs/#ads-booster">Ads Booster</a>
            <a class="pillLink" href="/tarifs/#pack-complet">Pack Complet</a>
          </div>
        </div>

        <div class="asideBlock">
          <h3 class="asideTitle">Villes couvertes (cliquables)</h3>
          <p class="asideText">Pages ville existantes :</p>
          <div class="pills" aria-label="Villes">
            {allTowns.map((t) => (
              <a class="pillLink" href={`/zones/${slugifyCity(t)}/`}>{t}</a>
            ))}
          </div>
          <a
            href="/zones/"
            style="display:inline-block;margin-top:10px;font-weight:900;text-decoration:none;border-bottom:1px solid rgba(15,23,42,.18);padding-bottom:2px;"
          >
            Voir toutes les zones →
          </a>
        </div>

        <div class="asideBlock">
          <h3 class="asideTitle">Métiers (cliquables)</h3>
          <p class="asideText">Pages métier existantes :</p>
          <div class="pills" aria-label="Métiers">
            {jobs.map((j) => (
              <a class="pillLink" href={`/metiers/${j.slug}/`}>{j.name}</a>
            ))}
          </div>
          <a
            href="/metiers/"
            style="display:inline-block;margin-top:10px;font-weight:900;text-decoration:none;border-bottom:1px solid rgba(15,23,42,.18);padding-bottom:2px;"
          >
            Voir tous les métiers →
          </a>
        </div>

        <div class="note">
          <strong>SEO :</strong> ici, aucun texte-type “service + ville” non relié.
          On ne montre que des liens vers des pages réelles (prestations, villes, métiers, tarifs).
        </div>
      </aside>
    </section>
  </div>
</LayoutSEO>