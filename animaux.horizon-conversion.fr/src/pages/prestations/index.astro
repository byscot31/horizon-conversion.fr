---
// src/pages/prestations/index.astro
import LayoutSEO from "../../layouts/LayoutSEO.astro";

const baseUrl = "https://animaux.horizon-conversion.fr";
const canonical = `${baseUrl}${Astro.url.pathname}`;

const title = "Prestations | Horizon Conversion Animaux";
const description =
  "Prestations webmarketing local pour les pros des animaux : SEO local & Google Maps, Google Ads, Meta Ads, landing pages, conversion & tracking (Sud Oise 60, Val d’Oise 95).";

const breadcrumbs = [
  { name: "Accueil", item: `${baseUrl}/` },
  { name: "Prestations", item: canonical },
];

const offers = [
  {
    slug: "seo-local",
    title: "SEO local & Google Maps",
    badge: "Visibilité durable",
    intro:
      "Optimisation Google Business Profile + pages locales “1 intention = 1 page” pour générer appels, itinéraires et demandes qualifiées.",
    bullets: [
      "Audit SEO local + plan d’actions priorisé",
      "Google Business Profile : catégories, services, zones, posts",
      "Pages locales + Titles/Metas/H1 + FAQ + JSON-LD",
      "NAP & citations locales (cohérence)",
      "Suivi des conversions (appels, formulaires)",
    ],
    forWho: ["Toiletteurs", "Éducateurs canins", "Pensions", "Ostéos animaliers", "Vétos"],
  },
  {
    slug: "google-ads",
    title: "Google Ads (Search)",
    badge: "Leads rapides",
    intro:
      "Campagnes Search orientées RDV : mots-clés intention forte, exclusions, extensions et landing pages dédiées.",
    bullets: [
      "Structure par service / ville / intention",
      "Mots-clés + négatifs (anti-leads parasites)",
      "Annonces & extensions (appel, lieu, sitelinks)",
      "Landing pages dédiées (conversion)",
      "Pilotage au coût par lead",
    ],
    forWho: ["Services urgents", "Créneaux à remplir", "Offres saisonnières"],
  },
  {
    slug: "meta-ads",
    title: "Meta Ads (Facebook/Instagram)",
    badge: "Demande qualifiée",
    intro:
      "Ciblages locaux + messages adaptés aux métiers animaliers. Objectif : demandes qualifiées (pas du volume inutile).",
    bullets: [
      "Créatifs (UGC-like) + angles de confiance",
      "Ciblage local (zones, centres d’intérêt)",
      "Formulaire qualifiant (ville, besoin, urgence)",
      "Retargeting (visiteurs / engagés)",
      "Optimisation sur événements (tracking)",
    ],
    forWho: ["Éducateurs", "Toiletteurs", "Pensions", "Services à forte concurrence"],
  },
  {
    slug: "landing-pages",
    title: "Landing pages & conversion",
    badge: "Plus de RDV",
    intro:
      "Pages d’atterrissage conçues pour convertir : preuves alternatives, réassurance, CTA, FAQ, et structure SEO.",
    bullets: [
      "Copywriting orienté bénéfices",
      "Sections : process, preuve, offre, FAQ, CTA",
      "Design léger & rapide (Core Web Vitals)",
      "A/B tests (messages, CTA, formulaires)",
      "Optimisation mobile-first",
    ],
    forWho: ["Ads", "SEO local", "Offres packagées", "Saisonniers"],
  },
  {
    slug: "tracking",
    title: "Tracking & pilotage",
    badge: "Preuve par la donnée",
    intro:
      "On mesure ce qui compte : appels, formulaires, RDV, sources (SEO/Maps/Ads) pour décider vite et optimiser.",
    bullets: [
      "Plan de tracking (UTM, événements)",
      "GA4 / Matomo + Pixel Meta (si besoin)",
      "Suivi clic-to-call & formulaires",
      "Dashboard (leads, coût, taux)",
      "Recommandations mensuelles basées data",
    ],
    forWho: ["Tous métiers", "Ads", "SEO", "Croissance"],
  },
];

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    name: "Prestations | Horizon Conversion Animaux",
    url: canonical,
    description,
    isPartOf: { "@type": "WebSite", name: "Horizon Conversion Animaux", url: baseUrl },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: breadcrumbs.map((b, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: b.name,
      item: b.item,
    })),
  },
  // ItemList pour clarifier la liste de prestations
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    itemListElement: offers.map((o, i) => ({
      "@type": "ListItem",
      position: i + 1,
      name: o.title,
      url: `${baseUrl}/prestations/${o.slug}/`,
    })),
  },
];
---

<LayoutSEO
  title={title}
  description={description}
  baseUrl={baseUrl}
  canonical={canonical}
  ogType="website"
  ogImage={`${baseUrl}/og/prestations.jpg`}
  ogImageAlt="Prestations – Horizon Conversion Animaux"
  breadcrumbs={breadcrumbs}
  jsonLd={jsonLd}
>

<style>
  :global(body) {
    margin: 0;
    font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell,
      Noto Sans, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    color: #0f172a;
    background: #ffffff;
  }
  .wrap {
    max-width: 1040px;
    margin: 0 auto;
    padding: 28px 16px 72px;
  }
  .breadcrumbs {
    font-size: 14px;
    color: #475569;
    margin: 4px 0 18px;
  }
  .breadcrumbs a {
    color: inherit;
    text-decoration: none;
  }
  header.hero {
    border: 1px solid #e2e8f0;
    border-radius: 18px;
    background: linear-gradient(180deg, #f8fafc, #fff);
    padding: 22px;
    display: grid;
    gap: 10px;
  }
  h1 {
    margin: 0;
    font-size: 34px;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }
  .sub {
    margin: 0;
    color: #334155;
    max-width: 85ch;
    line-height: 1.6;
  }

  .grid {
    margin-top: 18px;
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
  }

  a.cardLink {
    text-decoration: none;
    color: inherit;
  }

  .card {
    border: 1px solid #e2e8f0;
    border-radius: 18px;
    padding: 18px;
    background: #fff;
    box-shadow: 0 6px 20px rgba(15, 23, 42, 0.06);
    display: grid;
    gap: 10px;
  }

  .top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 10px;
    flex-wrap: wrap;
  }
  .top h2 {
    margin: 0;
    font-size: 18px;
  }
  .badge {
    display: inline-block;
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid #e2e8f0;
    background: #f8fafc;
    color: #334155;
    font-weight: 800;
  }
  .intro {
    margin: 0;
    color: #334155;
    line-height: 1.6;
  }
  .bullets {
    margin: 0;
    padding-left: 18px;
    color: #334155;
    line-height: 1.55;
  }
  .pills {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 4px;
  }
  .pill {
    display: inline-block;
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid #e2e8f0;
    background: #fff;
    color: #334155;
  }

  .ctaRow {
    margin-top: 18px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }
  @media (max-width: 720px) {
    .ctaRow {
      grid-template-columns: 1fr;
    }
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 14px;
    border-radius: 14px;
    border: 1px solid #0f172a;
    background: #0f172a;
    color: #fff;
    cursor: pointer;
    font-weight: 900;
    text-decoration: none;
  }
  .btn.secondary {
    background: #fff;
    color: #0f172a;
  }
  .meta {
    color: #475569;
    font-size: 14px;
    line-height: 1.6;
    margin-top: 10px;
  }
</style>

<div class="wrap">
  <nav class="breadcrumbs" aria-label="Fil d’Ariane">
    <a href="/">Accueil</a> <span aria-hidden="true">›</span> <span>Prestations</span>
  </nav>

  <header class="hero">
    <h1>Prestations</h1>
    <p class="sub">
      Des prestations orientées résultats pour les professionnels des animaux :
      <strong> SEO local & Google Maps</strong>, <strong>Google Ads</strong>,
      <strong> Meta Ads</strong>, <strong>landing pages</strong>,
      <strong> conversion</strong> et <strong>tracking</strong>.
      Priorité : <strong>Sud Oise (60)</strong> et <strong>Val d’Oise (95)</strong>.
    </p>
  </header>

  <section class="grid" aria-label="Liste des prestations">
    {offers.map((o) => (
      <a class="cardLink" href={`/prestations/${o.slug}/`}>
        <article class="card">
          <div class="top">
            <h2>{o.title}</h2>
            <span class="badge">{o.badge}</span>
          </div>
          <p class="intro">{o.intro}</p>
          <ul class="bullets">
            {o.bullets.map((b) => (
              <li>{b}</li>
            ))}
          </ul>
          <div class="pills" aria-label="Pour qui">
            {o.forWho.map((x) => (
              <span class="pill">{x}</span>
            ))}
          </div>
        </article>
      </a>
    ))}
  </section>

  <div class="ctaRow">
    <a class="btn" href="/contact/">Demander un diagnostic</a>
    <a class="btn secondary" href="tel:+33660921008">Appeler : 06 60 92 10 08</a>
  </div>

  <p class="meta">
    Besoin d’une prestation “sur-mesure” (ex : lancement, refonte, croissance) ?
    Écrivez-nous :{" "}
    <a
      href="mailto:contact@horizon-conversion.fr"
      style="color:#0f172a;text-decoration:none;border-bottom:1px solid rgba(15,23,42,.2);"
    >
      contact@horizon-conversion.fr
    </a>
  </p>
</div>