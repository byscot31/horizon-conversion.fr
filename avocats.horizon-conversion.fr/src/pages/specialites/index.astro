---
// src/pages/specialites/index.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Hero from "../../components/Hero.astro";
import Contact from "../../components/Contact.astro";
import Reassurance from "../../components/Reassurance.astro";
import Promo from "../../components/Promo.astro";
import Footer from "../../components/Footer.astro";

import ui from "../../data/ui.json";
import specialites from "../../data/specialites.json";
import villes from "../../data/villes.json";

type Specialite = {
  slug: string;
  label: string;
  hubTitle?: string;
  hubDesc?: string;
  angles?: string[];
};

type Ville = {
  slug: string;
  name: string;
  dept?: string;
  specialites?: string[];
};

const canonical = "https://avocats.horizon-conversion.fr/specialites";
const url = (p: string) => (p.length > 1 ? p.replace(/\/+$/, "") : p);

const sps = (specialites as Specialite[]) ?? [];
const vls = (villes as Ville[]) ?? [];

function villesOkFor(spSlug: string) {
  return vls.filter((v) => !v.specialites?.length || v.specialites.includes(spSlug));
}

const hero = {
  ...ui.hero.defaultInner,
  eyebrow: "Horizon Conversion — spécialités",
  title: "Pages par spécialité (B2B cabinet)",
  subtitle:
    "Exemples de pages “domaine” : structure SEO local + clarté du périmètre + parcours de prise de contact. Sobriété, sans surproduction.",
  primaryCta: { label: "Demander un audit", href: "/contact" },
  secondaryCta: { label: "Voir la méthode", href: "/methode" },
  note: "Approche conforme : pas de promesse de résultat."
};

const reassuranceKey =
  (ui as any)?.reassurance?.variants?.specialites ? "specialites" : "service";
---

<BaseLayout
  title="Spécialités | Horizon Conversion — cabinets d’avocats"
  description="Spécialités travaillées : pages par domaine structurées pour la visibilité locale et la prise de contact."
  canonical={canonical}
>
  <Header />

  <Hero {...hero} />

  <section id="content">
    <div class="content-wrap overflow-visible py-0">

      <div class="section bg-transparent py-4">
        <div class="container">

          <div class="row align-items-end justify-content-between mb-4">
            <div class="col-lg-7">
              <div class="before-title text-uppercase ls-3 text-smaller op-06 mb-2">Spécialités</div>
              <h2 class="h3 fw-bold mb-2">Choisir une page “domaine”</h2>
              <p class="lead mb-0 op-07">
                Chaque page spécialité sert à cadrer une stratégie locale : contenus utiles, maillage, et prise de contact.
              </p>
            </div>
          </div>

          <div class="row g-3">
            {sps.map((sp) => {
              const cities = villesOkFor(sp.slug);
              const preview = cities.slice(0, 3);

              return (
                <div class="col-md-6 col-lg-4">
                  <a href={url(`/specialites/${sp.slug}`)} class="hc-card-link">
                    <div class="grid-inner shadow-sm h-shadow bg-white p-4 rounded-5 shadow-ts h-100">
                      <div class="d-flex justify-content-between align-items-start">
                        <div>
                          <div class="h5 fw-bold mb-1">{sp.label}</div>

                          <div class="op-07">
                            {sp.hubDesc ?? "Stratégie de visibilité locale structurée autour du domaine, pensée pour un cabinet."}
                          </div>

                          <div class="mt-3 op-07 text-smaller">
                            {preview.length ? (
                              <span>
                                Pages locales :{" "}
                                {preview.map((c, i) => (
                                  <span>
                                    {c.name}{c.dept ? ` (${c.dept})` : ""}
                                    {i < preview.length - 1 ? " • " : ""}
                                  </span>
                                ))}
                                {cities.length > preview.length ? <span> • +{cities.length - preview.length}</span> : null}
                              </span>
                            ) : (
                              <span>Pages locales selon matrice de couverture.</span>
                            )}
                          </div>
                        </div>

                        <span class="material-symbols-outlined color">arrow_right_alt</span>
                      </div>
                    </div>
                  </a>
                </div>
              );
            })}
          </div>

          <style>
            .hc-card-link { text-decoration: none; display: block; }
            .hc-card-link:hover .grid-inner { transform: translateY(-2px); transition: 180ms ease; }
          </style>

        </div>
      </div>

      <Reassurance variant={reassuranceKey} />

      <Contact />

      <Promo />

    </div>
  </section>

  <Footer />
</BaseLayout>