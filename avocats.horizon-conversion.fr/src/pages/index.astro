---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Contact from "../components/Contact.astro";
import Faqs from "../components/Faqs.astro";
import Testimonails from "../components/Testimonails.astro";
import Reassurance from "../components/Reassurance.astro";
import Blog from "../components/Blog.astro";
import Promo from "../components/Promo.astro";
import Footer from "../components/Footer.astro";

import ui from "../data/ui.json";

const canonical = "https://avocats.horizon-conversion.fr/";

const homeFaq = ui?.faq?.home;
---

<BaseLayout
  title="Acquisition locale pour cabinets dâ€™avocats | Sud Oise & Nord 95"
  canonical={canonical}
>
  <Header />

  <Hero {...ui.hero.home} />

  <section id="content" class="homepage">
    <div class="content-wrap overflow-visible py-0">

      <Services />

      <Reassurance />

      <Testimonails variant="home" />

      {homeFaq && (
        <Faqs
          title={homeFaq.title}
          intro={homeFaq.intro}
          items={homeFaq.items}
          canonical={canonical}
        />
      )}

      <Contact />

      <Blog variant="home" limit={4} />

      <Promo />

    </div>
  </section>

  <Footer />
</BaseLayout>