// src/pages/avocat-chantilly.astro
const SITE_NAME = "Horizon Conversion · Avocats";
const CITY = "Chantilly";
const CANONICAL = "https://avocats.horizon-conversion.fr/avocat-chantilly/";
const PAGE_TITLE = `Cabinet d’avocats à ${CITY} : visibilité locale & prise de rendez-vous | Horizon Conversion`;
const PAGE_DESC =
  `SEO local + refonte orientée conversion pour cabinets d’avocats à ${CITY} (Sud Oise). Pages “ville + spécialité”, site rassurant et tracking des demandes (appels + formulaires). Approche sobre, conforme à la déontologie.`;

const BREADCRUMB = [
  { name: "Accueil", url: "https://avocats.horizon-conversion.fr/" },
  { name: `Avocat ${CITY}`, url: CANONICAL },
];

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "@id": CANONICAL,
      url: CANONICAL,
      name: PAGE_TITLE,
      description: PAGE_DESC,
      isPartOf: { "@id": "https://avocats.horizon-conversion.fr/#website" },
      breadcrumb: { "@id": `${CANONICAL}#breadcrumb` },
    },
    {
      "@type": "BreadcrumbList",
      "@id": `${CANONICAL}#breadcrumb`,
      itemListElement: BREADCRUMB.map((b, i) => ({
        "@type": "ListItem",
        position: i + 1,
        name: b.name,
        item: b.url,
      })),
    },
    {
      "@type": "FAQPage",
      "@id": `${CANONICAL}#faq`,
      mainEntity: [
        {
          "@type": "Question",
          name: `Combien de temps pour voir des résultats SEO local à ${CITY} ?`,
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "Souvent 4 à 8 semaines pour les premiers signaux (indexation, impressions), puis 3 à 6 mois pour une traction durable selon la concurrence et la qualité du socle (pages locales, maillage, performance, Google Business Profile).",
          },
        },
        {
          "@type": "Question",
          name: "Pouvez-vous garantir un nombre de demandes ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "Non. Nous garantissons une méthode (structure SEO, site orienté conversion, tracking et itérations). Le résultat dépend de la concurrence, de la zone et de la capacité de traitement du cabinet.",
          },
        },
        {
          "@type": "Question",
          name: "Quelles spécialités prioriser sur une stratégie locale ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "En général : droit de la famille, droit du travail et droit immobilier. On adapte selon le positionnement, la demande locale et la capacité du cabinet.",
          },
        },
        {
          "@type": "Question",
          name: "Quand activer Google Ads ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "Uniquement si le cabinet est prêt (landing dédiée, tracking fiable, réponse rapide) et si le coût par demande est cohérent avec la valeur moyenne des dossiers.",
          },
        },
      ],
    },
  ],
};
