// src/pages/droit-de-la-famille.astro
const SITE_NAME = "Horizon Conversion · Avocats";
const PAGE_TITLE = "Droit de la famille : SEO local & site orienté rendez-vous | Sud Oise / Nord 95";
const PAGE_DESC =
  "Refonte orientée conversion + SEO local pour cabinets d’avocats en droit de la famille (divorce, garde, pension). Approche sobre, conforme à la déontologie, centrée sur la prise de contact (appel + formulaire).";

const CANONICAL = "https://avocats.horizon-conversion.fr/droit-de-la-famille/";
const BREADCRUMB = [
  { name: "Accueil", url: "https://avocats.horizon-conversion.fr/" },
  { name: "Droit de la famille", url: CANONICAL },
];

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "@id": CANONICAL,
      url: CANONICAL,
      name: PAGE_TITLE,
      description: PAGE_DESC,
      isPartOf: { "@id": "https://avocats.horizon-conversion.fr/#website" },
      breadcrumb: { "@id": `${CANONICAL}#breadcrumb` },
    },
    {
      "@type": "BreadcrumbList",
      "@id": `${CANONICAL}#breadcrumb`,
      itemListElement: BREADCRUMB.map((b, i) => ({
        "@type": "ListItem",
        position: i + 1,
        name: b.name,
        item: b.url,
      })),
    },
    {
      "@type": "FAQPage",
      "@id": `${CANONICAL}#faq`,
      mainEntity: [
        {
          "@type": "Question",
          name: "Pouvez-vous garantir un nombre de demandes ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "Non. Nous garantissons une méthode (structure SEO local, pages claires, tracking des appels et formulaires, itérations). Le résultat dépend notamment de la concurrence, de la zone et de la capacité de traitement du cabinet.",
          },
        },
        {
          "@type": "Question",
          name: "Quelles pages fonctionnent le mieux en droit de la famille ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "En général : pages “divorce”, “garde / pension”, “séparation”, et surtout les pages locales (ville + spécialité) avec une structure sobre, rassurante et orientée prise de rendez-vous.",
          },
        },
        {
          "@type": "Question",
          name: "Quel délai pour voir des effets en SEO local ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "Souvent 4 à 8 semaines pour les premiers signaux (indexation, impressions), puis 3 à 6 mois pour une traction durable selon la concurrence et la qualité du socle (site, contenu, maillage, Google Business Profile).",
          },
        },
        {
          "@type": "Question",
          name: "Les Ads sont-elles nécessaires ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "Pas forcément. Elles ne sont activées que si le cabinet est prêt (tracking fiable, landing dédiée, réponse rapide, capacité de qualification) et si le coût par demande reste cohérent avec la valeur moyenne des dossiers.",
          },
        },
      ],
    },
  ],
};
