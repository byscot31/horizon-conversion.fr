// src/pages/droit-du-travail.astro
const SITE_NAME = "Horizon Conversion · Avocats";
const PAGE_TITLE = "Droit du travail : SEO local & site orienté rendez-vous | Sud Oise / Nord 95";
const PAGE_DESC =
  "Refonte orientée conversion + SEO local pour cabinets d’avocats en droit du travail (licenciement, rupture conventionnelle, prud’hommes). Approche sobre, conforme à la déontologie, centrée sur la prise de contact.";

const CANONICAL = "https://avocats.horizon-conversion.fr/droit-du-travail/";
const BREADCRUMB = [
  { name: "Accueil", url: "https://avocats.horizon-conversion.fr/" },
  { name: "Droit du travail", url: CANONICAL },
];

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "@id": CANONICAL,
      url: CANONICAL,
      name: PAGE_TITLE,
      description: PAGE_DESC,
      isPartOf: { "@id": "https://avocats.horizon-conversion.fr/#website" },
      breadcrumb: { "@id": `${CANONICAL}#breadcrumb` },
    },
    {
      "@type": "BreadcrumbList",
      "@id": `${CANONICAL}#breadcrumb`,
      itemListElement: BREADCRUMB.map((b, i) => ({
        "@type": "ListItem",
        position: i + 1,
        name: b.name,
        item: b.url,
      })),
    },
    {
      "@type": "FAQPage",
      "@id": `${CANONICAL}#faq`,
      mainEntity: [
        {
          "@type": "Question",
          name: "Pourquoi le droit du travail est-il adapté au SEO local ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "Les recherches sont très intentionnelles (licenciement, RC, prud’hommes) et souvent géolocalisées. Une structure “spécialité + ville” claire capte cette demande et améliore la prise de contact.",
          },
        },
        {
          "@type": "Question",
          name: "Comment éviter les demandes non qualifiées ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "En clarifiant le périmètre (salarié / employeur), la zone, et les modalités (premier échange), et en ajoutant des questions simples au formulaire (type de situation, ville, délai).",
          },
        },
        {
          "@type": "Question",
          name: "Google Ads : quand c’est pertinent ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "Quand le cabinet répond vite, que le tracking est en place, et qu’une landing page dédiée existe. Le pilotage se fait sur la qualité (appels utiles, dossiers plausibles), pas sur le volume brut.",
          },
        },
        {
          "@type": "Question",
          name: "Pouvez-vous garantir un résultat ?",
          acceptedAnswer: {
            "@type": "Answer",
            text:
              "Non. Nous garantissons une méthode (structure, conversion, mesure) et un pilotage régulier. Le résultat dépend de facteurs externes (concurrence, zone) et internes (capacité de traitement, réactivité).",
          },
        },
      ],
    },
  ],
};
