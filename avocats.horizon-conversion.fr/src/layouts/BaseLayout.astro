---
// src/layouts/BaseLayout.astro
const {
  title = "Acquisition locale pour cabinets d’avocats | Horizon Conversion",
  description = "SEO local + refonte orientée conversion pour générer des demandes qualifiées (appel + formulaire) en Sud Oise & Nord 95, dans le respect de la déontologie.",
  canonical = "https://avocats.horizon-conversion.fr/"
} = Astro.props;
---
<!DOCTYPE html>
<html dir="ltr" lang="fr-FR">
<head>

	<meta http-equiv="content-type" content="text/html; charset=utf-8">
	<meta http-equiv="x-ua-compatible" content="IE=edge">
	<meta name="author" content="Horizon Conversion">
	<meta name="description" content={description}>

	<!-- Font Imports -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700&family=Merriweather:wght@400;700&family=Material+Symbols+Outlined&display=swap" rel="stylesheet">

	<!-- Core Style -->
	<link rel="stylesheet" href="/_assets_/style.css">

	<!-- Font Icons -->
	<link rel="stylesheet" href="/_assets_/css/font-icons.css">

	<!-- Niche Demos -->
	<link rel="stylesheet" href="/_assets_/law-firm.css">

	<!-- Custom CSS -->
	<link rel="stylesheet" href="/_assets_/css/custom.css">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Document Title
	============================================= -->
	<title>{title}</title>

	<link rel="canonical" href={canonical} />

  <!-- OpenGraph minimal -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonical} />

  <!-- JSON-LD (Organization + Service) -->
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      name: "Horizon Conversion",
      url: "https://avocats.horizon-conversion.fr",
      brand: { "@type": "Brand", name: "Horizon Conversion" },
      areaServed: ["Sud Oise", "Nord 95"],
      knowsAbout: ["SEO local", "Refonte de site", "Conversion", "Tracking"]
    })}
  </script>

	<style>
		.device-touch .section-contact {
			background-attachment: scroll !important;
		}
	</style>

</head>

<body class="stretched">

	<!-- Document Wrapper
	============================================= -->
	<div id="wrapper">

	  <slot />

	</div><!-- #wrapper end -->

	<!-- Go To Top
	============================================= -->
	<div id="gotoTop" class="uil uil-angle-double-up rounded-circle"></div>

	<!-- JavaScripts
	============================================= -->
	<script is:inline src="/_assets_/js/plugins.min.js"></script>
	<script is:inline src="/_assets_/js/functions.bundle.js"></script>

</body>
</html>