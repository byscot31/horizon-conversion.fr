---
type Cta = { label: string; href: string; isScroll?: boolean };

interface Props {
  backgroundImage?: string;
  eyebrow?: string;
  title?: string;        // texte simple
  titleHtml?: string;    // si tu veux g√©rer <br> etc.
  subtitle?: string;
  primaryCta?: Cta;
  secondaryCta?: Cta;
  note?: string;
}

const {
  backgroundImage = "/_assets_/images/hero.jpg",
  eyebrow = "",
  title,
  titleHtml,
  subtitle = "",
  primaryCta,
  secondaryCta,
  note = ""
} = Astro.props as Props;
---

<section id="slider" class="slider-element dark min-vh-md-100 min-vh-75 include-header">
  <div
    class="slider-inner"
    style={`background-image: linear-gradient(to bottom, rgba(0,0,0,.5), rgba(0,0,0,.3)), url('${backgroundImage}'); background-position: 50% 0;`}
  >
    <div class="container">
      <div class="vertical-middle">
        <div class="row mt-6">
          <div class="col-md-7">
            {eyebrow && (
              <div class="before-title text-border-right position-relative text-uppercase ls-3 text-smaller overflow-hidden mb-4 op-04 b-w-50">
                {eyebrow}
              </div>
            )}

            {titleHtml ? (
              <h1 class="display-4 fw-bold" set:html={titleHtml} />
            ) : (
              <h1 class="display-4 fw-bold">{title}</h1>
            )}

            {subtitle && (
              <p class="lead text-white op-08 mt-4 mb-0" style="max-width: 42rem;">
                {subtitle}
              </p>
            )}

            {(primaryCta || secondaryCta) && (
              <div class="d-flex flex-column flex-sm-row gap-3 mt-4">
                {primaryCta && (
                  <a
                    href={primaryCta.href}
                    data-scrollto={primaryCta.isScroll ? primaryCta.href : undefined}
                    data-easing={primaryCta.isScroll ? "easeInOutExpo" : undefined}
                    data-speed={primaryCta.isScroll ? "1250" : undefined}
                    data-offset={primaryCta.isScroll ? "88" : undefined}
                    class="btn py-3 px-5 rounded-1 btn-dark bg-color h-op-09 m-0"
                  >
                    {primaryCta.label}{" "}
                    <span class="material-symbols-outlined align-middle mb-1 ms-1">trending_flat</span>
                  </a>
                )}

                {secondaryCta && (
                  <a href={secondaryCta.href} class="btn py-3 px-5 rounded-1 btn-outline-light h-op-09 m-0">
                    {secondaryCta.label}
                  </a>
                )}
              </div>
            )}

            {note && (
              <small class="d-block mt-3 text-white op-06">{note}</small>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>