---
const { items = [] } = Astro.props;
---
<div class="faq">
  {items.map((it) => (
    <details>
      <summary>{it.q}</summary>
      <p>{it.a}</p>
    </details>
  ))}
</div>

<style>
  details{border:1px solid #ddd;border-radius:12px;padding:10px 12px;margin:10px 0}
  summary{cursor:pointer;font-weight:600}
  p{margin:8px 0 0}
</style>